{% extends 'base.html.twig' %}

{% block title %}Modifier Profil - E-Sportify{% endblock %}

{% block body %}
<section class="profile-hero">
    <div class="profile-hero-inner">
        <div class="profile-kicker">Edit</div>
        <h1 class="profile-title">Modifier le profil</h1>
        <p class="profile-lead">Mettez a jour vos informations personnelles.</p>
    </div>
    <div class="profile-hero-glow"></div>
</section>

<section class="profile-shell">
    <div class="profile-card">
        <div class="profile-section-title">Edition</div>
        {{ form_start(form, {'attr': {'class': 'profile-form', 'novalidate': 'novalidate'}}) }}
            <div class="profile-field">
                <label><i class="fas fa-signature"></i> Nom complet</label>
                {{ form_widget(form.nom, {'attr': {'class': 'profile-input', 'placeholder': 'Votre nom'}}) }}
                <div class="profile-help error">{{ form_errors(form.nom) }}</div>
            </div>

            {% if form.pseudo is defined %}
            <div class="profile-field">
                <label><i class="fas fa-user-tag"></i> Pseudo</label>
                {{ form_widget(form.pseudo, {'attr': {'class': 'profile-input', 'placeholder': 'Votre pseudo'}}) }}
                <div class="profile-help error">{{ form_errors(form.pseudo) }}</div>
            </div>
            {% endif %}

            <div class="profile-field">
                <label><i class="fas fa-lock"></i> Nouveau mot de passe (optionnel)</label>
                {{ form_widget(form.plainPassword, {'attr': {'class': 'profile-input', 'placeholder': 'Laisser vide pour ne pas changer'}}) }}
                <div class="profile-help">Min. 6 caracteres, 1 lettre et 1 chiffre.</div>
                <div class="profile-help error">{{ form_errors(form.plainPassword) }}</div>
            </div>

            <div class="profile-actions">
                <button type="submit" class="profile-btn">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a href="{{ path('app_profile') }}" class="profile-btn ghost">
                    <i class="fas fa-times"></i> Annuler
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
