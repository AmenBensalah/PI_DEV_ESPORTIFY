<!DOCTYPE html>
<html lang="fr" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}E-sportify{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/lucide-static/font/lucide.css">
    <link rel="stylesheet" href="https://unpkg.com/@phosphor-icons/web">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>

<div class="background"></div>

<!-- SIDEBAR -->
<aside class="sidebar" id="sidebar">
    <button id="sidebar-toggle" class="sidebar-toggle" title="Ouvrir / Fermer" aria-label="Ouvrir / Fermer">
        <i class="fa-solid fa-bars"></i>
        <span class="link-text">Menu</span>
    </button>
    <nav class="sidebar-nav">
        <a href="#"
           class="sidebar-link {{ app.request.get('_route') == 'app_home' ? 'active' : '' }}">
            <i class="fa-solid fa-house"></i>
            <span class="link-text">Home</span>
        </a>

        <a href="#"
           class="sidebar-link {{ app.request.attributes.get('_route') starts with 'app_profile' ? 'active' : '' }}">
            <i class="fa-solid fa-user"></i>
            <span class="link-text">Profile</span>
        </a>

        <a href="#"
           class="sidebar-link {{ app.request.attributes.get('_route') starts with 'app_team' ? 'active' : '' }}">
            <i class="fa-solid fa-users"></i>
            <span class="link-text">Teams</span>
        </a>

        <a href="#"
           class="sidebar-link {{ app.request.attributes.get('_route') starts with 'app_tournament' ? 'active' : '' }}">
            <i class="fa-solid fa-trophy"></i>
            <span class="link-text">Tournaments</span>
        </a>

        <a href="#"
           class="sidebar-link {{ app.request.attributes.get('_route') starts with 'app_store' ? 'active' : '' }}">
            <i class="fa-solid fa-store"></i>
            <span class="link-text">Store</span>
        </a>
    </nav>

    <div class="sidebar-footer">
        <button id="theme-toggle" class="theme-toggle-btn" title="Changer le thème" aria-label="Changer le thème">
            <svg id="theme-icon" viewBox="0 0 24 24" class="icon">
                <!-- Lune par défaut (dark) -->
                <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"/>
            </svg>
        </button>
    </div>
</aside>

<!-- MAIN WRAPPER -->
<div class="main-wrapper">

    <!-- TOPBAR -->
    <header class="topbar">
        <div class="topbar-left">
            <img src="{{ asset('images/logo-esportify.png') }}" class="logo" alt="E-sportify">
            <span class="brand">E-SPORTIFY</span>
        </div>

        <div class="topbar-center">
            <input type="text" placeholder="Rechercher joueurs, équipes, tournois..." class="search-input">
        </div>

        <div class="topbar-right">
            <button class="icon-btn" title="Notifications" aria-label="Notifications">
                <svg viewBox="0 0 24 24" class="icon">
                    <path d="M18 8a6 6 0 10-12 0c0 7-3 9-3 9h18s-3-2-3-9" />
                    <path d="M13.73 21a2 2 0 01-3.46 0" />
                </svg>
            </button>

            <button class="icon-btn" title="Messages" aria-label="Messages">
                <svg viewBox="0 0 24 24" class="icon">
                    <path d="M21 15a2 2 0 01-2 2H7l-4 4V5a2 2 0 012-2h14a2 2 0 012 2z" />
                </svg>
            </button>

            <button class="icon-btn" title="Paramètres" aria-label="Paramètres">
                <svg viewBox="0 0 24 24" class="icon">
                    <circle cx="12" cy="12" r="3" />
                    <path d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 01-2.83 2.83l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-4 0v-.09a1.65 1.65 0 00-1-1.51 1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83-2.83l.06-.06a1.65 1.65 0 00.33-1.82 1.65 1.65 0 00-1.51-1H3a2 2 0 010-4h.09a1.65 1.65 0 001.51-1 1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 012.83-2.83l.06.06a1.65 1.65 0 001.82.33 1.65 1.65 0 001-1.51V3a2 2 0 014 0v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 2.83l-.06.06a1.65 1.65 0 00-.33 1.82 1.65 1.65 0 001.51 1H21a2 2 0 010 4h-.09a1.65 1.65 0 00-1.51 1z"/>
                </svg>
            </button>
        </div>

        <div class="topbar-dragon">
    <img src="{{ asset('images/dragon.png') }}" 
         alt="Dragon" class="dragon-bottom-right">
</div>
    </header>

    <!-- CONTENT -->
    <main class="content">
        {% block body %}{% endblock %}
    </main>

</div>

<script src="{{ asset('js/app.js') }}"></script>
<script>
(() => {
    const setup = (root) => {
        const contentInput = root.querySelector('[data-content]');
        const mediaTypeInput = root.querySelector('[data-media-type]');
        const mediaFilenameInput = root.querySelector('[data-media-filename]');
        const mediaFileInput = root.querySelector('[data-media-file]');
        const mediaPreview = root.querySelector('[data-media-preview]');
        const buttons = root.querySelectorAll('[data-media-button]');

        if (!contentInput || !mediaTypeInput || !mediaFilenameInput) {
            return;
        }

        const urlRegex = /(https?:\/\/[^\s]+)/i;
        const setMediaType = (type) => { mediaTypeInput.value = type; };

        const clearMedia = () => {
            if (mediaTypeInput) {
                mediaTypeInput.value = '';
            }
            if (mediaFilenameInput) {
                mediaFilenameInput.value = '';
            }
            if (mediaFileInput) {
                mediaFileInput.value = '';
            }
            if (mediaPreview) {
                mediaPreview.style.display = 'none';
                mediaPreview.innerHTML = '';
            }
        };

        const setPreview = (file) => {
            if (!mediaPreview) {
                return;
            }
            if (!file) {
                mediaPreview.style.display = 'none';
                mediaPreview.innerHTML = '';
                return;
            }
            const mime = file.type || '';
            const url = URL.createObjectURL(file);
            if (mime.startsWith('video/')) {
                mediaPreview.innerHTML = `<video controls src="${url}"></video>`;
            } else if (mime.startsWith('image/')) {
                mediaPreview.innerHTML = `<img src="${url}" alt="aperçu">`;
            } else {
                mediaPreview.innerHTML = '';
            }
            if (mediaPreview.innerHTML) {
                const removeBtn = document.createElement('button');
                removeBtn.type = 'button';
                removeBtn.className = 'media-remove-btn';
                removeBtn.textContent = 'Retirer';
                removeBtn.addEventListener('click', clearMedia);
                mediaPreview.appendChild(removeBtn);
            }
            mediaPreview.style.display = 'block';
        };

        const detectLink = () => {
            if (mediaFileInput && mediaFileInput.files && mediaFileInput.files.length > 0) {
                return;
            }
            const match = contentInput.value.match(urlRegex);
            if (match) {
                setMediaType('link');
                mediaFilenameInput.value = match[1];
            }
        };

        contentInput.addEventListener('input', detectLink);
        detectLink();

        buttons.forEach((btn) => {
            btn.addEventListener('click', () => {
                const type = btn.getAttribute('data-media-button');
                if (type === 'link') {
                    setMediaType('link');
                    detectLink();
                    contentInput.focus();
                    return;
                }
                setMediaType(type);
                if (mediaFileInput) {
                    mediaFileInput.click();
                }
            });
        });

        if (mediaFileInput) {
            mediaFileInput.addEventListener('change', () => {
                if (mediaFileInput.files && mediaFileInput.files.length > 0) {
                    const file = mediaFileInput.files[0];
                    const mime = file.type || '';
                    setMediaType(mime.startsWith('video/') ? 'video' : 'image');
                    mediaFilenameInput.value = '';
                    setPreview(file);
                } else {
                    setPreview(null);
                }
            });
        }
    };

    document.querySelectorAll('[data-composer-front]').forEach(setup);

    const formatNow = () => {
        const now = new Date();
        const pad = (n) => String(n).padStart(2, '0');
        return `${pad(now.getDate())}/${pad(now.getMonth() + 1)}/${now.getFullYear()} ${pad(now.getHours())}:${pad(now.getMinutes())}`;
    };

    const buildPostCard = ({ content, mediaType, mediaUrl, mediaFilename, createdAt }) => {
        const article = document.createElement('article');
        article.className = 'glass-card post-card';

        const header = document.createElement('div');
        header.className = 'post-header';
        header.innerHTML = `
            <div class="avatar">U</div>
            <div class="post-meta">
                <div class="post-author">Vous</div>
                <div class="post-time">${createdAt || formatNow()}</div>
            </div>
        `;
        article.appendChild(header);

        if (content) {
            const contentEl = document.createElement('div');
            contentEl.className = 'post-content';
            contentEl.textContent = content;
            article.appendChild(contentEl);
        }

        const linkLabel = mediaFilename || mediaUrl;
        if (mediaType && (mediaUrl || linkLabel)) {
            const mediaWrap = document.createElement('div');
            mediaWrap.className = 'post-media';
            if (mediaType === 'video') {
                mediaWrap.innerHTML = `<video controls><source src="${mediaUrl}"></video>`;
            } else if (mediaType === 'image') {
                mediaWrap.innerHTML = `<img src="${mediaUrl}" alt="media">`;
            } else if (mediaType === 'link') {
                mediaWrap.innerHTML = `<div class="media-placeholder">${linkLabel || ''}</div>`;
            }
            article.appendChild(mediaWrap);
        }

        const actions = document.createElement('div');
        actions.className = 'post-actions';
        actions.innerHTML = `
            <div class="reaction-row">
                <button class="reaction-pill" type="button"><i class="fa-regular fa-heart"></i> J'aime</button>
                <button class="reaction-pill" type="button"><i class="fa-regular fa-comment"></i> Commenter</button>
                <button class="reaction-pill" type="button"><i class="fa-solid fa-share"></i> Partager</button>
            </div>
            <div class="reaction-row">
                <button class="reaction-pill" type="button"><i class="fa-regular fa-bookmark"></i> Sauvegarder</button>
            </div>
        `;
        article.appendChild(actions);

        const commentBox = document.createElement('div');
        commentBox.className = 'comment-box';
        commentBox.innerHTML = `
            <input class="comment-input" placeholder="Ajouter un commentaire..." />
            <button class="comment-send" type="button">Envoyer</button>
        `;
        article.appendChild(commentBox);

        return article;
    };

    document.querySelectorAll('[data-publish-button]').forEach((btn) => {
        btn.addEventListener('click', async () => {
            const composer = btn.closest('[data-composer-front]');
            const list = document.getElementById('post-list');
            if (!composer || !list) {
                return;
            }

            const postUrl = composer.getAttribute('data-post-url');
            const csrfToken = composer.getAttribute('data-csrf-token') || '';
            const contentInput = composer.querySelector('[data-content]');
            const mediaTypeInput = composer.querySelector('[data-media-type]');
            const mediaFilenameInput = composer.querySelector('[data-media-filename]');
            const mediaFileInput = composer.querySelector('[data-media-file]');
            const mediaPreview = composer.querySelector('[data-media-preview]');

            const content = contentInput ? contentInput.value.trim() : '';
            let mediaType = mediaTypeInput ? mediaTypeInput.value : '';
            let mediaUrl = mediaFilenameInput ? mediaFilenameInput.value : '';

            if (mediaFileInput && mediaFileInput.files && mediaFileInput.files.length > 0) {
                const file = mediaFileInput.files[0];
                mediaType = (file.type || '').startsWith('video/') ? 'video' : 'image';
                mediaUrl = URL.createObjectURL(file);
            }

            if (!content && !mediaUrl) {
                return;
            }

            if (!postUrl) {
                return;
            }

            const payload = new FormData();
            payload.append('_token', csrfToken);
            payload.append('content', content);
            payload.append('mediaType', mediaType || 'text');
            if (mediaFilenameInput && mediaFilenameInput.value) {
                payload.append('mediaFilename', mediaFilenameInput.value);
            }
            if (mediaFileInput && mediaFileInput.files && mediaFileInput.files.length > 0) {
                payload.append('mediaFile', mediaFileInput.files[0]);
            }

            btn.disabled = true;
            try {
                const response = await fetch(postUrl, {
                    method: 'POST',
                    body: payload,
                });
                const data = await response.json().catch(() => ({}));
                if (!response.ok) {
                    console.error(data.error || 'Erreur lors de la publication.');
                    btn.disabled = false;
                    return;
                }

                const card = buildPostCard({
                    content: data.content,
                    mediaType: data.mediaType,
                    mediaUrl: data.mediaUrl,
                    mediaFilename: data.mediaFilename,
                    createdAt: data.createdAt,
                });
                const empty = document.getElementById('post-empty');
                if (empty) {
                    empty.remove();
                }
                list.prepend(card);
            } catch (error) {
                console.error(error);
            } finally {
                btn.disabled = false;
            }

            if (contentInput) {
                contentInput.value = '';
            }
            if (mediaTypeInput) {
                mediaTypeInput.value = '';
            }
            if (mediaFilenameInput) {
                mediaFilenameInput.value = '';
            }
            if (mediaFileInput) {
                mediaFileInput.value = '';
            }
            if (mediaPreview) {
                mediaPreview.style.display = 'none';
                mediaPreview.innerHTML = '';
            }
        });
    });
})();
</script>
</body>
</html>
