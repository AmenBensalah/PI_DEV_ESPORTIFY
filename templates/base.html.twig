        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggle = document.getElementById('chatbot-toggle');
            const chatWindow = document.getElementById('chatbot-window');
            const close = document.getElementById('chatbot-close');
            const input = document.getElementById('chatbot-input');
            const send = document.getElementById('chatbot-send');
            const messages = document.getElementById('chatbot-messages');

            let history = [];

            toggle.onclick = () => {
                chatWindow.style.display = chatWindow.style.display === 'flex' ? 'none' : 'flex';
                if(chatWindow.style.display === 'flex') input.focus();
            };
            close.onclick = () => chatWindow.style.display = 'none';

            const addMessage = (content, role) => {
                const div = document.createElement('div');
                div.className = role === 'bot' ? 'bot-msg' : 'user-msg';
                div.textContent = content;
                messages.appendChild(div);
                messages.scrollTop = messages.scrollHeight;
                if(role !== 'system') history.push({ role, content });
            };

            const processChat = async () => {
                const message = input.value.trim();
                if(!message || input.disabled) return;
                
                input.disabled = true;
                send.disabled = true;
                addMessage(message, 'user');
                input.value = '';

                // Typing indicator (simple)
                const loading = document.createElement('div');
                loading.className = 'bot-msg';
                loading.textContent = '...';
                messages.appendChild(loading);

                try {
                    const response = await fetch('/api/chatbot', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ 
                            message, 
                            history,
                            page: document.title,
                            url: window.location.href,
                            context: "Page : " + document.title
                        })
                    });
                    const data = await response.json();
                    loading.remove();
                    addMessage(data.response, 'bot');
                } catch (e) {
                    loading.textContent = "Désolé, la connexion avec le Nexus est instable. Vérifiez votre réseau ou réessayez dans un instant.";
                } finally {
                    input.disabled = false;
                    send.disabled = false;
                    input.focus();
                }
            };

            send.onclick = processChat;
            input.onkeypress = (e) => { if(e.key === 'Enter') processChat(); };
        });
    </script>

    <script>
        const autoDismissAlerts = () => {
            const alerts = document.querySelectorAll('.alert');
            if (!alerts.length) return;
            setTimeout(() => {
                alerts.forEach((alert) => {
                    alert.style.transition = 'opacity 0.4s ease, transform 0.4s ease';
                    alert.style.opacity = '0';
                    alert.style.transform = 'translateY(-6px)';
                    setTimeout(() => alert.remove(), 450);
                });
            }, 2000);
        };

        const initCartSearch = () => {
            const input = document.getElementById('cart_search');
            if (!input) return;
            const items = Array.from(document.querySelectorAll('.cart-item[data-search]'));
            input.addEventListener('input', () => {
                const q = input.value.trim().toLowerCase();
                items.forEach((item) => {
                    const hay = (item.getAttribute('data-search') || '').toLowerCase();
                    item.style.display = hay.includes(q) ? '' : 'none';
                });
            });
        };

        const initBaseHelpers = () => {
            autoDismissAlerts();
            initCartSearch();
        };

        document.addEventListener('DOMContentLoaded', initBaseHelpers);
        document.addEventListener('turbo:load', initBaseHelpers);
    </script>
