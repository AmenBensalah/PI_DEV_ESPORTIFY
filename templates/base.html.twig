    <style>
        .pro-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 12px 30px rgba(3, 10, 24, 0.2);
            padding: 22px;
            box-sizing: border-box;
            max-width: 100%;
        }

        .pro-grid {
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 20px;
        }

        .pro-input {
            width: 100%;
            border: 1px solid #e6e9ef;
            border-radius: 12px;
            padding: 10px 12px;
            font-size: 14px;
            background: #f7f9fc;
            transition: border-color 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
        }

        .pro-input:focus {
            outline: none;
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.25);
            background: #fff;
        }

        .pro-input::placeholder {
            color: #9aa3af;
            font-size: 12px;
        }

        .pro-label {
            font-size: 13px;
            color: #5b6b7b;
            margin-bottom: 6px;
            display: inline-block;
        }

        .pro-btn {
            border: none;
            border-radius: 999px;
            padding: 10px 18px;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
            text-decoration: none;
            color: inherit;
            min-width: 140px;
            justify-content: center;
        }

        .pro-btn-primary {
            background: linear-gradient(135deg, var(--primary-blue), var(--primary-pink));
            color: #fff;
            box-shadow: 0 10px 20px rgba(247, 37, 133, 0.25), 0 8px 16px rgba(67, 97, 238, 0.25);
        }

        .pro-btn-primary:hover {
            transform: translateY(-1px);
        }

        .pro-btn:hover {
            transform: translateY(-1px);
        }

        .pro-btn:active {
            transform: translateY(0);
        }

        .pro-btn:focus-visible {
            outline: none;
            box-shadow: 0 0 0 4px rgba(45, 108, 223, 0.25);
        }

        .pro-btn-danger {
            background: #e11d48;
            color: #fff;
        }

        .pro-btn-secondary {
            background: #e2e8f0;
            color: #0f172a;
        }

        .pro-link {
            color: var(--primary-blue);
            text-decoration: none;
            font-weight: 600;
        }

        .pro-link:hover {
            text-decoration: underline;
        }

        .cart-page h1 {
            color: #f8fafc;
            margin-bottom: 18px;
        }

        .cart-shell {
            display: grid;
            grid-template-columns: 1.1fr 1fr;
            gap: 22px;
        }

        .cart-shell.single {
            grid-template-columns: 1fr;
            max-width: 760px;
            margin: 0 auto;
            width: 100%;
        }

        .cart-page .pro-card {
            width: 100%;
            background: var(--card-bg);
            border: 1px solid rgba(255,255,255,0.08);
            color: #e5e7eb;
            box-shadow: 0 20px 50px rgba(0,0,0,0.45);
        }

        .form-rows {
            display: grid;
            gap: 14px;
            padding: 0;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        }
        .cart-page .form-rows {
            grid-template-columns: 1fr;
        }

        .form-row {
            padding: 0 12px;
            display: grid;
            grid-template-columns: 1fr;
            gap: 8px;
        }
        .cart-page {
            padding: 40px 0;
        }

        .form-row .pro-label {
            margin: 0;
            font-size: 11px;
            color: rgba(255,255,255,0.6);
            text-transform: uppercase;
            letter-spacing: 0.6px;
        }

        .form-row .pro-input {
            height: 40px;
            border-radius: 10px;
            background: rgba(255,255,255,0.04);
            border: 1px solid rgba(255,255,255,0.12);
            color: #e5e7eb;
        }
        .cart-page .pro-input::placeholder {
            color: rgba(255,255,255,0.35);
        }

        .form-section-title {
            font-size: 12px;
            font-weight: 600;
            letter-spacing: 0.6px;
            text-transform: uppercase;
            color: rgba(255,255,255,0.75);
            margin-bottom: 6px;
        }

        .cart-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #eef1f6;
        }

        .cart-item:last-child {
            border-bottom: none;
        }

        .cart-total {
            margin-top: 16px;
            font-weight: 600;
            color: #0b1320;
        }

        .cart-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-top: 16px;
            align-items: center;
        }

        .cart-actions.stack {
            flex-direction: column;
            align-items: flex-start;
        }

        .cart-actions.space {
            justify-content: space-between;
            width: 100%;
        }

        .cart-actions .pro-link {
            font-weight: 600;
            font-size: 14px;
        }
        .cart-page .form-control {
            background: rgba(255,255,255,0.04);
            border: 1px solid rgba(255,255,255,0.12);
            color: #e5e7eb;
            border-radius: 10px;
            padding: 10px 12px;
        }
        .cart-page .form-control::placeholder {
            color: rgba(255,255,255,0.35);
        }

        .info-list {
            display: grid;
            gap: 10px;
            padding: 0 12px;
        }

        .info-item {
            background: rgba(255,255,255,0.04);
            border: 1px solid rgba(255,255,255,0.12);
            border-radius: 10px;
            padding: 10px 12px;
            color: #e5e7eb;
            font-size: 14px;
        }

        @media (max-width: 900px) {
            .pro-grid {
                grid-template-columns: 1fr;
            }

            .cart-shell {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 600px) {
            .form-row {
                grid-template-columns: 1fr;
                align-items: start;
            }
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
