<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion - E-Sportify</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=Rajdhani:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script defer src="https://cdn.jsdelivr.net/npm/face-api.js@0.22.2/dist/face-api.min.js"></script>
    <style>
        :root {
            --primary-purple: #9d4edd;
            --primary-blue: #4361ee;
            --primary-pink: #f72585;
            --glass-bg: rgba(10, 14, 35, 0.6);
            --glass-border: 1px solid rgba(255, 255, 255, 0.1);
            --glass-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Rajdhani', sans-serif;
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.7)), url("{{ asset('images/gaming1.jpg') }}");
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .login-container {
            background: var(--glass-bg);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: var(--glass-border);
            box-shadow: var(--glass-shadow);
            border-radius: 20px;
            padding: 40px;
            width: 100%;
            max-width: 400px;
            text-align: center;
            animation: slideIn 0.8s ease-out;
            position: relative;
        }

        @keyframes slideIn {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .logo {
            margin-bottom: 20px;
            animation: pulse 2s infinite;
        }

        .logo img {
            height: 45px;
        }

        @keyframes pulse {
            0% { transform: scale(1); filter: drop-shadow(0 0 5px rgba(67, 97, 238, 0.5)); }
            50% { transform: scale(1.05); filter: drop-shadow(0 0 15px rgba(247, 37, 133, 0.5)); }
            100% { transform: scale(1); filter: drop-shadow(0 0 5px rgba(67, 97, 238, 0.5)); }
        }

        h2 {
            color: #fff;
            font-family: 'Orbitron', sans-serif;
            margin-bottom: 30px;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .input-group {
            position: relative;
            margin-bottom: 25px;
            text-align: left;
        }

        .input-group input {
            width: 100%;
            padding: 12px 15px 12px 45px;
            background: rgba(0,0,0,0.3);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 8px;
            color: #fff;
            font-family: 'Rajdhani', sans-serif;
            font-size: 16px;
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

        .input-group input::placeholder {
            color: rgba(255,255,255,0.5);
        }

        .input-group input:focus {
            outline: none;
            border-color: var(--primary-pink);
            box-shadow: 0 0 10px rgba(247, 37, 133, 0.3);
            background: rgba(0,0,0,0.5);
        }

        .input-group i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-blue);
            font-size: 18px;
            pointer-events: none;
            transition: color 0.3s;
        }

        .input-group input:focus + i {
            color: var(--primary-pink);
        }

        .btn-login {
            background: linear-gradient(45deg, var(--primary-blue), var(--primary-pink));
            color: #fff;
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 8px;
            font-family: 'Orbitron', sans-serif;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(247, 37, 133, 0.4);
        }

        .btn-login::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: rgba(255,255,255,0.1);
            transform: rotate(45deg);
            transition: 0.5s;
            opacity: 0;
        }

        .btn-login:hover::after {
            opacity: 1;
            left: 100%;
        }

        .links {
            margin-top: 20px;
            font-size: 14px;
        }

        .links a {
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            margin: 0 10px;
            transition: color 0.3s;
        }

        .links a:hover {
            color: var(--primary-pink);
            text-shadow: 0 0 5px var(--primary-pink);
        }

        .social-login {
            margin-top: 25px;
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 20px;
        }

        .social-login p {
            color: rgba(255,255,255,0.5);
            font-size: 12px;
            margin-bottom: 15px;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .social-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255,255,255,0.05);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            text-decoration: none;
            transition: all 0.3s;
            border: 1px solid rgba(255,255,255,0.1);
        }

        .social-icon:hover {
            background: var(--primary-blue);
            transform: translateY(-3px);
            box-shadow: 0 5px 10px rgba(0,0,0,0.3);
        }

        .error-message {
            background: rgba(255, 0, 0, 0.2);
            color: #ff6b6b;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
            font-size: 14px;
            border: 1px solid rgba(255, 0, 0, 0.3);
        }

        .faceid-block {
            margin-top: 16px;
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 16px;
        }

        .btn-faceid {
            width: 100%;
            border-radius: 8px;
            border: 1px solid rgba(255,255,255,0.2);
            background: rgba(255,255,255,0.08);
            color: #fff;
            padding: 11px;
            font-family: 'Orbitron', sans-serif;
            font-size: 14px;
            font-weight: 600;
            letter-spacing: 0.8px;
            cursor: pointer;
            transition: all 0.25s ease;
        }

        .btn-faceid:hover {
            border-color: rgba(67, 97, 238, 0.8);
            background: rgba(67, 97, 238, 0.25);
        }

        .btn-faceid:disabled {
            opacity: 0.55;
            cursor: not-allowed;
        }

        .faceid-video {
            width: 100%;
            aspect-ratio: 4 / 3;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid rgba(255,255,255,0.12);
            background: #0b0f20;
            margin-top: 10px;
        }

        .faceid-video.hidden {
            display: none;
        }

        .faceid-status {
            min-height: 18px;
            margin-top: 8px;
            color: rgba(255,255,255,0.82);
            font-size: 13px;
        }

        .faceid-status.error {
            color: #ff8a8a;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="logo">
            <!-- Ensure logo3.png exists or use text -->
            <img src="{{ asset('images/logo3.png') }}" alt="E-Sportify Logo">
            <h1 style="font-family: 'Orbitron', sans-serif; font-size: 24px; margin: 10px 0 0 0; background: linear-gradient(45deg, var(--primary-blue), #fff); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">E-SPORTIFY</h1>
        </div>
        
        <h2>Connexion</h2>

        {% for flashError in app.flashes('error') %}
            <div class="error-message">{{ flashError }}</div>
        {% endfor %}

        {% if error %}
            <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post">
            <div class="input-group">
                <input type="email" value="{{ last_username }}" name="email" id="email" placeholder="Email" required autofocus>
                <i class="fas fa-envelope"></i>
            </div>

            <div class="input-group">
                <input type="password" name="password" id="password" placeholder="Mot de passe" required>
                <i class="fas fa-lock"></i>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn-login">Se Connecter</button>
        </form>

        <div class="faceid-block">
            <button type="button" id="faceid-login-btn" class="btn-faceid">Login with Face ID</button>
            <video id="faceid-login-video" class="faceid-video hidden" autoplay playsinline muted></video>
            <div id="faceid-login-status" class="faceid-status"></div>
        </div>

        <div class="links">
            <a href="{{ path('app_register') }}">Créer un compte</a>
            <a href="{{ path('app_forgot_password') }}">Mot de passe oublié ?</a>
        </div>

        <div class="social-login">
            <p>Ou continuer avec</p>
            <div class="social-icons">
                <a href="{{ path('connect_google_start') }}" class="social-icon" title="Continuer avec Google"><i class="fab fa-google"></i></a>
                <a href="{{ path('connect_discord_start') }}" class="social-icon" title="Continuer avec Discord"><i class="fab fa-discord"></i></a>
            </div>
        </div>
    </div>

    <script>
        (() => {
            const MODEL_URI = 'https://justadudewhohacks.github.io/face-api.js/models';
            const FACE_LOGIN_URL = '{{ path('app_login_face_id') }}';
            const FALLBACK_REDIRECT = '{{ path('fil_home') }}';

            const button = document.getElementById('faceid-login-btn');
            const videoElement = document.getElementById('faceid-login-video');
            const statusElement = document.getElementById('faceid-login-status');

            let stream = null;
            let modelsReady = false;
            let cameraReady = false;

            const setStatus = (message, isError = false) => {
                statusElement.textContent = message;
                statusElement.classList.toggle('error', isError);
            };

            const stopCamera = () => {
                if (!stream) {
                    return;
                }

                stream.getTracks().forEach((track) => track.stop());
                stream = null;
                videoElement.srcObject = null;
                videoElement.classList.add('hidden');
                cameraReady = false;
                button.textContent = 'Login with Face ID';
            };

            const ensureModels = async () => {
                if (modelsReady) {
                    return true;
                }

                if (!window.faceapi) {
                    setStatus('Face API library not loaded yet. Please retry.', true);
                    return false;
                }

                try {
                    setStatus('Loading Face ID models...');
                    await Promise.all([
                        window.faceapi.nets.tinyFaceDetector.loadFromUri(MODEL_URI),
                        window.faceapi.nets.faceLandmark68Net.loadFromUri(MODEL_URI),
                        window.faceapi.nets.faceRecognitionNet.loadFromUri(MODEL_URI),
                    ]);
                    modelsReady = true;
                    setStatus('Models loaded.');
                    return true;
                } catch (error) {
                    setStatus('Failed to load Face ID models.', true);
                    return false;
                }
            };

            const openCamera = async () => {
                if (!navigator.mediaDevices || !navigator.mediaDevices.getUserMedia) {
                    setStatus('Camera is not supported on this browser.', true);
                    return false;
                }

                stopCamera();

                try {
                    stream = await navigator.mediaDevices.getUserMedia({
                        video: { facingMode: 'user' },
                        audio: false,
                    });

                    videoElement.srcObject = stream;
                    videoElement.classList.remove('hidden');
                    cameraReady = true;
                    button.textContent = 'Scan & Login';
                    setStatus('Camera ready. Click again to scan your face.');
                    return true;
                } catch (error) {
                    setStatus('Unable to access camera. Check permissions.', true);
                    return false;
                }
            };

            const scanAndLogin = async () => {
                if (!window.faceapi || !cameraReady) {
                    setStatus('Open camera first.', true);
                    return;
                }

                button.disabled = true;
                setStatus('Scanning face...');

                try {
                    const result = await window.faceapi
                        .detectSingleFace(
                            videoElement,
                            new window.faceapi.TinyFaceDetectorOptions({ inputSize: 320, scoreThreshold: 0.5 })
                        )
                        .withFaceLandmarks()
                        .withFaceDescriptor();

                    if (!result || !result.descriptor) {
                        setStatus('Face not detected. Try better lighting and keep your face centered.', true);
                        button.disabled = false;
                        return;
                    }

                    const response = await fetch(FACE_LOGIN_URL, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        credentials: 'same-origin',
                        body: JSON.stringify({ descriptor: Array.from(result.descriptor) }),
                    });

                    let payload = {};
                    try {
                        payload = await response.json();
                    } catch (error) {
                        payload = {};
                    }

                    if (!response.ok || !payload.ok) {
                        setStatus(payload.message || 'Face ID login failed.', true);
                        button.disabled = false;
                        return;
                    }

                    stopCamera();
                    window.location.href = payload.redirect || FALLBACK_REDIRECT;
                } catch (error) {
                    setStatus('Face ID login failed. Please retry.', true);
                    button.disabled = false;
                }
            };

            button.addEventListener('click', async () => {
                const ok = await ensureModels();
                if (!ok) {
                    return;
                }

                if (!cameraReady) {
                    await openCamera();
                    return;
                }

                await scanAndLogin();
            });

            window.addEventListener('beforeunload', stopCamera);
        })();
    </script>
</body>
</html>
