{% extends 'base.html.twig' %}

{% block title %}RAWG Games{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .rawg-wrap {
            max-width: 1180px;
            margin: 0 auto;
            padding: 22px 12px 34px;
        }
        .rawg-hero {
            position: relative;
            border-radius: 18px;
            padding: 24px;
            background: linear-gradient(145deg, rgba(7, 23, 43, 0.88), rgba(25, 54, 84, 0.82));
            border: 1px solid rgba(92, 160, 232, 0.22);
            box-shadow: 0 16px 44px rgba(0, 0, 0, 0.35);
            overflow: hidden;
            margin-bottom: 16px;
        }
        .rawg-hero:after {
            content: "";
            position: absolute;
            right: -120px;
            top: -80px;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(52, 226, 255, 0.38) 0%, rgba(52, 226, 255, 0) 70%);
            pointer-events: none;
        }
        .rawg-kicker {
            font-size: 12px;
            letter-spacing: 0.2em;
            text-transform: uppercase;
            color: rgba(198, 232, 255, 0.84);
            margin-bottom: 6px;
        }
        .rawg-title {
            margin: 0;
            font-family: 'Orbitron', sans-serif;
            font-size: clamp(24px, 3vw, 34px);
            color: #eaf6ff;
        }
        .rawg-lead {
            margin: 8px 0 0;
            color: rgba(211, 233, 255, 0.86);
        }
        .rawg-search {
            margin-top: 16px;
            display: flex;
            gap: 10px;
            align-items: center;
        }
        .rawg-input {
            flex: 1;
            min-width: 0;
            border-radius: 12px;
            border: 1px solid rgba(123, 190, 255, 0.36);
            background: rgba(4, 18, 36, 0.72);
            color: #e6f6ff;
            padding: 12px 14px;
            outline: none;
            font-size: 15px;
        }
        .rawg-input:focus {
            border-color: rgba(62, 203, 255, 0.8);
            box-shadow: 0 0 0 2px rgba(62, 203, 255, 0.22);
        }
        .rawg-btn {
            border: 0;
            border-radius: 12px;
            background: linear-gradient(135deg, #00c2ff, #0089ff);
            color: #fff;
            padding: 11px 15px;
            cursor: pointer;
            font-weight: 600;
        }
        .rawg-status {
            margin: 14px 2px 2px;
            color: rgba(205, 230, 252, 0.9);
            font-size: 14px;
        }
        .rawg-grid {
            margin-top: 14px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 14px;
        }
        .rawg-card {
            border-radius: 14px;
            background: rgba(8, 22, 39, 0.84);
            border: 1px solid rgba(120, 180, 244, 0.22);
            overflow: hidden;
            transition: transform .18s ease, border-color .18s ease;
        }
        .rawg-card:hover {
            transform: translateY(-3px);
            border-color: rgba(79, 198, 255, 0.5);
        }
        .rawg-cover {
            width: 100%;
            height: 128px;
            object-fit: cover;
            display: block;
            background: #0b1a29;
        }
        .rawg-content {
            padding: 11px 12px 12px;
        }
        .rawg-name {
            margin: 0 0 8px;
            color: #ebf7ff;
            font-size: 15px;
            line-height: 1.3;
        }
        .rawg-meta {
            margin: 0;
            font-size: 13px;
            color: rgba(198, 226, 250, 0.85);
        }
        .rawg-link {
            display: inline-flex;
            margin-top: 9px;
            color: #51d6ff;
            text-decoration: none;
            font-weight: 600;
        }
        .rawg-empty {
            margin-top: 14px;
            border-radius: 12px;
            border: 1px dashed rgba(156, 200, 236, 0.38);
            color: rgba(213, 233, 249, 0.9);
            padding: 20px;
            text-align: center;
        }
        @media (max-width: 700px) {
            .rawg-search {
                flex-direction: column;
                align-items: stretch;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <section class="rawg-wrap">
        <div class="rawg-hero">
            <div class="rawg-kicker">Game API</div>
            <h1 class="rawg-title">RAWG Game Browser</h1>
            <p class="rawg-lead">Recherche des jeux et affiche les résultats avec visuels.</p>
            <form class="rawg-search" id="rawg-search-form">
                <input
                    id="rawg-query"
                    class="rawg-input"
                    type="text"
                    value="{{ initialQuery }}"
                    placeholder="Valorant, Counter-Strike, Fifa..."
                >
                <button type="submit" class="rawg-btn">Rechercher</button>
            </form>
        </div>
        <div id="rawg-status" class="rawg-status">Chargement...</div>
        <div id="rawg-grid" class="rawg-grid"></div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (() => {
            const form = document.getElementById('rawg-search-form');
            const queryInput = document.getElementById('rawg-query');
            const status = document.getElementById('rawg-status');
            const grid = document.getElementById('rawg-grid');

            const safeText = (value) => String(value ?? '')
                .replaceAll('&', '&amp;')
                .replaceAll('<', '&lt;')
                .replaceAll('>', '&gt;')
                .replaceAll('"', '&quot;')
                .replaceAll("'", '&#39;');

            const renderCards = (games) => {
                if (!Array.isArray(games) || games.length === 0) {
                    grid.innerHTML = '<div class="rawg-empty">Aucun jeu trouvé pour cette recherche.</div>';
                    return;
                }

                grid.innerHTML = games.map((game) => {
                    const name = safeText(game.name || 'Game');
                    const rating = game.rating ? Number(game.rating).toFixed(1) : '-';
                    const released = safeText(game.released || 'N/A');
                    const image = game.backgroundImage
                        ? `<img class="rawg-cover" src="${safeText(game.backgroundImage)}" alt="${name}">`
                        : '<div class="rawg-cover"></div>';
                    const link = game.rawgUrl
                        ? `<a class="rawg-link" href="${safeText(game.rawgUrl)}" target="_blank" rel="noopener noreferrer">Voir sur RAWG</a>`
                        : '';

                    return `
                        <article class="rawg-card">
                            ${image}
                            <div class="rawg-content">
                                <h3 class="rawg-name">${name}</h3>
                                <p class="rawg-meta">Rating: ${rating}</p>
                                <p class="rawg-meta">Sortie: ${released}</p>
                                ${link}
                            </div>
                        </article>
                    `;
                }).join('');
            };

            const runSearch = async () => {
                const query = (queryInput.value || '').trim();
                status.textContent = 'Chargement...';
                grid.innerHTML = '';

                const params = new URLSearchParams();
                if (query) {
                    params.set('q', query);
                }
                params.set('page_size', '18');

                try {
                    const response = await fetch(`{{ path('app_api_rawg_games') }}?${params.toString()}`, {
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    });
                    const data = await response.json();

                    if (!response.ok) {
                        status.textContent = data.error || 'Erreur API RAWG.';
                        grid.innerHTML = '<div class="rawg-empty">Impossible de charger les jeux.</div>';
                        return;
                    }

                    const count = Number(data.count || 0);
                    status.textContent = count > 0
                        ? `${count} jeu(x) trouvé(s).`
                        : 'Aucun résultat.';
                    renderCards(data.games || []);
                } catch (error) {
                    status.textContent = 'Erreur réseau.';
                    grid.innerHTML = '<div class="rawg-empty">Requête impossible pour le moment.</div>';
                }
            };

            form.addEventListener('submit', (event) => {
                event.preventDefault();
                runSearch();
            });

            runSearch();
        })();
    </script>
{% endblock %}
