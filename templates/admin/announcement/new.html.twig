{% extends 'admin/base.html.twig' %}

{% block title %}Nouvelle annonce - Admin{% endblock %}
{% block page_title %}Nouvelle annonce{% endblock %}

{% block body %}
<div class="admin-form-wrapper animate__animated animate__fadeInUp">
    <div class="admin-form-card">
        <div class="admin-form-header">
            <div class="admin-form-icon">
                <i class="fas fa-bullhorn"></i>
            </div>
            <div>
                <h2 class="admin-form-title">Ajouter une Annonce</h2>
                <p class="admin-form-subtitle">Rédigez une annonce pour informer la communauté.</p>
            </div>
        </div>

        {{ form_start(form, {attr: {class: 'admin-form', 'data-validate-announcement-form': ''}}) }}
            <div class="admin-form-error">{{ form_errors(form) }}</div>

            <div class="admin-form-grid">
                <div>
                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-tag"></i> Titre
                        </label>
                        {{ form_widget(form.title, {'attr': {'class': 'admin-form-input', 'placeholder': "Titre de l'annonce"}}) }}
                        <div class="admin-form-error">{{ form_errors(form.title) }}</div>
                    </div>

                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-hashtag"></i> Tag
                        </label>
                        {{ form_widget(form.tag, {'attr': {'class': 'admin-form-input', 'placeholder': 'Ex: Promo, Update'}}) }}
                        <div class="admin-form-error">{{ form_errors(form.tag) }}</div>
                    </div>

                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-link"></i> Lien
                        </label>
                        {{ form_widget(form.link, {'attr': {'class': 'admin-form-input', 'placeholder': 'https://...'}}) }}
                        <div class="admin-form-error">{{ form_errors(form.link) }}</div>
                    </div>
                </div>

                <div>
                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-layer-group"></i> Type média
                        </label>
                        {{ form_widget(form.mediaType, {'attr': {'class': 'admin-form-select'}}) }}
                        <div class="admin-form-error">{{ form_errors(form.mediaType) }}</div>
                    </div>

                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-globe"></i> Média (URL)
                        </label>
                        {{ form_widget(form.mediaFilename, {'attr': {'class': 'admin-form-input', 'placeholder': 'Lien image, vidéo...'}}) }}
                        <div class="admin-form-error">{{ form_errors(form.mediaFilename) }}</div>
                    </div>

                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-cloud-upload-alt"></i> Fichier média
                        </label>
                        <div class="admin-upload-box" data-upload>
                            <div class="admin-upload-preview" data-preview></div>
                            <div class="admin-upload-placeholder" data-placeholder>
                                <i class="fas fa-cloud-upload-alt"></i>
                                Cliquez ou glissez une image ici
                            </div>
                            {{ form_widget(form.mediaFile, {'attr': {'class': 'admin-upload-input', 'data-upload-input': '', 'accept': 'image/*,video/*'}}) }}
                        </div>
                        <div class="admin-form-error">{{ form_errors(form.mediaFile) }}</div>
                    </div>
                </div>
            </div>

            <div class="admin-form-group">
                <label class="admin-form-label">
                    <i class="fas fa-align-left"></i> Description
                </label>
                {{ form_widget(form.content, {'attr': {'class': 'admin-form-textarea', 'rows': 5, 'placeholder': 'Écrire une annonce...'}}) }}
                <div class="admin-form-error">{{ form_errors(form.content) }}</div>
            </div>

            <div class="admin-form-actions">
                <a href="{{ path('fil_admin_announcement_index') }}" class="admin-form-cancel">
                    <i class="fas fa-arrow-left"></i> Annuler
                </a>
                <button type="submit" class="admin-form-submit">
                    <i class="fas fa-save"></i> Ajouter
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
