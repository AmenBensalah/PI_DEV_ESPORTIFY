{% extends 'admin/base.html.twig' %}

{% block admin_body %}
<div class="admin-page-header">
    <div class="admin-page-title">Nouvelle annonce</div>
    <a class="admin-link-btn" href="{{ path('admin_announcement_index') }}">Retour</a>
</div>

<div class="admin-card">
    {{ form_start(form, {attr: {class: 'admin-form'}}) }}
        {{ form_row(form.title) }}
        {{ form_row(form.tag) }}
        {{ form_row(form.content) }}
        {{ form_row(form.link) }}
        <button class="admin-btn" type="submit">Enregistrer</button>
    {{ form_end(form) }}
</div>
{% endblock %}
