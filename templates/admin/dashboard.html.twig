{% extends 'admin/layout.html.twig' %}

{% block title %}Dashboard - Admin Panel{% endblock %}
{% block page_title %}Vue d'ensemble{% endblock %}

{% block body %}
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 30px; margin-bottom: 40px;">
        <div class="stat-card card-gradient-purple">
            <div style="margin-bottom: 10px; color: rgba(255,255,255,0.8); font-size: 14px;">Commandes</div>
            <div style="font-size: 42px; font-weight: 700; margin-bottom: 5px;">{{ orderCount }}</div>
            <div style="font-size: 13px; color: rgba(255,255,255,0.7);">
                <i class="fas fa-arrow-up"></i> Total en base
            </div>
        </div>

        <div class="stat-card card-gradient-blue">
            <div style="margin-bottom: 10px; color: rgba(255,255,255,0.8); font-size: 14px;">Produits</div>
            <div style="font-size: 42px; font-weight: 700; margin-bottom: 5px;">{{ productCount }}</div>
            <div style="font-size: 13px; color: rgba(255,255,255,0.7);">
                <i class="fas fa-box"></i> Disponibles
            </div>
        </div>

        <div class="stat-card">
            <div style="display: flex; justify-content: space-between; align-items: start;">
                <div>
                    <div style="margin-bottom: 10px; color: var(--text-muted); font-size: 14px;">Paiements</div>
                    <div style="font-size: 32px; font-weight: 700; color: #fff; margin-bottom: 5px;">{{ paymentCount }}</div>
                    <div style="font-size: 13px; color: var(--primary-pink);">Valides</div>
                </div>
                <div style="width: 50px; height: 50px; border-radius: 12px; background: rgba(247, 37, 133, 0.1); display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-credit-card" style="color: var(--primary-pink); font-size: 24px;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <h3 style="font-family: 'Orbitron', sans-serif; font-size: 18px; margin-bottom: 20px;">Activite Recente</h3>
        <ul style="list-style: none; padding: 0; margin: 0;">
            <li style="display: flex; align-items: center; padding: 15px 0; border-bottom: 1px solid rgba(255,255,255,0.05);">
                <div style="width: 35px; height: 35px; border-radius: 50%; background: var(--primary-blue); display: flex; align-items: center; justify-content: center; margin-right: 15px;">
                    <i class="fas fa-plus" style="font-size: 14px;"></i>
                </div>
                <div style="flex: 1;">
                    <span style="font-weight: 600;">Nouveau produit ajoute</span>
                    <div style="color: var(--text-secondary); font-size: 13px;">Dernieres mises a jour du catalogue</div>
                </div>
                <div style="color: var(--text-secondary); font-size: 13px;">Aujourd'hui</div>
            </li>
            <li style="display: flex; align-items: center; padding: 15px 0;">
                <div style="width: 35px; height: 35px; border-radius: 50%; background: var(--primary-pink); display: flex; align-items: center; justify-content: center; margin-right: 15px;">
                    <i class="fas fa-receipt" style="font-size: 14px;"></i>
                </div>
                <div style="flex: 1;">
                    <span style="font-weight: 600;">Nouvelle commande</span>
                    <div style="color: var(--text-secondary); font-size: 13px;">Dernieres commandes en attente</div>
                </div>
                <div style="color: var(--text-secondary); font-size: 13px;">Aujourd'hui</div>
            </li>
        </ul>
    </div>
{% endblock %}
