{% extends 'admin/base.html.twig' %}

{% block admin_body %}
<div class="admin-page-title">Backoffice</div>

<div class="admin-grid">
    <div class="admin-card">
        <div class="admin-card-title">Publications</div>
        <div class="admin-metric">{{ postCount|default(0) }}</div>
        <a class="admin-btn" href="{{ path('fil_admin_post_index') }}">Gerer les publications</a>
    </div>

    <div class="admin-card">
        <div class="admin-card-title">Annonces</div>
        <div class="admin-metric">{{ announcementCount|default(0) }}</div>
        <a class="admin-btn" href="{{ path('fil_admin_announcement_index') }}">Gerer les annonces</a>
    </div>
</div>
{% endblock %}
