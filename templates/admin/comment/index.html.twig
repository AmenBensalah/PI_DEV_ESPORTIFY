{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Commentaires - Admin{% endblock %}
{% block page_title %}Gestion des Commentaires{% endblock %}

{% block body %}
<section class="admin-tournament-hero">
    <div class="admin-tournament-hero-inner">
        <div class="admin-tournament-kicker">Fil d'actualité</div>
        <h2 class="admin-tournament-title">Gestion des Commentaires</h2>
        <p class="admin-tournament-lead">Modérez et suivez les commentaires du fil d'actualité.</p>
        <div class="admin-tournament-hero-actions">
            <a href="{{ path('fil_admin_comment_index') }}" class="admin-tournament-btn ghost">
                <i class="fas fa-rotate"></i> Rafraîchir
            </a>
        </div>
    </div>
    <div class="admin-tournament-hero-glow"></div>
</section>

<section class="admin-tournament-shell">
    <div class="admin-tournament-tabs">
        <a href="{{ path('fil_admin_post_index') }}" class="tab">Publications</a>
        <a href="{{ path('fil_admin_announcement_index') }}" class="tab">Annonces</a>
        <a href="{{ path('fil_admin_comment_index') }}" class="tab active">Commentaires</a>
        <a href="{{ path('fil_admin_intelligence_index') }}" class="tab">Centre IA</a>
    </div>

    <div class="admin-tournament-panel">
        <div class="admin-tournament-panel-title">
            <i class="fas fa-search"></i>
            Recherche avancée
        </div>
        <form class="admin-tournament-form" data-filter-form>
            <div class="field">
                <label>Contenu / Auteur</label>
                <input type="text" name="q" placeholder="Rechercher..." value="{{ filters.q|default('') }}">
            </div>
            <div class="field">
                <label>Date (du)</label>
                <input type="date" name="date_from" value="{{ filters.date_from|default('') }}">
            </div>
            <div class="field">
                <label>Date (au)</label>
                <input type="date" name="date_to" value="{{ filters.date_to|default('') }}">
            </div>
            <div class="field">
                <label>Par page</label>
                <select name="per_page">
                    {% set selectedPerPage = filters.per_page|default(10) %}
                    <option value="10" {% if selectedPerPage == 10 %}selected{% endif %}>10</option>
                    <option value="25" {% if selectedPerPage == 25 %}selected{% endif %}>25</option>
                    <option value="50" {% if selectedPerPage == 50 %}selected{% endif %}>50</option>
                    <option value="100" {% if selectedPerPage == 100 %}selected{% endif %}>100</option>
                </select>
            </div>
            <input type="hidden" name="sort" value="{{ filters.sort|default('date') }}">
            <input type="hidden" name="direction" value="{{ filters.direction|default('DESC') }}">
            <input type="hidden" name="page" value="{{ app.request.query.get('page', 1) }}">
            <div class="admin-tournament-actions">
                <button type="submit" class="admin-tournament-btn">
                    <i class="fas fa-search"></i> Rechercher
                </button>
                <button type="reset" class="admin-tournament-btn ghost">
                    <i class="fas fa-rotate"></i> Réinitialiser
                </button>
            </div>
        </form>

        <div class="admin-tournament-sort">
            <span>Trier :</span>
            <a href="#" data-sort="date" data-direction="DESC">Date ↓</a>
            <a href="#" data-sort="date" data-direction="ASC">Date ↑</a>
            <a href="#" data-sort="author" data-direction="ASC">Auteur A→Z</a>
            <a href="#" data-sort="author" data-direction="DESC">Auteur Z→A</a>
        </div>
    </div>

    <div data-results>
        {% include 'admin/comment/_results.html.twig' with {commentaires: commentaires, analysesByComment: analysesByComment|default({})} %}
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.querySelector('[data-filter-form]');
        const sortLinks = document.querySelectorAll('.admin-tournament-sort a[data-sort]');
        const results = document.querySelector('[data-results]');
        const sortInput = form ? form.querySelector('input[name="sort"]') : null;
        const directionInput = form ? form.querySelector('input[name="direction"]') : null;
        const pageInput = form ? form.querySelector('input[name="page"]') : null;

        let debounceTimer = null;

        const fetchResults = async () => {
            if (!form || !results) return;

            const params = new URLSearchParams(new FormData(form));
            const url = `${window.location.pathname}?${params.toString()}`;

            try {
                const response = await fetch(url, {
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                });
                if (!response.ok) return;
                results.innerHTML = await response.text();
                window.history.replaceState({}, '', url);
            } catch (e) {
                // Keep current list on fetch error.
            }
        };

        const triggerDebouncedFetch = () => {
            if (debounceTimer) {
                clearTimeout(debounceTimer);
            }
            debounceTimer = setTimeout(fetchResults, 250);
        };

        if (form) {
            form.addEventListener('submit', (event) => {
                event.preventDefault();
                fetchResults();
            });
            form.addEventListener('reset', () => {
                if (sortInput) sortInput.value = 'date';
                if (directionInput) directionInput.value = 'DESC';
                if (pageInput) pageInput.value = '1';
                setTimeout(fetchResults, 0);
            });
            form.querySelectorAll('input[type="text"], input[type="date"], select').forEach((input) => {
                input.addEventListener('input', () => {
                    if (pageInput) pageInput.value = '1';
                    triggerDebouncedFetch();
                });
                input.addEventListener('change', () => {
                    if (pageInput) pageInput.value = '1';
                    triggerDebouncedFetch();
                });
            });
        }

        sortLinks.forEach(link => {
            link.addEventListener('click', (event) => {
                event.preventDefault();
                if (sortInput && directionInput) {
                    sortInput.value = link.dataset.sort || 'date';
                    directionInput.value = link.dataset.direction || 'DESC';
                }
                if (pageInput) pageInput.value = '1';
                fetchResults();
            });
        });

        results?.addEventListener('click', async (event) => {
            const target = event.target instanceof Element ? event.target.closest('.admin-pagination a[href]') : null;
            if (!target) return;
            event.preventDefault();

            try {
                const response = await fetch(target.href, {
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                });
                if (!response.ok) return;
                results.innerHTML = await response.text();
                const url = new URL(target.href);
                if (pageInput) {
                    pageInput.value = url.searchParams.get('page') || '1';
                }
                window.history.replaceState({}, '', url.toString());
            } catch (e) {
                // Keep current list on fetch error.
            }
        });
    });
</script>
{% endblock %}
