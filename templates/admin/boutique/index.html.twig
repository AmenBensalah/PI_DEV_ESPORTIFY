{% extends 'admin/base.html.twig' %}

{% block title %}Boutique - Admin{% endblock %}
{% block page_title %}Gestion Boutique{% endblock %}

{% block body %}
    <!-- Tabs -->
    <div style="margin-bottom: 30px; border-bottom: 1px solid rgba(255,255,255,0.1);">
        <button style="background: transparent; border: none; padding: 10px 20px; color: var(--primary-blue); border-bottom: 2px solid var(--primary-blue); font-family: 'Rajdhani', sans-serif; font-weight: 600; font-size: 16px;">Produits</button>
        <button style="background: transparent; border: none; padding: 10px 20px; color: var(--text-secondary); font-family: 'Rajdhani', sans-serif; font-weight: 600; font-size: 16px;">Commandes</button>
    </div>

    <!-- Products Grid -->
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px;">
        
        <!-- Add New Card -->
        <div style="border: 2px dashed rgba(255,255,255,0.1); border-radius: 12px; display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 250px; cursor: pointer; transition: all 0.3s;">
            <div style="width: 60px; height: 60px; border-radius: 50%; background: linear-gradient(135deg, var(--primary-blue), #2a5298); display: flex; align-items: center; justify-content: center; margin-bottom: 15px; box-shadow: 0 5px 15px rgba(0, 217, 255, 0.3);">
                <i class="fas fa-plus" style="font-size: 24px;"></i>
            </div>
            <span style="font-weight: 600; color: var(--text-secondary);">Ajouter un Produit</span>
        </div>

        <!-- Product 1 -->
        <div class="stat-card" style="padding: 0; overflow: hidden;">
            <div style="height: 140px; background: linear-gradient(45deg, #1cb5e0 0%, #000851 100%); display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-tshirt" style="font-size: 60px; color: rgba(255,255,255,0.2);"></i>
            </div>
            <div style="padding: 20px;">
                <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                    <span style="font-weight: 700; font-size: 16px;">Maillot Officiel 2026</span>
                    <span style="color: var(--success-color); font-weight: 600;">59.99 €</span>
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                    <span style="font-size: 13px; color: var(--text-secondary);">Stock: 45</span>
                    <span class="badge badge-success">En Ligne</span>
                </div>
                <div style="display: flex; gap: 10px;">
                    <button class="btn-gradient" style="flex: 1; padding: 8px; font-size: 13px;">Éditer</button>
                    <button style="background: rgba(255, 0, 110, 0.1); border: 1px solid rgba(255, 0, 110, 0.3); color: var(--primary-pink); border-radius: 6px; padding: 0 12px;">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Product 2 -->
        <div class="stat-card" style="padding: 0; overflow: hidden;">
            <div style="height: 140px; background: linear-gradient(to top, #30cfd0 0%, #330867 100%); display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-mouse" style="font-size: 60px; color: rgba(255,255,255,0.2);"></i>
            </div>
            <div style="padding: 20px;">
                <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                    <span style="font-weight: 700; font-size: 16px;">Souris Pro Gaming</span>
                    <span style="color: var(--success-color); font-weight: 600;">89.99 €</span>
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                    <span style="font-size: 13px; color: var(--text-secondary);">Stock: 12</span>
                    <span class="badge badge-warning">Faible Stock</span>
                </div>
                <div style="display: flex; gap: 10px;">
                    <button class="btn-gradient" style="flex: 1; padding: 8px; font-size: 13px;">Éditer</button>
                    <button style="background: rgba(255, 0, 110, 0.1); border: 1px solid rgba(255, 0, 110, 0.3); color: var(--primary-pink); border-radius: 6px; padding: 0 12px;">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
