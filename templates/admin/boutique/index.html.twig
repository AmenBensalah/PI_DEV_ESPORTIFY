{% extends 'admin/base.html.twig' %}

{% block title %}Gestion Boutique{% endblock %}
{% block page_title %}Dashboard Boutique{% endblock %}

{% block stylesheets %}
<style>
    /* Global Styles */
    :root {
        --neon-blue: #4361ee;
        --neon-purple: #7209b7;
        --neon-pink: #f72585;
        --neon-green: #4cc9f0;
        --glass-bg: rgba(255, 255, 255, 0.05);
        --glass-border: rgba(255, 255, 255, 0.1);
    }

    /* Dashboard Grid */
    .dashboard-grid {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 25px;
        align-items: start;
    }

    /* Stats Section (Top) */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card-3d {
        background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.02));
        border: 1px solid var(--glass-border);
        border-radius: 15px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
        transition: transform 0.3s;
    }
    .stat-card-3d:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        border-color: var(--neon-blue);
    }
    .stat-icon {
        position: absolute;
        top: -10px;
        right: -10px;
        font-size: 80px;
        opacity: 0.1;
        transform: rotate(15deg);
    }
    .stat-value {
        font-size: 32px;
        font-weight: 800;
        margin-top: 10px;
        background: linear-gradient(90deg, #fff, var(--neon-blue));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .stat-label {
        color: var(--text-muted);
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Categories Panel (Left) */
    .categories-panel {
        background: var(--bg-panel);
        border-radius: 20px;
        border: 1px solid var(--glass-border);
        padding: 20px;
        height: fit-content;
        position: sticky;
        top: 20px;
    }
    .panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        border-bottom: 1px solid var(--glass-border);
        padding-bottom: 10px;
    }
    .category-list {
        display: flex;
        flex-direction: column;
        gap: 10px;
        max-height: 600px; /* limits height */
        overflow-y: auto;
    }
    .category-item {
        background: var(--glass-bg);
        padding: 12px 15px;
        border-radius: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: 0.2s;
        text-decoration: none;
        color: #fff;
        border: 1px solid transparent;
    }
    .category-item:hover {
        background: rgba(67, 97, 238, 0.1);
        border-color: var(--neon-blue);
    }
    .category-actions {
        display: flex;
        gap: 5px;
        opacity: 0;
        transition: 0.2s;
    }
    .category-item:hover .category-actions {
        opacity: 1;
    }
    .btn-icon {
        background: rgba(255,255,255,0.1);
        border: none;
        border-radius: 5px;
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        cursor: pointer;
        transition: 0.2s;
    }
    .btn-icon:hover { background: var(--neon-blue); }
    .btn-icon.danger:hover { background: var(--neon-pink); }

    /* Products Grid (Right) */
    .products-panel {
        background: var(--bg-panel); /* Optional background, usually transparent works */
        border-radius: 20px;
        /* border: 1px solid var(--glass-border); */
        /* padding: 20px; */
    }
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); /* Slightly better responsive */
        gap: 20px;
    }
    .product-card-3d {
        background: #15182b; /* Dark card */
        border-radius: 15px;
        border: 1px solid var(--glass-border);
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        position: relative;
    }
    .product-card-3d:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 15px 30px rgba(0,0,0,0.4);
        border-color: var(--neon-purple);
        z-index: 2;
    }
    .prod-img-container {
        height: 180px;
        overflow: hidden;
        position: relative;
    }
    .prod-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }
    .product-card-3d:hover .prod-img {
        transform: scale(1.1);
    }
    .prod-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: bold;
        backdrop-filter: blur(5px);
    }
    .badge-stock { background: rgba(0, 184, 148, 0.8); color: white; }
    .badge-low { background: rgba(247, 37, 133, 0.8); color: white; }

    .prod-details {
        padding: 15px;
    }
    .prod-title {
        font-weight: 700;
        font-size: 16px;
        margin-bottom: 5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .prod-cat {
        font-size: 12px;
        color: var(--text-muted);
        text-transform: uppercase;
        margin-bottom: 10px;
    }
    .prod-price {
        font-size: 18px;
        font-weight: 800;
        color: var(--neon-green);
        margin-bottom: 15px;
    }
    .prod-actions {
        display: flex;
        gap: 10px;
    }
    .btn-3d {
        flex: 1;
        padding: 8px;
        text-align: center;
        border-radius: 8px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 600;
        transition: 0.2s;
    }
    .btn-edit {
        background: rgba(67, 97, 238, 0.15);
        color: var(--neon-blue);
        border: 1px solid rgba(67, 97, 238, 0.3);
    }
    .btn-edit:hover { background: var(--neon-blue); color: white; }

    /* Add Wrapper */
    .add-wrapper {
        border: 2px dashed var(--glass-border);
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        min-height: 380px; /* match card height roughly */
        color: var(--text-muted);
        text-decoration: none;
        transition: 0.3s;
        background: rgba(255,255,255,0.01);
    }
    .add-wrapper:hover {
        border-color: var(--neon-blue);
        background: rgba(67, 97, 238, 0.05);
        color: var(--neon-blue);
    }

    /* Responsive */
    @media (max-width: 900px) {
        .dashboard-grid { grid-template-columns: 1fr; }
        .categories-panel { position: relative; top: 0; margin-bottom: 20px; }
    }
</style>
{% endblock %}

{% block body %}

<!-- 1. Stats Row -->
<div class="stats-container animate__animated animate__fadeInDown">
    <div class="stat-card-3d">
        <i class="fas fa-box stat-icon"></i>
        <div class="stat-label">Total Produits</div>
        <div class="stat-value">{{ total_products }}</div>
    </div>
    <div class="stat-card-3d">
        <i class="fas fa-tags stat-icon"></i>
        <div class="stat-label">Catégories</div>
        <div class="stat-value">{{ total_categories }}</div>
    </div>
    <div class="stat-card-3d">
        <i class="fas fa-cubes stat-icon"></i>
        <div class="stat-label">Total Stock</div>
        <div class="stat-value">{{ total_stock }}</div>
    </div>
    <div class="stat-card-3d">
        <i class="fas fa-coins stat-icon"></i>
        <div class="stat-label">Valeur Totale</div>
        <div class="stat-value">{{ total_value|number_format(2) }} €</div>
    </div>
</div>

<div class="dashboard-grid">
    
    <!-- 2. Categories Panel (Left) -->
    <div class="categories-panel animate__animated animate__fadeInLeft">
        <div class="panel-header">
            <h3 style="margin:0; font-size:18px;"><i class="fas fa-tags"></i> Catégories</h3>
            <a href="{{ path('admin_boutique_categorie_new') }}" class="btn-icon" title="Ajouter Catégorie">
                <i class="fas fa-plus"></i>
            </a>
        </div>
        
        <div class="category-list">
            {% for c in categories %}
                <div class="category-item">
                    <span>{{ c.nom }}</span>
                    <div class="category-actions">
                        <a href="{{ path('admin_boutique_categorie_edit', {id: c.id}) }}" class="btn-icon">
                            <i class="fas fa-pen" style="font-size:12px;"></i>
                        </a>
                        <form method="post" action="{{ path('admin_boutique_categorie_delete', {id: c.id}) }}" onsubmit="return confirm('Confirmer suppression ?');" style="display:inline;">
                             <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ c.id) }}">
                             <button type="submit" class="btn-icon danger"><i class="fas fa-trash" style="font-size:12px;"></i></button>
                        </form>
                    </div>
                </div>
            {% else %}
                <div style="text-align:center; padding:20px; color:var(--text-muted);">
                    Aucune catégorie
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- 3. Products Panel (Right) -->
    <div class="products-panel">
        <div class="panel-header" style="margin-bottom:20px;">
            <h3 style="margin:0; font-size:18px;"><i class="fas fa-boxes"></i> Produits</h3>
            
            <!-- Quick Filter could go here -->
            <form action="{{ path('admin_boutique_produit_index') }}" method="get" style="margin-left:auto; display:flex; gap:10px;">
                <input type="text" name="q" placeholder="Rechercher..." style="background:rgba(255,255,255,0.05); border:1px solid rgba(255,255,255,0.1); border-radius:8px; padding:8px; color:white; outline:none;">
            </form>
        </div>

        <div class="products-grid animate__animated animate__fadeInUp">
            
            <!-- Quick Add Card -->
            <a href="{{ path('admin_boutique_produit_new') }}" class="add-wrapper">
                <i class="fas fa-plus-circle" style="font-size:50px; margin-bottom:15px;"></i>
                <span style="font-weight:600;">Nouveau Produit</span>
            </a>

            {% for p in produits %}
                <div class="product-card-3d">
                    <div class="prod-img-container">
                        {% if p.image %}
                            <img src="{{ p.image starts with 'http' ? p.image : asset(p.image) }}" class="prod-img" onerror="this.src='{{ asset('images/placeholder-product.jpg') }}'">
                        {% else %}
                            <div style="width:100%; height:100%; display:flex; align-items:center; justify-content:center; background:#1b1e2e;">
                                <i class="fas fa-image" style="font-size:40px; opacity:0.3;"></i>
                            </div>
                        {% endif %}

                        {% if p.stock < 5 %}
                            <div class="prod-badge badge-low">Stock Bas</div>
                        {% elseif p.stock > 0 %}
                            <div class="prod-badge badge-stock">En Stock</div>
                        {% endif %}
                    </div>

                    <div class="prod-details">
                        <div class="prod-title" title="{{ p.nom }}">{{ p.nom }}</div>
                        <div class="prod-cat">{{ p.categorie ? p.categorie.nom : 'Non classé' }}</div>
                        <div class="prod-price">{{ p.prix|number_format(2) }} €</div>

                        <div class="prod-actions">
                            <a href="{{ path('admin_boutique_produit_edit', {id: p.id}) }}" class="btn-3d btn-edit"> <i class="fas fa-edit"></i> Éditer</a>
                            
                            <form method="post" action="{{ path('admin_boutique_produit_delete', {id: p.id}) }}" onsubmit="return confirm('Confirmer suppression ?');" style="flex:0;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ p.id) }}">
                                <button type="submit" class="btn-3d" style="background:rgba(247, 37, 133, 0.1); color:var(--neon-pink); border:1px solid rgba(247, 37, 133, 0.3); cursor:pointer; height:100%; width:40px; display:flex; align-items:center; justify-content:center;">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

</div>

{% endblock %}
