{% extends 'admin/base.html.twig' %}

{% block title %}Nouveau Produit - Admin{% endblock %}
{% block page_title %}Nouveau Produit{% endblock %}

{% block body %}
<div class="admin-form-wrapper animate__animated animate__fadeInUp">
    <div class="admin-form-card">
        <div class="admin-form-header">
            <div class="admin-form-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <div>
                <h2 class="admin-form-title">Ajouter un Produit</h2>
                <p class="admin-form-subtitle">Remplissez les détails du produit pour l'ajouter à la boutique.</p>
            </div>
        </div>

        {{ form_start(form, {'attr': {'class': 'admin-form', 'novalidate': 'novalidate'}}) }}
            <div class="admin-form-error">{{ form_errors(form) }}</div>

            <div class="admin-form-grid">
                <div>
                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-tag"></i> Nom du produit <span style="color: var(--primary-pink);">*</span>
                        </label>
                        {{ form_widget(form.nom, {'attr': {'class': 'admin-form-input', 'placeholder': 'Ex: Casque Gaming Pro'}}) }}
                        <div class="admin-form-error">{{ form_errors(form.nom) }}</div>
                    </div>

                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-euro-sign"></i> Prix <span style="color: var(--primary-pink);">*</span>
                        </label>
                        {{ form_widget(form.prix, {'attr': {'class': 'admin-form-input', 'placeholder': 'Ex: 99.99'}}) }}
                        <div class="admin-form-error">{{ form_errors(form.prix) }}</div>
                    </div>

                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-cubes"></i> Stock
                        </label>
                        {{ form_widget(form.stock, {'attr': {'class': 'admin-form-input', 'placeholder': 'Quantité disponible'}}) }}
                        <div class="admin-form-error">{{ form_errors(form.stock) }}</div>
                    </div>
                </div>

                <div>
                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-folder"></i> Catégorie
                        </label>
                        {{ form_widget(form.categorie, {'attr': {'class': 'admin-form-select'}}) }}
                        <div class="admin-form-error">{{ form_errors(form.categorie) }}</div>
                    </div>

                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-info-circle"></i> Statut
                        </label>
                        {{ form_widget(form.statut, {'attr': {'class': 'admin-form-select'}}) }}
                        <div class="admin-form-error">{{ form_errors(form.statut) }}</div>
                    </div>

                    <div class="admin-form-group">
                        <label class="admin-form-label">
                            <i class="fas fa-image"></i> Image produit
                        </label>
                        <div class="admin-upload-box" data-upload>
                            <div class="admin-upload-preview" data-preview></div>
                            <div class="admin-upload-placeholder" data-placeholder>
                                <i class="fas fa-cloud-upload-alt"></i>
                                Cliquez ou glissez une image ici
                            </div>
                            {{ form_widget(form.imageFile, {'attr': {'class': 'admin-upload-input', 'data-upload-input': '', 'accept': 'image/*'}}) }}
                        </div>
                        <div class="admin-form-error">{{ form_errors(form.imageFile) }}</div>
                    </div>
                </div>
            </div>

            <div class="admin-form-group">
                <label class="admin-form-label">
                    <i class="fas fa-align-left"></i> Description
                </label>
                {{ form_widget(form.description, {'attr': {'class': 'admin-form-textarea', 'rows': 5, 'placeholder': 'Description détaillée du produit...'}}) }}
                <div class="admin-form-error">{{ form_errors(form.description) }}</div>
            </div>

            <div class="admin-form-actions">
                <a href="{{ path('admin_boutique_produit_index') }}" class="admin-form-cancel">
                    <i class="fas fa-arrow-left"></i> Annuler
                </a>
                <button type="submit" class="admin-form-submit">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
