{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Produits - Admin{% endblock %}
{% block page_title %}Gestion des Produits{% endblock %}

{% block body %}
<section class="admin-tournament-hero">
    <div class="admin-tournament-hero-inner">
        <div class="admin-tournament-kicker">Admin</div>
        <h2 class="admin-tournament-title">Gestion des Produits</h2>
        <p class="admin-tournament-lead">Gérez le catalogue, les stocks et les prix de la boutique.</p>
        <div class="admin-tournament-hero-actions">
            <a href="{{ path('admin_boutique_produit_new') }}" class="admin-tournament-btn">
                <i class="fas fa-plus"></i> Créer un produit
            </a>
            <a href="{{ path('admin_boutique_produit_index') }}" class="admin-tournament-btn ghost">
                <i class="fas fa-rotate"></i> Rafraîchir
            </a>
        </div>
    </div>
    <div class="admin-tournament-hero-glow"></div>
</section>

<section class="admin-tournament-shell">
    <div class="admin-tournament-tabs">
        <a href="{{ path('admin_boutique_produit_index', app.request.query.all | merge({'categorie': ''})) }}"
           class="tab {{ currentCat is empty ? 'active' : '' }}">Tous</a>
        {% for cat in categories %}
            <a href="{{ path('admin_boutique_produit_index', app.request.query.all | merge({'categorie': cat.id})) }}"
               class="tab {{ currentCat == cat.id ? 'active' : '' }}">{{ cat.nom }}</a>
        {% endfor %}
    </div>

    <div class="admin-tournament-panel">
        <div class="admin-tournament-panel-title">
            <i class="fas fa-search"></i>
            Recherche avancée
        </div>
        <form method="GET" class="admin-tournament-form">
            <div class="field">
                <label>Produit</label>
                <input type="text" name="q" placeholder="Nom du produit..." value="{{ currentSearch }}">
            </div>
            <div class="field">
                <label>Prix min</label>
                <input type="number" name="minPrice" placeholder="0" value="{{ minPrice }}">
            </div>
            <div class="field">
                <label>Prix max</label>
                <input type="number" name="maxPrice" placeholder="999" value="{{ maxPrice }}">
            </div>
            <div class="field">
                <label>Catégorie</label>
                <select name="categorie">
                    <option value="">-- Toutes --</option>
                    {% for cat in categories %}
                        <option value="{{ cat.id }}" {% if currentCat == cat.id %}selected{% endif %}>{{ cat.nom }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="field">
                <label>Statut</label>
                <select name="statut">
                    <option value="">-- Tous --</option>
                    <option value="1" {% if currentStatut == '1' %}selected{% endif %}>Disponible</option>
                    <option value="0" {% if currentStatut == '0' %}selected{% endif %}>Rupture</option>
                </select>
            </div>
            <div class="admin-tournament-actions">
                <button type="submit" class="admin-tournament-btn">
                    <i class="fas fa-search"></i> Rechercher
                </button>
                <a href="{{ path('admin_boutique_produit_index') }}" class="admin-tournament-btn ghost">
                    <i class="fas fa-rotate"></i> Réinitialiser
                </a>
            </div>
        </form>

        <div class="admin-tournament-sort">
            <span>Trier :</span>
            <a href="{{ path('admin_boutique_produit_index', app.request.query.all | merge({'sort':'prix_asc'})) }}">Prix ↑</a>
            <a href="{{ path('admin_boutique_produit_index', app.request.query.all | merge({'sort':'prix_desc'})) }}">Prix ↓</a>
            <a href="{{ path('admin_boutique_produit_index', app.request.query.all | merge({'sort':'stock'})) }}">Stock</a>
            <a href="{{ path('admin_boutique_produit_index', app.request.query.all | merge({'sort':''})) }}">Date</a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="admin-tournament-alert success">
            <i class="fas fa-check-circle"></i> {{ message }}
        </div>
    {% endfor %}

    {% if produits %}
        <div class="admin-tournament-table">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Produit</th>
                        <th>Catégorie</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for p in produits %}
                        <tr style="animation-delay: {{ loop.index0 * 0.05 }}s;" class="admin-tournament-row">
                            <td>#{{ p.id }}</td>
                            <td class="name">{{ p.nom }}</td>
                            <td>
                                {% if p.categorie %}
                                    <span class="badge badge-info">{{ p.categorie.nom }}</span>
                                {% else %}
                                    <span class="badge badge-muted">Aucune</span>
                                {% endif %}
                            </td>
                            <td>{{ p.prix }} €</td>
                            <td>{{ p.stock }}</td>
                            <td>
                                {% if p.statut == 'disponible' and p.stock > 0 %}
                                    <span class="badge badge-success">Disponible</span>
                                {% else %}
                                    <span class="badge badge-danger">Rupture</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="admin-tournament-row-actions">
                                    <a href="{{ path('admin_boutique_produit_show', {id: p.id}) }}" class="admin-tournament-icon" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_boutique_produit_edit', {id: p.id}) }}" class="admin-tournament-icon cyan" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_boutique_produit_delete', {id: p.id}) }}" onsubmit="return confirm('Supprimer ce produit ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ p.id) }}">
                                        <button type="submit" class="admin-tournament-icon danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="admin-tournament-empty">
            <div class="empty-ring"></div>
            <strong>Aucun produit trouvé</strong>
            <p>Ajoutez votre premier produit ou ajustez les filtres.</p>
        </div>
    {% endif %}
</section>
{% endblock %}
