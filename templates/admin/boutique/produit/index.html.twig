{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard Boutique - Admin{% endblock %}
{% block page_title %}Dashboard Boutique{% endblock %}

{% block body %}
    <style>
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
            animation: fadeIn 0.5s ease-out;
        }

        .stat-card {
            background: var(--bg-panel);
            border-radius: 20px;
            padding: 25px;
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            border-color: rgba(255, 255, 255, 0.1);
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-bottom: 15px;
            background: rgba(255, 255, 255, 0.05);
        }

        .stat-label {
            color: var(--text-muted);
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 400;
            margin-bottom: 5px;
        }

        .stat-value {
            font-family: 'Orbitron', sans-serif;
            font-size: 28px;
            font-weight: 400;
            color: #fff;
        }

        /* Gradient Accents */
        .card-pink .stat-icon { color: #f72585; background: rgba(247, 37, 133, 0.1); }
        .card-pink .stat-value { text-shadow: 0 0 20px rgba(247, 37, 133, 0.3); }

        .card-blue .stat-icon { color: #4361ee; background: rgba(67, 97, 238, 0.1); }
        .card-blue .stat-value { text-shadow: 0 0 20px rgba(67, 97, 238, 0.3); }

        .card-purple .stat-icon { color: #7209b7; background: rgba(114, 9, 183, 0.1); }
        .card-purple .stat-value { text-shadow: 0 0 20px rgba(114, 9, 183, 0.3); }

        .card-cyan .stat-icon { color: #4cc9f0; background: rgba(76, 201, 240, 0.1); }
        .card-cyan .stat-value { text-shadow: 0 0 20px rgba(76, 201, 240, 0.3); }

        /* Table Enhancements */
        .product-img-wrapper {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            overflow: hidden;
            border: 2px solid rgba(255, 255, 255, 0.05);
            transition: transform 0.3s;
        }

        .product-row:hover .product-img-wrapper {
            border-color: var(--primary-blue);
            transform: scale(1.1);
        }

        .search-bar-container {
            background: var(--bg-panel);
            padding: 10px 20px;
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            display: flex;
            align-items: center;
            transition: 0.3s;
            flex: 1;
            max-width: 400px;
        }

        .search-bar-container:focus-within {
            border-color: var(--primary-blue);
            box-shadow: 0 0 15px rgba(67, 97, 238, 0.2);
        }

        .search-input {
            background: transparent;
            border: none;
            color: #fff;
            width: 100%;
            margin-left: 10px;
            outline: none;
            font-size: 14px;
        }

    </style>

    {% set totalStock = 0 %}
    {% for p in produits %}
        {% set totalStock = totalStock + p.stock %}
    {% endfor %}

    <!-- Stats Section -->
    <div class="stats-grid">
        <div class="stat-card card-blue">
            <div class="stat-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <div class="stat-label">Total Produits</div>
            <div class="stat-value">{{ produits|length }}</div>
        </div>

        <div class="stat-card card-purple">
            <div class="stat-icon">
                <i class="fas fa-tags"></i>
            </div>
            <div class="stat-label">Catégories</div>
            <div class="stat-value">{{ categories|length }}</div>
        </div>

        <div class="stat-card card-cyan">
            <div class="stat-icon">
                <i class="fas fa-cubes"></i>
            </div>
            <div class="stat-label">Total Stock</div>
            <div class="stat-value">{{ totalStock }}</div>
        </div>

        <div class="stat-card card-pink">
            <div class="stat-icon">
                <i class="fas fa-coins"></i>
            </div>
            <div class="stat-label">Valeur Totale</div>
            <div class="stat-value">{{ totalValue }} €</div>
        </div>
    </div>

    <!-- Charts Section -->
    <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 20px; margin-bottom: 30px;">
        <!-- Value Chart -->
        <div class="stat-card" style="height: 250px; padding: 20px;">
            <h3 style="font-family: 'Orbitron', sans-serif; font-size: 14px; margin-bottom: 15px; color: #fff;">
                <i class="fas fa-chart-bar" style="color: var(--primary-pink); margin-right: 10px;"></i>
                Niveau du Stock
            </h3>
            <div style="height: 180px;">
                <canvas id="stockBarChart"></canvas>
            </div>
        </div>

        <!-- Category Chart -->
        <div class="stat-card" style="height: 250px; padding: 20px;">
            <h3 style="font-family: 'Orbitron', sans-serif; font-size: 14px; margin-bottom: 15px; color: #fff;">
                <i class="fas fa-chart-pie" style="color: var(--primary-purple); margin-right: 10px;"></i>
                Répartition
            </h3>
            <div style="height: 160px; display: flex; justify-content: center;">
                <canvas id="categoryPieChart"></canvas>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Data Preparation
            const products = [
                {% for p in produits %}
                    "{{ p.nom|e('js') }}",
                {% endfor %}
            ];
            
            const stocks = [
                {% for p in produits %}
                    {{ p.stock }},
                {% endfor %}
            ];

            // Category Data
            const catLabels = [];
            const catCounts = [];
            
            {% for cat in categories %}
                catLabels.push("{{ cat.nom|e('js') }}");
                {% set count = 0 %}
                {% for p in produits %}
                    {% if p.categorie and p.categorie.id == cat.id %}
                        {% set count = count + 1 %}
                    {% endif %}
                {% endfor %}
                catCounts.push({{ count }});
            {% endfor %}

            // 1. Stock Bar Chart
            const ctxBar = document.getElementById('stockBarChart').getContext('2d');
            new Chart(ctxBar, {
                type: 'bar',
                data: {
                    labels: products,
                    datasets: [{
                        label: 'Stock Disponible',
                        data: stocks,
                        backgroundColor: 'rgba(67, 97, 238, 0.5)',
                        borderColor: '#4361ee',
                        borderWidth: 1,
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(255, 255, 255, 0.05)' },
                            ticks: { color: '#888' }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#888' }
                        }
                    }
                }
            });

            // 2. Category Pie Chart
            const ctxPie = document.getElementById('categoryPieChart').getContext('2d');
            new Chart(ctxPie, {
                type: 'doughnut',
                data: {
                    labels: catLabels,
                    datasets: [{
                        data: catCounts,
                        backgroundColor: [
                            '#f72585',
                            '#4361ee',
                            '#7209b7',
                            '#4cc9f0',
                            '#3f37c9'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { 
                            position: 'bottom',
                            labels: { color: '#fff', padding: 20 } 
                        }
                    },
                    cutout: '70%'
                }
            });
        });
    </script>


    <!-- Toolbar -->
    <div style="margin-bottom: 25px; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 20px;">
        
        <div class="search-bar-container">
            <i class="fas fa-search" style="color: var(--text-muted);"></i>
            <input type="text" id="live-search-produits" value="{{ current_search|default('') }}" class="search-input" placeholder="Rechercher nom, référence, catégorie...">
        </div>

        <a href="{{ path('admin_boutique_produit_new') }}" class="btn-gradient" style="padding: 12px 25px; border-radius: 15px; font-weight: 700; display: flex; align-items: center; gap: 10px; text-decoration: none;">
            <div style="background: rgba(255,255,255,0.2); width: 24px; height: 24px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-plus" style="font-size: 12px;"></i>
            </div>
            Nouveau Produit
        </a>
    </div>

    <!-- Products Table -->
    <div class="admin-table-container animate__animated animate__fadeInUp">
        <table class="admin-table" style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr>
                    <th style="text-align: left; padding-left: 25px;">Produit</th>
                    <th style="text-align: left;">Catégorie</th>
                    <th style="text-align: left;">Prix</th>
                    <th style="text-align: center;">Stock</th>
                    <th style="text-align: center;">Statut</th>
                    <th style="text-align: right; padding-right: 25px;">Actions</th>
                </tr>
            </thead>
            <tbody id="produits-tbody">
                {% for p in produits %}
                    <tr class="product-row" 
                        data-nom="{{ p.nom|lower }}" 
                        data-ref="ref-{{ p.id }}"
                        data-categorie="{{ p.categorie ? p.categorie.nom|lower : '' }}"
                        style="transition: background 0.2s;">
                        <td style="padding-left: 25px;">
                            <div style="display: flex; align-items: center; gap: 20px;">
                                <div class="product-img-wrapper" style="background: #2a2d3e; display: flex; align-items: center; justify-content: center;">
                                    {% if p.image %}
                                        <img src="{{ p.image starts with 'http' ? p.image : asset(p.image) }}" 
                                             alt="{{ p.nom }}" 
                                             style="width: 100%; height: 100%; object-fit: cover;"
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                        <div style="display: none; width: 100%; height: 100%; align-items: center; justify-content: center;">
                                            <i class="fas fa-image" style="color: rgba(255,255,255,0.3);"></i>
                                        </div>
                                    {% else %}
                                        <i class="fas fa-box" style="color: rgba(255,255,255,0.3);"></i>
                                    {% endif %}
                                </div>
                                <div>
                                    <div style="font-weight: 700; font-size: 15px; color: #fff; margin-bottom: 4px;">{{ p.nom }}</div>
                                    <div style="color: var(--text-muted); font-size: 11px; font-family: 'Consolas', monospace; opacity: 0.7;">REF-{{ p.id }}</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if p.categorie %}
                                <span class="badge" style="background: rgba(67, 97, 238, 0.1); color: #4361ee; border: 1px solid rgba(67, 97, 238, 0.2); padding: 5px 12px; font-size: 11px;">
                                    <i class="fas fa-tag" style="margin-right: 5px;"></i>{{ p.categorie.nom }}
                                </span>
                            {% else %}
                                <span style="color: var(--text-muted); font-size: 12px;">-</span>
                            {% endif %}
                        </td>
                        <td style="font-weight: 700; font-family: 'Orbitron', sans-serif; letter-spacing: 1px;">{{ p.prix }} €</td>
                        <td style="text-align: center;">
                            {% if p.stock > 10 %}
                                <div style="width: 100%; max-width: 80px; margin: 0 auto; height: 6px; background: rgba(255,255,255,0.1); border-radius: 3px; overflow: hidden;">
                                    <div style="width: 80%; height: 100%; background: var(--success-color);"></div>
                                </div>
                                <span style="font-size: 11px; color: var(--success-color); font-weight: 700; display: block; margin-top: 5px;">{{ p.stock }} En stock</span>
                            {% elseif p.stock > 0 %}
                                <div style="width: 100%; max-width: 80px; margin: 0 auto; height: 6px; background: rgba(255,255,255,0.1); border-radius: 3px; overflow: hidden;">
                                    <div style="width: 30%; height: 100%; background: var(--warning-color);"></div>
                                </div>
                                <span style="font-size: 11px; color: var(--warning-color); font-weight: 700; display: block; margin-top: 5px;">{{ p.stock }} Faible</span>
                            {% else %}
                                <div style="width: 100%; max-width: 80px; margin: 0 auto; height: 6px; background: rgba(255,255,255,0.1); border-radius: 3px; overflow: hidden;">
                                    <div style="width: 0%; height: 100%; background: var(--primary-pink);"></div>
                                </div>
                                <span style="font-size: 11px; color: var(--primary-pink); font-weight: 700; display: block; margin-top: 5px;">Rupture</span>
                            {% endif %}
                        </td>
                        <td style="text-align: center;">
                            {% if p.statut == 'disponible' and p.stock > 0 %}
                                <span style="width: 10px; height: 10px; display: inline-block; background: var(--success-color); border-radius: 50%; box-shadow: 0 0 10px var(--success-color);"></span>
                            {% else %}
                                <span style="width: 10px; height: 10px; display: inline-block; background: var(--primary-pink); border-radius: 50%; box-shadow: 0 0 10px var(--primary-pink);"></span>
                            {% endif %}
                        </td>
                        <td style="text-align: right; padding-right: 25px;">
                            <div style="display: flex; gap: 8px; justify-content: flex-end;">
                                <a href="{{ path('admin_boutique_produit_edit', {id: p.id}) }}" style="width: 38px; height: 38px; display: flex; align-items: center; justify-content: center; background: rgba(67, 97, 238, 0.1); color: #4361ee; border-radius: 10px; transition: 0.2s;" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('admin_boutique_produit_delete', {id: p.id}) }}" onsubmit="return confirm('Supprimer ce produit ?');" style="margin:0;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ p.id) }}">
                                    <button type="submit" style="width: 38px; height: 38px; display: flex; align-items: center; justify-content: center; background: rgba(247, 37, 133, 0.1); color: #f72585; border: none; border-radius: 10px; cursor: pointer; transition: 0.2s;" title="Supprimer">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr id="no-produits-default">
                        <td colspan="6" style="text-align: center; padding: 60px; color: var(--text-muted);">
                            <div style="background: rgba(255,255,255,0.02); width: 80px; height: 80px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px;">
                                <i class="fas fa-box-open" style="font-size: 32px; opacity: 0.5;"></i>
                            </div>
                            <h3 style="color: #fff; font-size: 16px; margin-bottom: 5px;">Aucun produit trouvé</h3>
                            <p style="font-size: 13px;">Essayez d'ajuster vos filtres de recherche.</p>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Category Quick Links (Optional, mimicking sidebar in image) -->
    <div style="margin-top: 40px; border-top: 1px solid rgba(255,255,255,0.05); padding-top: 30px;">
        <h3 style="font-family: 'Orbitron', sans-serif; font-size: 16px; margin-bottom: 20px; color: #fff;">
            <i class="fas fa-filter" style="color: var(--primary-pink); margin-right: 10px;"></i> Filtrer par catégorie
        </h3>
        <div style="display: flex; gap: 15px; flex-wrap: wrap;">
            <a href="{{ path('admin_boutique_produit_index') }}" style="background: {{ currentCat is empty ? 'var(--gradient-1)' : 'rgba(255,255,255,0.05)' }}; color: #fff; padding: 10px 20px; border-radius: 50px; text-decoration: none; font-size: 13px; font-weight: 600; transition: 0.3s; border: 1px solid rgba(255,255,255,0.05);">tous</a>
            {% for cat in categories %}
                <a href="{{ path('admin_boutique_produit_index', {categorie: cat.id}) }}" style="background: {{ currentCat == cat.id ? 'var(--gradient-1)' : 'rgba(255,255,255,0.05)' }}; color: #fff; padding: 10px 20px; border-radius: 50px; text-decoration: none; font-size: 13px; font-weight: 600; transition: 0.3s; border: 1px solid rgba(255,255,255,0.05);">{{ cat.nom }}</a>
            {% endfor %}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('live-search-produits');
            const tbody = document.getElementById('produits-tbody');

            if (searchInput) {
                searchInput.addEventListener('input', (e) => {
                    const searchTerm = e.target.value.toLowerCase().trim();
                    const rows = document.querySelectorAll('.product-row');
                    let visibleCount = 0;

                    rows.forEach(row => {
                        const nom = row.dataset.nom || '';
                        const ref = row.dataset.ref || '';
                        const categorie = row.dataset.categorie || '';

                        if (nom.includes(searchTerm) || ref.includes(searchTerm) || categorie.includes(searchTerm)) {
                            row.style.display = '';
                            visibleCount++;
                        } else {
                            row.style.display = 'none';
                        }
                    });

                    // Handle empty state
                    const defaultNoResults = document.getElementById('no-produits-default');
                    let noResultsRow = document.getElementById('no-results-search');

                    if (defaultNoResults) {
                        defaultNoResults.style.display = 'none';
                    }

                    if (visibleCount === 0 && searchTerm !== '') {
                        if (!noResultsRow) {
                            noResultsRow = document.createElement('tr');
                            noResultsRow.id = 'no-results-search';
                            noResultsRow.innerHTML = `
                                <td colspan="6" style="text-align: center; padding: 60px; color: var(--text-muted);">
                                    <div style="background: rgba(255,255,255,0.02); width: 80px; height: 80px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px;">
                                        <i class="fas fa-ghost" style="font-size: 32px; opacity: 0.5;"></i>
                                    </div>
                                    <h3 style="color: #fff; font-size: 16px; margin-bottom: 5px;">Aucun produit ne correspond à "${e.target.value}"</h3>
                                    <p style="font-size: 13px;">Essayez une autre recherche.</p>
                                </td>
                            `;
                            tbody.appendChild(noResultsRow);
                        } else {
                            noResultsRow.style.display = '';
                            noResultsRow.querySelector('h3').textContent = `Aucun produit ne correspond à "${e.target.value}"`;
                        }
                    } else if (noResultsRow) {
                        noResultsRow.style.display = 'none';
                    }

                    if (visibleCount === 0 && searchTerm === '' && defaultNoResults) {
                        defaultNoResults.style.display = '';
                    }
                });
            }
        });
    </script>

{% endblock %}