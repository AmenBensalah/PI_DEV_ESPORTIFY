{% extends 'admin/base.html.twig' %}

{% block title %}Demandes manager - Admin{% endblock %}
{% block page_title %}Demandes de manager{% endblock %}

{% block body %}
<section class="admin-tournament-hero">
    <div class="admin-tournament-hero-inner">
        <div class="admin-tournament-kicker">Admin</div>
        <h2 class="admin-tournament-title">Demandes de manager</h2>
        <p class="admin-tournament-lead">Validez ou rejetez les demandes de rôle manager.</p>
        <div class="admin-tournament-hero-actions">
            <a href="{{ path('admin_manager_requests_index') }}" class="admin-tournament-btn ghost">
                <i class="fas fa-rotate"></i> Rafraîchir
            </a>
        </div>
    </div>
    <div class="admin-tournament-hero-glow"></div>
</section>

<section class="admin-tournament-shell">
    <div class="admin-tournament-tabs">
        <a href="{{ path('admin_manager_requests_index', app.request.query.all | merge({'status': ''})) }}"
           class="tab {{ currentStatus is empty ? 'active' : '' }}">Tous</a>
        <a href="{{ path('admin_manager_requests_index', app.request.query.all | merge({'status': 'pending'})) }}"
           class="tab {{ currentStatus == 'pending' ? 'active' : '' }}">En attente</a>
        <a href="{{ path('admin_manager_requests_index', app.request.query.all | merge({'status': 'accepted'})) }}"
           class="tab {{ currentStatus == 'accepted' ? 'active' : '' }}">Acceptées</a>
    </div>

    <div class="admin-tournament-panel">
        <div class="admin-tournament-panel-title">
            <i class="fas fa-search"></i>
            Recherche avancée
        </div>
        <form action="{{ path('admin_manager_requests_index') }}" method="get" class="admin-tournament-form">
            <div class="field">
                <label>Nom, email ou motivation</label>
                <input type="text" name="q" placeholder="Rechercher..." value="{{ currentQuery }}">
            </div>
            <div class="field">
                <label>Statut</label>
                <select name="status">
                    <option value="">-- Tous --</option>
                    <option value="pending" {% if currentStatus == 'pending' %}selected{% endif %}>En attente</option>
                    <option value="accepted" {% if currentStatus == 'accepted' %}selected{% endif %}>Acceptée</option>
                </select>
            </div>
            <div class="admin-tournament-actions">
                <button type="submit" class="admin-tournament-btn">
                    <i class="fas fa-search"></i> Rechercher
                </button>
                <a href="{{ path('admin_manager_requests_index') }}" class="admin-tournament-btn ghost">
                    <i class="fas fa-rotate"></i> Réinitialiser
                </a>
            </div>
        </form>

        <div class="admin-tournament-sort">
            <span>Trier :</span>
            <a href="{{ path('admin_manager_requests_index', app.request.query.all | merge({'sort':'createdAt','direction':'DESC'})) }}">Date ↓</a>
            <a href="{{ path('admin_manager_requests_index', app.request.query.all | merge({'sort':'createdAt','direction':'ASC'})) }}">Date ↑</a>
            <a href="{{ path('admin_manager_requests_index', app.request.query.all | merge({'sort':'id','direction':'DESC'})) }}">ID ↓</a>
            <a href="{{ path('admin_manager_requests_index', app.request.query.all | merge({'sort':'id','direction':'ASC'})) }}">ID ↑</a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="admin-tournament-alert success">
            <i class="fas fa-check-circle"></i> {{ message }}
        </div>
    {% endfor %}

    {% if manager_requests %}
        <div class="admin-tournament-table">
            <table>
                <thead>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Motivation</th>
                        <th>Statut</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for request in manager_requests %}
                        <tr style="animation-delay: {{ loop.index0 * 0.05 }}s;" class="admin-tournament-row">
                            <td>
                                <div class="user-avatar-small">
                                    <div class="avatar-circle">{{ request.user.nom|first|upper }}</div>
                                    <div>
                                        <div style="color: white; font-weight: 600;">{{ request.user.pseudo|default(request.user.nom) }}</div>
                                        <div style="font-size: 12px; color: var(--text-muted);">{{ request.user.email }}</div>
                                    </div>
                                </div>
                            </td>
                            <td style="max-width: 420px;">
                                <div style="background: rgba(255,255,255,0.03); padding: 12px; border-radius: 8px; font-size: 13px; color: #ddd; line-height: 1.5; max-height: 100px; overflow-y: auto; border: 1px solid rgba(255,255,255,0.05);">
                                    "{{ request.motivation }}"
                                </div>
                            </td>
                            <td>
                                {% if request.status == 'pending' %}
                                    <span class="badge badge-warn">En attente</span>
                                {% else %}
                                    <span class="badge badge-success">Acceptée</span>
                                {% endif %}
                            </td>
                            <td>{{ request.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <div class="admin-tournament-row-actions">
                                    <a href="{{ path('app_admin_user_show', {'id': request.user.id}) }}" class="admin-tournament-icon" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    {% if request.status == 'pending' %}
                                        <form method="post" action="{{ path('admin_manager_requests_accept', {'id': request.id}) }}" onsubmit="return confirm('Accepter cette demande ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('accept' ~ request.id) }}">
                                            <button class="admin-tournament-icon cyan" title="Accepter">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </form>
                                    {% else %}
                                        <span class="admin-tournament-icon cyan disabled" title="Déjà acceptée">
                                            <i class="fas fa-edit"></i>
                                        </span>
                                    {% endif %}
                                    <form method="post" action="{{ path('admin_manager_requests_delete', {'id': request.id}) }}" onsubmit="return confirm('Supprimer cette demande ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ request.id) }}">
                                        <button class="admin-tournament-icon danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="admin-tournament-empty">
            <div class="empty-ring"></div>
            <strong>Aucune demande trouvée</strong>
            <p>Modifiez vos filtres ou revenez plus tard.</p>
        </div>
    {% endif %}
</section>
{% endblock %}
