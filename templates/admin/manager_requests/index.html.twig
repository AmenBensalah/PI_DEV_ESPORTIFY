{% extends 'admin/base.html.twig' %}

{% block title %}Demandes Manager - Admin{% endblock %}
{% block page_title %}Demandes de Manager{% endblock %}

{% block body %}
    
    <style>
        .advanced-search-container {
            background: #15182b;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 30px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }
        .search-title {
            font-size: 18px;
            font-weight: 600;
            color: white;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        .filter-label {
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text-muted);
            font-weight: 600;
        }
        .filter-input {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 6px;
            padding: 10px 12px;
            color: white;
            font-size: 14px;
            transition: all 0.3s ease;
        }
        .filter-input:focus {
            outline: none;
            border-color: var(--primary-pink);
            background: rgba(255, 255, 255, 0.08);
        }
        .btn-search {
            background: #4e65f6;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }
        .btn-search:hover {
            background: #3d52d9;
            transform: translateY(-2px);
        }
        .btn-reset {
            background: rgba(255, 255, 255, 0.05);
            color: #a0a0ff;
            border: none;
            border-radius: 8px;
            padding: 8px 15px;
            font-weight: 600;
            font-size: 13px;
            cursor: pointer;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .sort-row {
            margin-top: 20px;
            padding-top: 15px;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            display: flex;
            align-items: center;
            gap: 20px;
        }
        .sort-label {
            font-weight: 700;
            color: white;
            font-size: 14px;
        }
        .sort-link {
            font-size: 13px;
            color: #a0a0ff;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        .sort-link:hover, .sort-link.active {
            color: var(--primary-pink);
        }
    </style>

    <div class="advanced-search-container animate__animated animate__fadeIn">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <div class="search-title" style="margin-bottom: 0;">
                <i class="fas fa-search"></i> Recherche Avancée
            </div>
            <span class="badge badge-admin">{{ manager_requests|length }} Demandes trouvées</span>
        </div>
        
        <form action="{{ path('admin_manager_requests_index') }}" method="get">
            <div style="display: flex; flex-wrap: wrap; gap: 20px; align-items: flex-end;">
                <div class="filter-group" style="flex: 2; min-width: 250px;">
                    <label class="filter-label">NOM, EMAIL OU MOTIVATION</label>
                    <input type="text" name="q" class="filter-input" placeholder="Rechercher..." value="{{ currentQuery }}">
                </div>
                
                <div class="filter-group" style="flex: 1; min-width: 200px;">
                    <label class="filter-label">STATUT</label>
                    <select name="status" class="filter-input">
                        <option value="pending" {% if currentStatus == 'pending' %}selected{% endif %}>En attente</option>
                        <option value="accepted" {% if currentStatus == 'accepted' %}selected{% endif %}>Accepté</option>
                    </select>
                </div>

                <div style="display: flex; gap: 10px; align-items: center; margin-bottom: 2px;">
                    <button type="submit" class="btn-search">
                        <i class="fas fa-search"></i> Rechercher
                    </button>
                    <a href="{{ path('admin_manager_requests_index') }}" class="btn-reset">
                        <i class="fas fa-sync-alt"></i> Réinitialiser
                    </a>
                </div>
            </div>

            <input type="hidden" name="sort" value="{{ currentSort }}">
            <input type="hidden" name="direction" value="{{ currentDirection }}">

            <div class="sort-row">
                <span class="sort-label">Trier par :</span>
                <a href="{{ path('admin_manager_requests_index', {q: currentQuery, status: currentStatus, sort: 'createdAt', direction: 'DESC'}) }}" 
                   class="sort-link {% if currentSort == 'createdAt' and currentDirection == 'DESC' %}active{% endif %}">Date ↓</a>
                <a href="{{ path('admin_manager_requests_index', {q: currentQuery, status: currentStatus, sort: 'createdAt', direction: 'ASC'}) }}" 
                   class="sort-link {% if currentSort == 'createdAt' and currentDirection == 'ASC' %}active{% endif %}">Date ↑</a>
                <a href="{{ path('admin_manager_requests_index', {q: currentQuery, status: currentStatus, sort: 'id', direction: 'DESC'}) }}" 
                   class="sort-link {% if currentSort == 'id' and currentDirection == 'DESC' %}active{% endif %}">ID ↓</a>
                <a href="{{ path('admin_manager_requests_index', {q: currentQuery, status: currentStatus, sort: 'id', direction: 'ASC'}) }}" 
                   class="sort-link {% if currentSort == 'id' and currentDirection == 'ASC' %}active{% endif %}">ID ↑</a>
            </div>
        </form>
    </div>

    <div class="admin-table-container">
        {% if manager_requests is empty %}
            <div style="text-align: center; padding: 40px; color: var(--text-muted);">
                <i class="fas fa-search" style="font-size: 40px; margin-bottom: 15px; opacity: 0.5;"></i>
                <p>Aucune demande trouvée.</p>
            </div>
        {% else %}
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>
                            <a href="{{ path('admin_manager_requests_index', {q: currentQuery, status: currentStatus, sort: 'id', direction: currentSort == 'id' and currentDirection == 'ASC' ? 'DESC' : 'ASC'}) }}" style="color: inherit; text-decoration: none; display: flex; align-items: center; gap: 5px;">
                                Utilisateur {% if currentSort == 'id' %}<i class="fas fa-sort-{{ currentDirection == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                            </a>
                        </th>
                        <th>Motivation</th>
                        <th>
                            <a href="{{ path('admin_manager_requests_index', {q: currentQuery, status: currentStatus, sort: 'createdAt', direction: currentSort == 'createdAt' and currentDirection == 'ASC' ? 'DESC' : 'ASC'}) }}" style="color: inherit; text-decoration: none; display: flex; align-items: center; gap: 5px;">
                                Date {% if currentSort == 'createdAt' %}<i class="fas fa-sort-{{ currentDirection == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                            </a>
                        </th>
                        <th style="text-align: right;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for request in manager_requests %}
                        <tr>
                            <td>
                                <div class="user-avatar-small">
                                    <div class="avatar-circle">
                                        {{ request.user.nom|first|upper }}
                                    </div>
                                    <div>
                                        <div style="color: white; font-weight: 600;">{{ request.user.pseudo|default(request.user.nom) }}</div>
                                        <div style="font-size: 12px; color: var(--text-muted); font-weight: 400;">{{ request.user.email }}</div>
                                    </div>
                                </div>
                            </td>
                            <td style="max-width: 400px;">
                                <div style="background: rgba(255,255,255,0.03); padding: 12px; border-radius: 8px; font-size: 13px; color: #ddd; line-height: 1.5; max-height: 100px; overflow-y: auto; border: 1px solid rgba(255,255,255,0.05);">
                                    "{{ request.motivation }}"
                                </div>
                            </td>
                            <td>
                                <div style="font-size: 13px; color: white; font-weight: 500;">{{ request.createdAt|date('d/m/Y') }}</div>
                                <div style="font-size: 11px; color: var(--text-muted);">{{ request.createdAt|date('H:i') }}</div>
                            </td>
                            <td style="text-align: right;">
                                <div style="display: flex; gap: 10px; justify-content: flex-end;">
                                    {% if request.status == 'pending' %}
                                    <form method="post" action="{{ path('admin_manager_requests_accept', {'id': request.id}) }}" onsubmit="return confirm('Accepter cette demande ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('accept' ~ request.id) }}">
                                        <button class="btn-gradient" style="padding: 8px 15px; background: linear-gradient(135deg, #00d084, #00b894); font-size: 12px;">
                                            <i class="fas fa-check"></i> Accepter
                                        </button>
                                    </form>
                                    {% else %}
                                    <span class="badge" style="background: rgba(0, 208, 132, 0.1); color: #00d084;">Accepté</span>
                                    {% endif %}

                                    <form method="post" action="{{ path('admin_manager_requests_delete', {'id': request.id}) }}" onsubmit="return confirm('Supprimer cette demande ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ request.id) }}">
                                        <button class="btn-icon" style="color: var(--primary-pink); border-color: var(--primary-pink); width: 32px; height: 32px;">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>

{% endblock %}
