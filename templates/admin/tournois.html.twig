{% extends 'admin/layout.html.twig' %}

{% block title %}Tournois - Admin{% endblock %}
{% block page_title %}Gestion des Tournois{% endblock %}

{% block body %}
    <div style="margin-bottom: 30px; display: flex; justify-content: flex-end;">
        <a class="btn-gradient" style="padding: 12px 25px; text-decoration: none;" href="{{ path('admin_tournoi_create') }}">
            <i class="fas fa-plus"></i> Créer un Tournoi
        </a>
    </div>

    <div class="admin-table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Statut</th>
                    <th>Nom du Tournoi</th>
                    <th>Jeu</th>
                    <th>Date de Début</th>
                    <th>Cash Prize</th>
                    <th>Participants</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if tournois is not empty %}
                    {% for tournoi in tournois %}
                        <tr>
                            <td>
                                {% set status = tournoi.currentStatus %}
                                {% if status == 'planned' %}
                                    <span class="badge badge-warning">Inscriptions</span>
                                {% elseif status == 'ongoing' %}
                                    <span class="badge badge-success">En Cours</span>
                                {% else %}
                                    <span class="badge">Terminé</span>
                                {% endif %}
                            </td>
                            <td>
                                <div style="font-weight: 600;">{{ tournoi.name }}</div>
                                <div style="font-size: 12px; color: var(--text-secondary);">{{ tournoi.typeTournoi|upper }}</div>
                            </td>
                            <td><span style="color: var(--primary-blue);">{{ tournoi.game }}</span></td>
                            <td>{{ tournoi.startDate|date('d/m/Y') }}</td>
                            <td style="font-weight: 700; color: #ffd700;">{{ tournoi.prizeWon|number_format(0, '.', ' ') }} €</td>
                            <td>
                                {{ tournoi.participants|length }}
                                /
                                {{ tournoi.maxPlaces is not null ? tournoi.maxPlaces : '∞' }}
                            </td>
                            <td>
                                <a class="btn-icon" href="{{ path('admin_tournoi_show', {id: tournoi.idTournoi}) }}"><i class="fas fa-eye"></i></a>
                                {% if status == 'planned' %}
                                    <a class="btn-icon" href="{{ path('admin_tournoi_edit', {id: tournoi.idTournoi}) }}"><i class="fas fa-edit"></i></a>
                                {% endif %}
                                <form method="post" action="{{ path('admin_tournoi_delete', {id: tournoi.idTournoi}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce tournoi ?');" style="display: inline;">
                                    <button class="btn-icon" type="submit"><i class="fas fa-trash-alt" style="color: var(--primary-pink);"></i></button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="7" style="text-align: center; color: var(--text-secondary); padding: 20px;">
                            Aucun tournoi trouvé
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
