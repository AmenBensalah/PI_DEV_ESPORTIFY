{% extends 'admin/layout.html.twig' %}

{% block title %}Tournois - Admin{% endblock %}
{% block page_title %}Gestion des Tournois{% endblock %}

{% block body %}
    <!-- Actions Banner -->
    <div style="margin-bottom: 30px; display: flex; justify-content: flex-end;">
        <button class="btn-gradient" style="padding: 12px 25px;">
            <i class="fas fa-plus"></i> Créer un Tournoi
        </button>
    </div>

    <div class="admin-table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Statut</th>
                    <th>Nom du Tournoi</th>
                    <th>Jeu</th>
                    <th>Date de Début</th>
                    <th>Cash Prize</th>
                    <th>Participants</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><span class="badge badge-success">En Cours</span></td>
                    <td>
                        <div style="font-weight: 600;">Winter Championship 2026</div>
                        <div style="font-size: 12px; color: var(--text-secondary);">Saison 4</div>
                    </td>
                    <td><span style="color: var(--primary-blue);">League of Legends</span></td>
                    <td>01/02/2026</td>
                    <td style="font-weight: 700; color: #ffd700;">10,000 €</td>
                    <td>16 / 16</td>
                    <td>
                        <button class="btn-icon"><i class="fas fa-eye"></i></button>
                        <button class="btn-icon"><i class="fas fa-edit"></i></button>
                        <button class="btn-icon"><i class="fas fa-trash-alt" style="color: var(--primary-pink);"></i></button>
                    </td>
                </tr>
                <tr>
                    <td><span class="badge badge-warning">Inscriptions</span></td>
                    <td>
                        <div style="font-weight: 600;">Valorant Rookie Cup</div>
                        <div style="font-size: 12px; color: var(--text-secondary);">Amateur Tier</div>
                    </td>
                    <td><span style="color: var(--primary-pink);">Valorant</span></td>
                    <td>15/02/2026</td>
                    <td style="font-weight: 700; color: #ffd700;">2,500 €</td>
                    <td>8 / 32</td>
                    <td>
                        <button class="btn-icon"><i class="fas fa-eye"></i></button>
                        <button class="btn-icon"><i class="fas fa-edit"></i></button>
                        <button class="btn-icon"><i class="fas fa-trash-alt" style="color: var(--primary-pink);"></i></button>
                    </td>
                </tr>
                <tr>
                    <td><span class="badge">Terminé</span></td>
                    <td>
                        <div style="font-weight: 600;">New Year Brawl</div>
                        <div style="font-size: 12px; color: var(--text-secondary);">Weekly Cup</div>
                    </td>
                    <td><span style="color: #fff;">Rocket League</span></td>
                    <td>01/01/2026</td>
                    <td style="font-weight: 700; color: #ffd700;">500 €</td>
                    <td>16 / 16</td>
                    <td>
                        <button class="btn-icon"><i class="fas fa-eye"></i></button>
                        <button class="btn-icon"><i class="fas fa-trophy" style="color: gold;"></i></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
