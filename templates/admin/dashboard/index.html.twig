{% extends "admin/base.html.twig" %}

{% block body %}
<div class="dashboard-container">
    <div class="page-header">
        <h1>Vue d'ensemble</h1>
        <p>Welcome back to the admin dashboard</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon purple">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <h3>Utilisateurs</h3>
                <div class="stat-value">{{ userCount }}</div>
                <p class="stat-label">Compte total</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon cyan">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="stat-content">
                <h3>Équipes</h3>
                <div class="stat-value"><a href="{{ path('admin_equipes') }}" style="text-decoration: none; color: inherit;">{{ equipeCount }}</a></div>
                <p class="stat-label">Équipes active</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon pink">
                <i class="fas fa-trophy"></i>
            </div>
            <div class="stat-content">
                <h3>Tournois</h3>
                <div class="stat-value">8</div>
                <p class="stat-label">En cours</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon purple">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="stat-content">
                <h3>Demandes Manager</h3>
                <div class="stat-value"><a href="{{ path('admin_manager_requests_index') }}" style="text-decoration: none; color: inherit;">{{ pendingRequests }}</a></div>
                <p class="stat-label">En attente</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon blue">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <div class="stat-content">
                <h3>Rapports</h3>
                <div class="stat-value">{{ reportCount }}</div>
                <p class="stat-label">À traiter</p>
            </div>
        </div>
    </div>

    <div class="dashboard-sections">
        <div class="section-card">
            <div class="section-header">
                <h2><i class="fas fa-users"></i> Utilisateurs récents</h2>
                <a href="{{ path('admin_users') }}" class="btn-gradient" style="text-decoration: none; padding: 8px 15px; font-size: 13px;">Gérer utilisateurs</a>
            </div>
            <div class="admin-table-container" style="padding: 0; border: none; background: transparent;">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Rôle</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in latestUsers %}
                            <tr>
                                <td>#{{ user.id }}</td>
                                <td>{{ user.nom }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.role.value }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" style="color: #aaa;">Aucun utilisateur.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="section-card">
            <div class="section-header">
                <h2><i class="fas fa-gamepad"></i> Équipes récentes</h2>
                <a href="{{ path('admin_equipes') }}" class="btn-gradient" style="text-decoration: none; padding: 8px 15px; font-size: 13px;">Gérer équipes</a>
            </div>
            <div class="admin-table-container" style="padding: 0; border: none; background: transparent;">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Classement</th>
                            <th>Tag</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for equipe in latestEquipes %}
                            <tr>
                                <td>#{{ equipe.id }}</td>
                                <td>{{ equipe.nomEquipe }}</td>
                                <td>{{ equipe.classement }}</td>
                                <td>{{ equipe.tag }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" style="color: #aaa;">Aucune équipe.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="section-card">
            <div class="section-header">
                <h2><i class="fas fa-clock"></i> Activité récente</h2>
            </div>
            <div class="activity-list">
                <div class="activity-item">
                    <div class="activity-icon success">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="activity-details">
                        <p class="activity-title">Nouvel utilisateur inscrit</p>
                        <p class="activity-description">User123 s'est inscrit</p>
                        <span class="activity-time">Il y a 2 heures</span>
                    </div>
                </div>

                <div class="activity-item">
                    <div class="activity-icon warning">
                        <i class="fas fa-edit"></i>
                    </div>
                    <div class="activity-details">
                        <p class="activity-title">Profil modifié</p>
                        <p class="activity-description">Admin a modifié un profil utilisateur</p>
                        <span class="activity-time">Il y a 5 heures</span>
                    </div>
                </div>

                <div class="activity-item">
                    <div class="activity-icon danger">
                        <i class="fas fa-trash"></i>
                    </div>
                    <div class="activity-details">
                        <p class="activity-title">Utilisateur supprimé</p>
                        <p class="activity-description">Un compte a été supprimé</p>
                        <span class="activity-time">Il y a 1 jour</span>
                    </div>
                </div>

                <div class="activity-item">
                    <div class="activity-icon success">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="activity-details">
                        <p class="activity-title">Tournoi créé</p>
                        <p class="activity-description">Un nouveau tournoi a été créé</p>
                        <span class="activity-time">Il y a 3 jours</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-card">
            <div class="section-header">
                <h2><i class="fas fa-chart-bar"></i> Statistiques</h2>
            </div>
            <div class="stats-info">
                <div class="stat-info-item">
                    <span class="stat-label">Utilisateurs actifs</span>
                    <span class="stat-value-sm">{{ userCount }}</span>
                </div>
                <div class="stat-info-item">
                    <span class="stat-label">Administrateurs</span>
                    <span class="stat-value-sm">2</span>
                </div>
                <div class="stat-info-item">
                    <span class="stat-label">Joueurs inscrits</span>
                    <span class="stat-value-sm">{{ userCount - 2 }}</span>
                </div>
                <div class="stat-info-item">
                    <span class="stat-label">Taux de complétion profil</span>
                    <span class="stat-value-sm">95%</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        padding: 0;
    }

    .page-header {
        padding: 2rem 2rem 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-family: 'Orbitron', sans-serif;
        font-size: 2.5rem;
        color: #fff;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .page-header p {
        margin: 0.5rem 0 0;
        color: #aaa;
        font-size: 0.95rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        padding: 0 2rem;
        margin-bottom: 3rem;
    }

    .stat-card {
        background: linear-gradient(135deg, rgba(157, 78, 221, 0.1) 0%, rgba(76, 201, 240, 0.05) 100%);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .stat-card:hover {
        border-color: rgba(157, 78, 221, 0.3);
        background: linear-gradient(135deg, rgba(157, 78, 221, 0.15) 0%, rgba(76, 201, 240, 0.1) 100%);
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(157, 78, 221, 0.2);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        flex-shrink: 0;
    }

    .stat-icon.purple {
        background: linear-gradient(135deg, #9d4edd 0%, #c77dff 100%);
        color: #fff;
    }

    .stat-icon.cyan {
        background: linear-gradient(135deg, #4cc9f0 0%, #4361ee 100%);
        color: #fff;
    }

    .stat-icon.pink {
        background: linear-gradient(135deg, #f72585 0%, #ec0868 100%);
        color: #fff;
    }

    .stat-icon.blue {
        background: linear-gradient(135deg, #4361ee 0%, #5a189a 100%);
        color: #fff;
    }

    .stat-content h3 {
        margin: 0 0 0.5rem;
        font-size: 0.9rem;
        color: #aaa;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: bold;
        background: linear-gradient(135deg, #9d4edd, #4cc9f0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0.5rem 0;
    }

    .stat-label {
        margin: 0;
        color: #888;
        font-size: 0.85rem;
    }

    .dashboard-sections {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        padding: 0 2rem 2rem;
    }

    @media (max-width: 1200px) {
        .dashboard-sections {
            grid-template-columns: 1fr;
        }
    }

    .section-card {
        background: linear-gradient(135deg, rgba(27, 30, 46, 0.8) 0%, rgba(157, 78, 221, 0.05) 100%);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        backdrop-filter: blur(10px);
    }

    .section-header {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .section-header h2 {
        margin: 0;
        font-family: 'Orbitron', sans-serif;
        font-size: 1.3rem;
        color: #fff;
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .section-header i {
        color: #9d4edd;
    }

    .activity-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .activity-item {
        display: flex;
        gap: 1rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .activity-item:hover {
        background: rgba(255, 255, 255, 0.08);
        border-left: 3px solid #9d4edd;
        padding-left: calc(1rem - 3px);
    }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        flex-shrink: 0;
    }

    .activity-icon.success {
        background: rgba(76, 201, 240, 0.2);
        color: #4cc9f0;
    }

    .activity-icon.warning {
        background: rgba(157, 78, 221, 0.2);
        color: #9d4edd;
    }

    .activity-icon.danger {
        background: rgba(247, 37, 133, 0.2);
        color: #f72585;
    }

    .activity-details {
        flex: 1;
    }

    .activity-title {
        margin: 0 0 0.3rem;
        font-weight: 600;
        color: #fff;
        font-size: 0.95rem;
    }

    .activity-description {
        margin: 0 0 0.3rem;
        color: #aaa;
        font-size: 0.85rem;
    }

    .activity-time {
        display: inline-block;
        color: #777;
        font-size: 0.75rem;
        font-style: italic;
    }

    .stats-info {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .stat-info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 8px;
    }

    .stat-label {
        color: #aaa;
        font-size: 0.9rem;
    }

    .stat-value-sm {
        font-size: 1.8rem;
        font-weight: bold;
        background: linear-gradient(135deg, #9d4edd, #4cc9f0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>
{% endblock %}
