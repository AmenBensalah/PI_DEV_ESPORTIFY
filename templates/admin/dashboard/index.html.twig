{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard - Admin{% endblock %}

{% block admin_body %}
<section class="holo-dashboard">
    <div class="holo-head">
        <div>
            <h1>Command Center</h1>
            <p>Vue globale du backoffice, performances et activite en temps reel.</p>
        </div>
        <div class="holo-meta">
            <span class="meta-chip"><i class="fas fa-clock"></i> {{ generatedAt|date('d/m/Y H:i') }}</span>
            <a href="{{ path('admin_users') }}" class="meta-chip action"><i class="fas fa-user-gear"></i> Comptes</a>
            <a href="{{ path('fil_admin_post_index') }}" class="meta-chip action"><i class="fas fa-newspaper"></i> Fil</a>
        </div>
    </div>

    <div class="kpi-grid">
        <article class="kpi-card">
            <span class="kpi-label">Utilisateurs</span>
            <strong class="kpi-value">{{ kpis.users }}</strong>
            <span class="kpi-sub">Plateforme</span>
        </article>
        <article class="kpi-card">
            <span class="kpi-label">Equipes</span>
            <strong class="kpi-value">{{ kpis.teams }}</strong>
            <span class="kpi-sub">Communautes</span>
        </article>
        <article class="kpi-card">
            <span class="kpi-label">Tournois</span>
            <strong class="kpi-value">{{ kpis.tournois }}</strong>
            <span class="kpi-sub">Gestion competition</span>
        </article>
        <article class="kpi-card">
            <span class="kpi-label">Posts / Commentaires</span>
            <strong class="kpi-value">{{ kpis.posts }} / {{ kpis.comments }}</strong>
            <span class="kpi-sub">Fil d'actualite</span>
        </article>
        <article class="kpi-card">
            <span class="kpi-label">Annonces</span>
            <strong class="kpi-value">{{ kpis.announcements }}</strong>
            <span class="kpi-sub">Communication officielle</span>
        </article>
        <article class="kpi-card">
            <span class="kpi-label">Demandes manager</span>
            <strong class="kpi-value">{{ kpis.pendingRequests }}</strong>
            <span class="kpi-sub">En attente</span>
        </article>
        <article class="kpi-card">
            <span class="kpi-label">Paiements</span>
            <strong class="kpi-value">{{ kpis.paymentsCount }}</strong>
            <span class="kpi-sub">Total transactions</span>
        </article>
        <article class="kpi-card">
            <span class="kpi-label">CA total</span>
            <strong class="kpi-value">{{ kpis.paymentsTotal|number_format(2, '.', ' ') }} TND</strong>
            <span class="kpi-sub">Mois en cours: {{ kpis.paymentsMonth|number_format(2, '.', ' ') }} TND</span>
        </article>
    </div>

    <div class="charts-grid">
        <article class="chart-card chart-card-wide">
            <header><h2><i class="fas fa-chart-line"></i> Activite mensuelle</h2></header>
            <div class="chart-canvas chart-canvas-wide">
                <canvas id="chartActivity"></canvas>
            </div>
        </article>

        <article class="chart-card">
            <header><h2><i class="fas fa-chart-pie"></i> Repartition des roles</h2></header>
            <div class="chart-canvas">
                <canvas id="chartRoles"></canvas>
            </div>
        </article>

        <article class="chart-card">
            <header><h2><i class="fas fa-chart-donut"></i> Statuts demandes manager</h2></header>
            <div class="chart-canvas">
                <canvas id="chartRequests"></canvas>
            </div>
        </article>

        <article class="chart-card">
            <header><h2><i class="fas fa-chart-column"></i> Flux operationnel</h2></header>
            <div class="chart-canvas">
                <canvas id="chartOperations"></canvas>
            </div>
        </article>

        <article class="chart-card">
            <header><h2><i class="fas fa-bolt"></i> Radar engagement</h2></header>
            <div class="chart-canvas">
                <canvas id="chartEngagement"></canvas>
            </div>
        </article>
    </div>

    <div class="tables-grid">
        <article class="table-card">
            <header>
                <h3><i class="fas fa-users"></i> Utilisateurs recents</h3>
                <a href="{{ path('admin_users') }}">Voir tout</a>
            </header>
            <div class="table-wrap">
                <table>
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Role</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in latestUsers %}
                        <tr>
                            <td>#{{ user.id }}</td>
                            <td>{{ user.pseudo ?: user.nom }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.role.value }}</td>
                        </tr>
                    {% else %}
                        <tr><td colspan="4">Aucun utilisateur.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </article>

        <article class="table-card">
            <header>
                <h3><i class="fas fa-gamepad"></i> Equipes recentes</h3>
                <a href="{{ path('admin_equipes') }}">Voir tout</a>
            </header>
            <div class="table-wrap">
                <table>
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Tag</th>
                        <th>Region</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for equipe in latestEquipes %}
                        <tr>
                            <td>#{{ equipe.id }}</td>
                            <td>{{ equipe.nomEquipe }}</td>
                            <td>{{ equipe.tag ?: '-' }}</td>
                            <td>{{ equipe.region ?: '-' }}</td>
                        </tr>
                    {% else %}
                        <tr><td colspan="4">Aucune equipe.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </article>

        <article class="table-card">
            <header>
                <h3><i class="fas fa-fire"></i> Top auteurs du fil</h3>
                <a href="{{ path('fil_admin_post_index') }}">Publications</a>
            </header>
            <ul class="top-list">
                {% for author in topAuthors %}
                    <li>
                        <span class="name">{{ author.name }}</span>
                        <span class="score">{{ author.total }} posts</span>
                    </li>
                {% else %}
                    <li><span class="name">Aucune donnee</span><span class="score">0</span></li>
                {% endfor %}
            </ul>
        </article>

        <article class="table-card">
            <header>
                <h3><i class="fas fa-satellite-dish"></i> Telemetrie rapide</h3>
            </header>
            <ul class="top-list">
                <li><span class="name">Notifications</span><span class="score">{{ kpis.notifications }}</span></li>
                <li><span class="name">Likes</span><span class="score">{{ kpis.likes }}</span></li>
                <li><span class="name">Participations evenements</span><span class="score">{{ kpis.participations }}</span></li>
                <li><span class="name">Paiements ce mois</span><span class="score">{{ kpis.paymentsMonth|number_format(2, '.', ' ') }} TND</span></li>
            </ul>
        </article>
    </div>
</section>

<style>
.holo-dashboard {
    --holo-bg-a: #071220;
    --holo-bg-b: #0f1f35;
    --holo-cyan: #37d5ff;
    --holo-blue: #4b79ff;
    --holo-green: #2ef7b1;
    --holo-amber: #ffd166;
    --holo-red: #ff6b6b;
    color: #e9f4ff;
}
.holo-head {
    display: flex;
    justify-content: space-between;
    gap: 16px;
    align-items: flex-start;
    margin-bottom: 18px;
}
.holo-head h1 {
    margin: 0;
    font-family: Orbitron, sans-serif;
    text-transform: uppercase;
    letter-spacing: 1.2px;
    font-size: 30px;
}
.holo-head p {
    margin: 6px 0 0;
    color: rgba(233, 244, 255, 0.75);
}
.holo-meta {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: flex-end;
}
.meta-chip {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    border-radius: 999px;
    border: 1px solid rgba(55, 213, 255, 0.32);
    background: linear-gradient(160deg, rgba(7, 18, 32, 0.84), rgba(15, 31, 53, 0.78));
    color: #d8eeff;
    text-decoration: none;
}
.meta-chip.action:hover {
    border-color: rgba(46, 247, 177, 0.6);
    color: #b9ffe8;
}
.kpi-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 12px;
}
.kpi-card {
    position: relative;
    padding: 14px;
    border-radius: 14px;
    border: 1px solid rgba(55, 213, 255, 0.22);
    background:
        radial-gradient(circle at top right, rgba(55, 213, 255, 0.14), transparent 40%),
        linear-gradient(170deg, rgba(7, 18, 32, 0.9), rgba(15, 31, 53, 0.8));
    overflow: hidden;
}
.kpi-card::after {
    content: "";
    position: absolute;
    inset: auto -20% -60% -20%;
    height: 120px;
    background: radial-gradient(circle, rgba(75, 121, 255, 0.2), transparent 70%);
    pointer-events: none;
}
.kpi-label {
    display: block;
    color: rgba(233, 244, 255, 0.72);
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.8px;
}
.kpi-value {
    display: block;
    margin-top: 6px;
    font-size: 26px;
    font-weight: 700;
    color: #fff;
}
.kpi-sub {
    display: block;
    margin-top: 4px;
    color: rgba(233, 244, 255, 0.68);
    font-size: 12px;
}
.charts-grid {
    margin-top: 14px;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 12px;
}
.chart-card {
    padding: 14px;
    border-radius: 14px;
    border: 1px solid rgba(75, 121, 255, 0.28);
    background:
        radial-gradient(circle at 15% 15%, rgba(46, 247, 177, 0.08), transparent 30%),
        linear-gradient(165deg, rgba(9, 20, 36, 0.94), rgba(13, 29, 50, 0.86));
}
.chart-card-wide {
    grid-column: span 2;
}
.chart-card header h2 {
    margin: 0 0 10px;
    font-size: 14px;
    color: #d9f3ff;
    display: flex;
    gap: 8px;
    align-items: center;
}
.chart-canvas {
    position: relative;
    width: 100%;
    height: 220px;
}
.chart-canvas-wide {
    height: 190px;
}
.chart-canvas canvas {
    width: 100% !important;
    height: 100% !important;
}
.tables-grid {
    margin-top: 12px;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 12px;
}
.table-card {
    padding: 14px;
    border-radius: 14px;
    border: 1px solid rgba(55, 213, 255, 0.2);
    background: linear-gradient(165deg, rgba(7, 18, 32, 0.92), rgba(12, 29, 47, 0.82));
}
.table-card header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}
.table-card h3 {
    margin: 0;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 8px;
}
.table-card header a {
    color: #8ddfff;
    text-decoration: none;
    font-size: 12px;
}
.table-wrap {
    overflow-x: auto;
}
.table-wrap table {
    width: 100%;
    border-collapse: collapse;
}
.table-wrap th,
.table-wrap td {
    text-align: left;
    padding: 8px 6px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    font-size: 12px;
}
.table-wrap th {
    color: rgba(233, 244, 255, 0.74);
    font-weight: 600;
}
.top-list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 8px;
}
.top-list li {
    display: flex;
    justify-content: space-between;
    padding: 10px 12px;
    border-radius: 10px;
    border: 1px solid rgba(141, 223, 255, 0.18);
    background: rgba(255, 255, 255, 0.02);
}
.top-list .name {
    color: #e4f6ff;
}
.top-list .score {
    color: #8ddfff;
    font-weight: 600;
}
@media (max-width: 1240px) {
    .kpi-grid { grid-template-columns: repeat(2, minmax(0, 1fr)); }
}
@media (max-width: 980px) {
    .charts-grid,
    .tables-grid {
        grid-template-columns: 1fr;
    }
    .chart-card-wide {
        grid-column: auto;
    }
    .chart-canvas {
        height: 200px;
    }
    .chart-canvas-wide {
        height: 200px;
    }
}
@media (max-width: 680px) {
    .holo-head {
        flex-direction: column;
    }
    .holo-meta {
        justify-content: flex-start;
    }
    .kpi-grid {
        grid-template-columns: 1fr;
    }
    .chart-canvas,
    .chart-canvas-wide {
        height: 180px;
    }
}
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
(() => {
    const labels = {{ chartData.labels|json_encode|raw }};
    const activity = {{ chartData.activity|json_encode|raw }};
    const operations = {{ chartData.operations|json_encode|raw }};
    const roles = {{ roleDistribution|json_encode|raw }};
    const requests = {{ requestStatus|json_encode|raw }};
    const paymentStatus = {{ paymentStatus|json_encode|raw }};
    const likes = {{ kpis.likes|default(0)|json_encode|raw }};
    const participations = {{ kpis.participations|default(0)|json_encode|raw }};
    const notifications = {{ kpis.notifications|default(0)|json_encode|raw }};

    const baseOptions = {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                labels: { color: '#cfe9ff' }
            }
        },
        scales: {
            x: {
                ticks: { color: '#cfe9ff' },
                grid: { color: 'rgba(255,255,255,0.08)' }
            },
            y: {
                ticks: { color: '#cfe9ff' },
                grid: { color: 'rgba(255,255,255,0.08)' }
            }
        }
    };

    new Chart(document.getElementById('chartActivity'), {
        type: 'line',
        data: {
            labels,
            datasets: [
                { label: 'Posts', data: activity.posts || [], borderColor: '#37d5ff', backgroundColor: 'rgba(55,213,255,0.2)', fill: true, tension: 0.35 },
                { label: 'Commentaires', data: activity.comments || [], borderColor: '#4b79ff', backgroundColor: 'rgba(75,121,255,0.16)', fill: true, tension: 0.35 },
                { label: 'Annonces', data: activity.announcements || [], borderColor: '#2ef7b1', backgroundColor: 'rgba(46,247,177,0.14)', fill: true, tension: 0.35 }
            ]
        },
        options: baseOptions
    });

    new Chart(document.getElementById('chartRoles'), {
        type: 'doughnut',
        data: {
            labels: Object.keys(roles),
            datasets: [{
                data: Object.values(roles),
                backgroundColor: ['#37d5ff', '#4b79ff', '#2ef7b1', '#ffd166', '#ff6b6b', '#6a89ff']
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { labels: { color: '#cfe9ff' } } }
        }
    });

    new Chart(document.getElementById('chartRequests'), {
        type: 'polarArea',
        data: {
            labels: ['Pending', 'Accepted', 'Rejected'],
            datasets: [{
                data: [requests.pending || 0, requests.accepted || 0, requests.rejected || 0],
                backgroundColor: ['rgba(255, 209, 102, 0.62)', 'rgba(46, 247, 177, 0.62)', 'rgba(255, 107, 107, 0.62)']
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { labels: { color: '#cfe9ff' } } },
            scales: { r: { grid: { color: 'rgba(255,255,255,0.08)' }, ticks: { color: '#cfe9ff' } } }
        }
    });

    new Chart(document.getElementById('chartOperations'), {
        type: 'bar',
        data: {
            labels,
            datasets: [
                { label: 'Demandes', data: operations.requests || [], backgroundColor: 'rgba(255, 209, 102, 0.78)' },
                { label: 'Paiements', data: operations.payments || [], backgroundColor: 'rgba(75, 121, 255, 0.78)' },
                { label: 'Equipes', data: operations.teams || [], backgroundColor: 'rgba(46, 247, 177, 0.78)' },
                { label: 'Tournois', data: operations.tournois || [], backgroundColor: 'rgba(55, 213, 255, 0.78)' },
                { label: 'Notifications', data: operations.notifications || [], backgroundColor: 'rgba(255, 107, 107, 0.68)' }
            ]
        },
        options: baseOptions
    });

    new Chart(document.getElementById('chartEngagement'), {
        type: 'radar',
        data: {
            labels: ['Likes', 'Commentaires', 'Participations', 'Notifications', 'Paiements'],
            datasets: [{
                label: 'Engagement global',
                data: [likes, {{ kpis.comments|default(0) }}, participations, notifications, {{ kpis.paymentsCount|default(0) }}],
                borderColor: '#37d5ff',
                backgroundColor: 'rgba(55, 213, 255, 0.2)',
                pointBackgroundColor: '#2ef7b1'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { labels: { color: '#cfe9ff' } } },
            scales: { r: { angleLines: { color: 'rgba(255,255,255,0.08)' }, grid: { color: 'rgba(255,255,255,0.08)' }, pointLabels: { color: '#cfe9ff' }, ticks: { color: '#cfe9ff', backdropColor: 'transparent' } } }
        }
    });
})();
</script>
{% endblock %}
