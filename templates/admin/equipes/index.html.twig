{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Équipes - Admin{% endblock %}
{% block page_title %}Gestion des Équipes{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-pagination-wrap {
            margin-top: 18px;
            display: flex;
            justify-content: center;
        }
        .admin-pagination {
            display: inline-flex !important;
            align-items: center !important;
            gap: 8px !important;
            padding: 10px 12px !important;
            border-radius: 14px !important;
            border: 1px solid rgba(79, 209, 255, 0.24) !important;
            background: rgba(8, 14, 30, 0.72) !important;
            backdrop-filter: blur(10px);
        }
        .admin-pagination-btn,
        .admin-pagination-page {
            min-width: 36px !important;
            height: 36px !important;
            padding: 0 12px !important;
            display: inline-flex !important;
            align-items: center !important;
            justify-content: center !important;
            border-radius: 10px !important;
            border: 1px solid rgba(255, 255, 255, 0.13) !important;
            background: rgba(255, 255, 255, 0.06) !important;
            color: #dbe7ff !important;
            text-decoration: none !important;
            font-weight: 700 !important;
            line-height: 1 !important;
        }
        .admin-pagination-page.is-active {
            border-color: rgba(56, 189, 248, 0.65) !important;
            background: linear-gradient(135deg, rgba(34, 211, 238, 0.32), rgba(59, 130, 246, 0.34)) !important;
            color: #fff !important;
        }
        .admin-pagination-btn.is-disabled {
            opacity: .35 !important;
            pointer-events: none !important;
        }
    </style>
{% endblock %}

{% block body %}
<section class="admin-tournament-hero">
    <div class="admin-tournament-hero-inner">
        <div class="admin-tournament-kicker">Admin</div>
        <h2 class="admin-tournament-title">Gestion des Équipes</h2>
        <p class="admin-tournament-lead">Centralisez les équipes, leurs tags et leur visibilité.</p>
        <div class="admin-tournament-hero-actions">
            <a href="{{ path('admin_equipes') }}" class="admin-tournament-btn ghost">
                <i class="fas fa-rotate"></i> Rafraîchir
            </a>
            <a href="{{ path('app_equipes_new') }}" class="admin-tournament-btn">
                <i class="fas fa-plus"></i> Ajouter équipe
            </a>
        </div>
    </div>
    <div class="admin-tournament-hero-glow"></div>
</section>

<section class="admin-tournament-shell">
    <div class="admin-tournament-tabs">
        <a href="{{ path('admin_equipes', app.request.query.all | merge({'visibility': ''})) }}"
           class="tab {{ currentVisibility is empty ? 'active' : '' }}">Tous</a>
        <a href="{{ path('admin_equipes', app.request.query.all | merge({'visibility': 'public'})) }}"
           class="tab {{ currentVisibility == 'public' ? 'active' : '' }}">Public</a>
        <a href="{{ path('admin_equipes', app.request.query.all | merge({'visibility': 'private'})) }}"
           class="tab {{ currentVisibility == 'private' ? 'active' : '' }}">Privé</a>
    </div>

    <div class="admin-tournament-panel">
        <div class="admin-tournament-panel-title">
            <i class="fas fa-search"></i>
            Recherche avancée
        </div>
        <form method="GET" class="admin-tournament-form">
            <div class="field">
                <label>Nom ou tag</label>
                <input type="text" name="q" placeholder="ex: Vitality, VIT..." value="{{ currentQuery }}">
            </div>
            <div class="field">
                <label>Région</label>
                <select name="region">
                    <option value="">-- Toutes --</option>
                    {% for reg in ['Africa', 'Asia', 'Europe', 'Middle East', 'North America', 'South America', 'Oceania'] %}
                        <option value="{{ reg }}" {% if currentRegion == reg %}selected{% endif %}>{{ reg }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="field">
                <label>Visibilité</label>
                <select name="visibility">
                    <option value="">-- Tous --</option>
                    <option value="public" {% if currentVisibility == 'public' %}selected{% endif %}>Public</option>
                    <option value="private" {% if currentVisibility == 'private' %}selected{% endif %}>Privé</option>
                </select>
            </div>
            <div class="admin-tournament-actions">
                <button type="submit" class="admin-tournament-btn">
                    <i class="fas fa-search"></i> Rechercher
                </button>
                <a href="{{ path('admin_equipes') }}" class="admin-tournament-btn ghost">
                    <i class="fas fa-rotate"></i> Réinitialiser
                </a>
            </div>
        </form>

        <div class="admin-tournament-sort">
            <span>Trier :</span>
            <a href="{{ path('admin_equipes', app.request.query.all | merge({'sort':'nomEquipe','direction':'ASC'})) }}">Nom A→Z</a>
            <a href="{{ path('admin_equipes', app.request.query.all | merge({'sort':'nomEquipe','direction':'DESC'})) }}">Nom Z→A</a>
            <a href="{{ path('admin_equipes', app.request.query.all | merge({'sort':'dateCreation','direction':'DESC'})) }}">Date ↓</a>
            <a href="{{ path('admin_equipes', app.request.query.all | merge({'sort':'dateCreation','direction':'ASC'})) }}">Date ↑</a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="admin-tournament-alert success">
            <i class="fas fa-check-circle"></i> {{ message }}
        </div>
    {% endfor %}

    {% if equipes|length > 0 %}
        <div class="admin-tournament-table">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Équipe</th>
                        <th>Tag</th>
                        <th>Région</th>
                        <th>Membres</th>
                        <th>Visibilité</th>
                        <th>Signalements</th>
                        <th>Statut</th>
                        <th>Créée</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for equipe in equipes %}
                        <tr style="animation-delay: {{ loop.index0 * 0.05 }}s;" class="admin-tournament-row">
                            <td>#{{ equipe.id }}</td>
                            <td class="name">
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    {% if equipe.logo %}
                                        <img src="{{ asset('uploads/equipes/' ~ equipe.logo) }}" alt="Logo" style="width: 32px; height: 32px; border-radius: 10px; object-fit: cover;">
                                    {% else %}
                                        <div class="avatar-circle" style="width: 32px; height: 32px; font-size: 12px;">{{ equipe.nomEquipe|first|upper }}</div>
                                    {% endif %}
                                    <span>{{ equipe.nomEquipe }}</span>
                                </div>
                            </td>
                            <td><span class="badge badge-info">{{ equipe.tag }}</span></td>
                            <td>{{ equipe.region|default('-') }}</td>
                            <td>{{ equipe.membres|length }}</td>
                            <td>
                                {% if equipe.isPrivate %}
                                    <span class="badge badge-danger">Privé</span>
                                {% else %}
                                    <span class="badge badge-success">Public</span>
                                {% endif %}
                            </td>
                            <td>
                                {% set reportCount = reportCounts[equipe.id]|default(0) %}
                                <span class="badge {{ reportCount > 0 ? 'badge-info' : 'badge-success' }}">{{ reportCount }}</span>
                            </td>
                            <td>
                                {% if equipe.isActive %}
                                    <span class="badge badge-success">Active</span>
                                {% else %}
                                    <span class="badge badge-danger">Suspendue</span>
                                    {% if equipe.suspendedUntil %}
                                        <div style="font-size: 11px; color: var(--text-secondary); margin-top: 6px;">
                                            Active le {{ equipe.suspendedUntil|date('d/m/Y H:i') }}
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </td>
                            <td>{{ equipe.dateCreation ? equipe.dateCreation|date('d/m/Y') : 'N/A' }}</td>
                            <td>
                                <div class="admin-tournament-row-actions">
                                    <a href="{{ path('app_equipes_show', {'id': equipe.id}) }}" class="admin-tournament-icon" title="Voir" target="_blank">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_equipes_edit', {'id': equipe.id}) }}" class="admin-tournament-icon cyan" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {% if equipe.isActive %}
                                        <a href="{{ path('admin_equipes_suspend', {'id': equipe.id}) }}" class="admin-tournament-icon" title="Suspendre">
                                            <i class="fas fa-ban"></i>
                                        </a>
                                    {% else %}
                                        <form method="post" action="{{ path('admin_equipes_toggle', {'id': equipe.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ equipe.id) }}">
                                            <button type="submit" class="admin-tournament-icon" title="Réactiver">
                                                <i class="fas fa-rotate"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form method="post" action="{{ path('admin_equipes_delete', {'id': equipe.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette équipe ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">
                                        <button type="submit" class="admin-tournament-icon danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="admin-pagination-wrap">
            {{ knp_pagination_render(equipes, 'admin/_pagination.html.twig') }}
        </div>
    {% else %}
        <div class="admin-tournament-empty">
            <div class="empty-ring"></div>
            <strong>Aucune équipe trouvée</strong>
            <p>Essayez d'ajuster vos filtres de recherche.</p>
        </div>
    {% endif %}
</section>

{% endblock %}
