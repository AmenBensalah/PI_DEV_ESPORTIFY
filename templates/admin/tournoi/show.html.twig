{% extends 'admin/layout.html.twig' %}

{% block title %}Details du Tournoi - Admin{% endblock %}
{% block page_title %}Details du Tournoi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-tournament-show-grid {
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 14px;
        }

        .admin-tournament-show-item {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 12px;
            padding: 14px;
            display: grid;
            gap: 8px;
        }

        .admin-tournament-show-label {
            color: var(--text-muted);
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            font-weight: 600;
        }

        .admin-tournament-show-value {
            color: #fff;
            font-size: 21px;
            font-weight: 700;
            line-height: 1.3;
        }

        .admin-tournament-show-value.sm {
            font-size: 18px;
            font-weight: 600;
        }

        .admin-tournament-show-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            align-items: center;
            justify-content: flex-end;
        }

        .admin-tournament-show-footer {
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
            display: flex;
            justify-content: flex-start;
        }

        .admin-participants-toggle {
            margin-top: 12px;
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 10px;
        }

        .admin-participants-list {
            margin-top: 12px;
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 12px;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.03);
        }

        .admin-participants-list[hidden] {
            display: none !important;
        }

        .admin-participants-table {
            width: 100%;
            border-collapse: collapse;
        }

        .admin-participants-table th,
        .admin-participants-table td {
            padding: 12px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            color: #fff;
            text-align: left;
            font-size: 14px;
        }

        .admin-participants-table th {
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.6px;
            font-size: 12px;
        }

        .admin-participants-table tr:last-child td {
            border-bottom: none;
        }

        .admin-participants-empty {
            padding: 14px;
            color: var(--text-muted);
            font-size: 14px;
        }

        @media (max-width: 980px) {
            .admin-tournament-show-grid {
                grid-template-columns: 1fr;
            }

            .admin-tournament-show-actions {
                justify-content: flex-start;
            }
        }
    </style>
{% endblock %}

{% block body %}
<section class="admin-tournament-hero">
    <div class="admin-tournament-hero-inner">
        <div class="admin-tournament-kicker">Admin</div>
        <h2 class="admin-tournament-title">{{ tournoi.name }}</h2>
        <p class="admin-tournament-lead">Consultez les caracteristiques completes du tournoi.</p>

        {% if not readonly|default(false) %}
            <div class="admin-tournament-show-actions">
                <a href="{{ path('admin_tournoi_planning', {id: tournoi.idTournoi}) }}" class="admin-tournament-btn ghost">
                    <i class="fas fa-calendar-alt"></i> Planning
                </a>
                {% if tournoi.currentStatus == 'planned' %}
                    <a href="{{ path('admin_tournoi_edit', {id: tournoi.idTournoi}) }}" class="admin-tournament-btn">
                        <i class="fas fa-edit"></i> Editer
                    </a>
                {% endif %}
                <form method="POST" action="{{ path('admin_tournoi_delete', {id: tournoi.idTournoi}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce tournoi ?');">
                    <button type="submit" class="admin-tournament-btn ghost" style="border-color: rgba(247, 37, 133, 0.45); color: #ff8ab8; background: rgba(247, 37, 133, 0.12);">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        {% endif %}

        <div class="admin-participants-toggle">
            <button
                type="button"
                class="admin-tournament-btn ghost"
                id="participants-toggle-btn"
                aria-expanded="false"
                aria-controls="participants-list"
            >
                <i class="fas fa-users"></i> Voir les participants ({{ tournoi.participants|length }})
            </button>

            {% if tournoi.typeTournoi == 'solo' %}
                <button
                    type="button"
                    class="admin-tournament-btn ghost"
                    id="prediction-toggle-btn"
                    data-prediction-toggle-target="solo-prediction-body-{{ tournoi.idTournoi }}"
                    aria-expanded="true"
                    aria-controls="solo-prediction-body-{{ tournoi.idTournoi }}"
                >
                    <i class="fas fa-eye-slash"></i>
                    <span data-label>Masquer la prediction</span>
                </button>
            {% endif %}
        </div>
    </div>
    <div class="admin-tournament-hero-glow"></div>
</section>

<section class="admin-tournament-shell">
    <div class="admin-tournament-panel">
        <div class="admin-tournament-panel-title">
            <i class="fas fa-circle-info"></i>
            Informations du tournoi
        </div>

        <div class="admin-tournament-show-grid">
            <div class="admin-tournament-show-item">
                <span class="admin-tournament-show-label">Type de jeu</span>
                <span><span class="badge badge-info">{{ tournoi.typeGame }}</span></span>
            </div>

            <div class="admin-tournament-show-item">
                <span class="admin-tournament-show-label">Type de tournoi</span>
                <span><span class="badge badge-success">{{ tournoi.typeTournoi|upper }}</span></span>
            </div>

            <div class="admin-tournament-show-item">
                <span class="admin-tournament-show-label">Jeu</span>
                <span class="admin-tournament-show-value sm">{{ tournoi.game }}</span>
            </div>

            <div class="admin-tournament-show-item">
                <span class="admin-tournament-show-label">Statut</span>
                <span>
                    {% if tournoi.currentStatus == 'planned' %}
                        <span class="badge badge-warn">Planifie</span>
                    {% elseif tournoi.currentStatus == 'ongoing' %}
                        <span class="badge badge-success">En cours</span>
                    {% else %}
                        <span class="badge badge-info">Termine</span>
                    {% endif %}
                </span>
            </div>

            <div class="admin-tournament-show-item">
                <span class="admin-tournament-show-label">Date de debut</span>
                <span class="admin-tournament-show-value sm">{{ tournoi.startDate|date('d/m/Y H:i') }}</span>
            </div>

            <div class="admin-tournament-show-item">
                <span class="admin-tournament-show-label">Date de fin</span>
                <span class="admin-tournament-show-value sm">{{ tournoi.endDate|date('d/m/Y H:i') }}</span>
            </div>

            <div class="admin-tournament-show-item">
                <span class="admin-tournament-show-label">Dotation</span>
                <span class="admin-tournament-show-value">${{ tournoi.prizeWon }}</span>
            </div>

            <div class="admin-tournament-show-item">
                <span class="admin-tournament-show-label">Places restantes</span>
                <span class="admin-tournament-show-value sm">
                    {% if tournoi.remainingPlaces is null %}
                        8
                    {% else %}
                        {{ tournoi.remainingPlaces }} / {{ tournoi.maxPlaces }}
                    {% endif %}
                </span>
            </div>
        </div>

        {% include 'tournoi/_solo_prediction_panel.html.twig' with {
            tournoi: tournoi,
            prediction: soloPrediction,
            showInternalToggle: false,
            predictionPanelId: 'solo-prediction-body-' ~ tournoi.idTournoi
        } only %}

        {% if tournoi.resultat %}
            <div class="admin-tournament-panel" style="margin-top: 14px;">
                <div class="admin-tournament-panel-title">
                    <i class="fas fa-trophy"></i>
                    Resultats
                </div>
                <div class="admin-tournament-show-grid">
                    <div class="admin-tournament-show-item">
                        <span class="admin-tournament-show-label">Classement</span>
                        <span class="admin-tournament-show-value sm">{{ tournoi.resultat.rank }}</span>
                    </div>
                    <div class="admin-tournament-show-item">
                        <span class="admin-tournament-show-label">Score</span>
                        <span class="admin-tournament-show-value sm">{{ tournoi.resultat.score }}</span>
                    </div>
                </div>
            </div>
        {% endif %}

        <div id="participants-list" class="admin-participants-list" hidden>
            {% if tournoi.participants|length > 0 %}
                <table class="admin-participants-table">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Pseudo</th>
                            <th>Email</th>
                            {% if tournoi.typeTournoi == 'squad' %}
                                <th>Equipe</th>
                            {% endif %}
                            <th>Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for participant in tournoi.participants %}
                            <tr>
                                <td>{{ participant.nom }}</td>
                                <td>{{ participant.pseudo ? participant.pseudo : '-' }}</td>
                                <td>{{ participant.email }}</td>
                                {% if tournoi.typeTournoi == 'squad' %}
                                    <td>{{ participantTeams[participant.id]|default('-') }}</td>
                                {% endif %}
                                <td>{{ participantScores[participant.id]|default(0) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="admin-participants-empty">Aucun participant pour ce tournoi.</div>
            {% endif %}
        </div>

        <div class="admin-tournament-show-footer">
            <a href="{{ path(backRoute|default('admin_tournoi_index')) }}" class="admin-tournament-btn ghost">
                <i class="fas fa-arrow-left"></i> Retour a la liste
            </a>
        </div>
    </div>
</section>

<script>
    (function () {
        const toggleBtn = document.getElementById('participants-toggle-btn');
        const participantsList = document.getElementById('participants-list');
        const predictionToggleBtn = document.getElementById('prediction-toggle-btn');

        if (!toggleBtn || !participantsList) {
            return;
        }

        toggleBtn.addEventListener('click', function () {
            const isHidden = participantsList.hasAttribute('hidden');

            if (isHidden) {
                participantsList.removeAttribute('hidden');
                toggleBtn.setAttribute('aria-expanded', 'true');
                toggleBtn.innerHTML = '<i class="fas fa-users"></i> Masquer les participants ({{ tournoi.participants|length }})';
            } else {
                participantsList.setAttribute('hidden', '');
                toggleBtn.setAttribute('aria-expanded', 'false');
                toggleBtn.innerHTML = '<i class="fas fa-users"></i> Voir les participants ({{ tournoi.participants|length }})';
            }
        });

        if (predictionToggleBtn) {
            predictionToggleBtn.addEventListener('click', function () {
                const targetId = predictionToggleBtn.getAttribute('data-prediction-toggle-target');
                const target = targetId ? document.getElementById(targetId) : null;
                const label = predictionToggleBtn.querySelector('[data-label]');
                const icon = predictionToggleBtn.querySelector('i');

                if (!target) {
                    return;
                }

                const isHidden = target.hasAttribute('hidden');
                if (isHidden) {
                    target.removeAttribute('hidden');
                    predictionToggleBtn.setAttribute('aria-expanded', 'true');
                    if (label) {
                        label.textContent = 'Masquer la prediction';
                    }
                    if (icon) {
                        icon.className = 'fas fa-eye-slash';
                    }
                    return;
                }

                target.setAttribute('hidden', '');
                predictionToggleBtn.setAttribute('aria-expanded', 'false');
                if (label) {
                    label.textContent = 'Afficher la prediction';
                }
                if (icon) {
                    icon.className = 'fas fa-eye';
                }
            });
        }
    })();
</script>
{% endblock %}
