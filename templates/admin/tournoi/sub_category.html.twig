{% extends 'admin/layout.html.twig' %}

{% block title %}{{ category }} - {{ subCategory|upper }} Tournois - Admin{% endblock %}
{% block page_title %}{{ category }} - {{ subCategory|upper }}{% endblock %}

{% block body %}
<div style="margin-bottom: 30px;">
    <a href="{{ path('admin_tournoi_by_category', {typeGame: category}) }}" class="btn" style="background: rgba(255,255,255,0.1); padding: 10px 15px; border-radius: 8px; text-decoration: none;">
        <i class="fas fa-arrow-left"></i> Retour
    </a>
</div>

{% if tournois %}
    <div class="stat-card">
        <div class="admin-table-container">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Jeu</th>
                        <th>Statut</th>
                        <th>Début</th>
                        <th>Fin</th>
                        <th>Prix</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tournoi in tournois %}
                        <tr>
                            <td style="font-weight: 600;">{{ tournoi.name }}</td>
                            <td>{{ tournoi.game }}</td>
                            <td>
                                {% if tournoi.status == 'planned' %}
                                    <span class="badge badge-warning">Planifié</span>
                                {% elseif tournoi.status == 'ongoing' %}
                                    <span class="badge badge-success">En cours</span>
                                {% else %}
                                    <span class="badge badge-info">Terminé</span>
                                {% endif %}
                            </td>
                            <td>{{ tournoi.startDate|date('d/m/Y H:i') }}</td>
                            <td>{{ tournoi.endDate|date('d/m/Y H:i') }}</td>
                            <td>${{ tournoi.prizeWon }}</td>
                            <td>
                                <div style="display: flex; gap: 8px;">
                                    <a href="{{ path('admin_tournoi_show', {id: tournoi.idTournoi}) }}" class="btn btn-primary" style="padding: 8px 12px; font-size: 12px;">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_tournoi_edit', {id: tournoi.idTournoi}) }}" class="btn btn-primary" style="padding: 8px 12px; font-size: 12px; background: var(--primary-cyan); color: #000;">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% else %}
    <div class="stat-card" style="text-align: center; padding: 40px;">
        <i class="fas fa-inbox" style="font-size: 48px; color: var(--text-muted); margin-bottom: 15px; display: block;"></i>
        <p style="color: var(--text-muted);">Aucun tournoi {{ category }} - {{ subCategory|upper }} trouvé</p>
    </div>
{% endif %}
{% endblock %}
