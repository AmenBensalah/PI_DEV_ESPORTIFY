{% extends 'admin/layout.html.twig' %}

{% block title %}Dashboard - Admin Panel{% endblock %}
{% block page_title %}Vue d'ensemble{% endblock %}

{% block body %}
    <!-- Stats Cards -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 30px; margin-bottom: 40px;">
        <!-- Card 1: Purple Gradient -->
        <div class="stat-card card-gradient-purple">
            <div style="margin-bottom: 10px; color: rgba(255,255,255,0.8); font-size: 14px;">Équipes Inscrites</div>
            <div style="font-size: 42px; font-weight: 700; margin-bottom: 5px;">{{ equipeCount }}</div>
            <div style="font-size: 13px; color: rgba(255,255,255,0.7);">
                <i class="fas fa-arrow-up"></i> +12% this week
            </div>
            <!-- Decorative curve/blob could go here -->
        </div>

        <!-- Card 2: Blue Gradient -->
        <div class="stat-card card-gradient-blue">
            <div style="margin-bottom: 10px; color: rgba(255,255,255,0.8); font-size: 14px;">Utilisateurs Actifs</div>
            <div style="font-size: 42px; font-weight: 700; margin-bottom: 5px;">{{ userCount }}</div>
            <div style="font-size: 13px; color: rgba(255,255,255,0.7);">
                <i class="fas fa-arrow-up"></i> +5% this week
            </div>
        </div>

        <!-- Card 3: Standard Panel -->
        <div class="stat-card">
            <div style="display: flex; justify-content: space-between; align-items: start;">
                 <div>
                    <div style="margin-bottom: 10px; color: var(--text-muted); font-size: 14px;">Signalements</div>
                    <div style="font-size: 32px; font-weight: 700; color: #fff; margin-bottom: 5px;">{{ reportCount }}</div>
                    <div style="font-size: 13px; color: var(--primary-pink);">En attente</div>
                 </div>
                 <div style="width: 50px; height: 50px; border-radius: 12px; background: rgba(247, 37, 133, 0.1); display: flex; align-items: center; justify-content: center;">
                     <i class="fas fa-flag" style="color: var(--primary-pink); font-size: 24px;"></i>
                 </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="stat-card">
        <h3 style="font-family: 'Orbitron', sans-serif; font-size: 18px; margin-bottom: 20px;">Activité Récente</h3>
        <ul style="list-style: none; padding: 0; margin: 0;">
            <li style="display: flex; align-items: center; padding: 15px 0; border-bottom: 1px solid rgba(255,255,255,0.05);">
                <div style="width: 35px; height: 35px; border-radius: 50%; background: var(--primary-blue); display: flex; align-items: center; justify-content: center; margin-right: 15px;">
                    <i class="fas fa-plus" style="font-size: 14px;"></i>
                </div>
                <div style="flex: 1;">
                    <span style="font-weight: 600;">Nouvelle équipe créée</span>
                    <div style="color: var(--text-secondary); font-size: 13px;">L'équipe "Omega Squad" vient de s'inscrire</div>
                </div>
                <div style="color: var(--text-secondary); font-size: 13px;">Il y a 2h</div>
            </li>
            <li style="display: flex; align-items: center; padding: 15px 0; border-bottom: 1px solid rgba(255,255,255,0.05);">
                <div style="width: 35px; height: 35px; border-radius: 50%; background: var(--primary-pink); display: flex; align-items: center; justify-content: center; margin-right: 15px;">
                    <i class="fas fa-user-plus" style="font-size: 14px;"></i>
                </div>
                <div style="flex: 1;">
                    <span style="font-weight: 600;">Nouveau manager</span>
                    <div style="color: var(--text-secondary); font-size: 13px;">User "JohnDoe" a demandé à devenir manager</div>
                </div>
                <div style="color: var(--text-secondary); font-size: 13px;">Il y a 4h</div>
            </li>
        </ul>
    </div>
{% endblock %}
