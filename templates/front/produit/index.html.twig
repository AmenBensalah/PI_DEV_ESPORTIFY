<script>
    document.addEventListener('DOMContentLoaded', () => {
        const scanner = document.getElementById('product-scanner-overlay');
        const closeScan = document.getElementById('close-scanner');
        
        // Scan Trigger
        document.addEventListener('click', (e) => {
            const btn = e.target.closest('.scan-trigger-btn');
            if (btn) {
                const data = btn.dataset;
                document.getElementById('scan-id').textContent = '#' + data.productId.padStart(3, '0');
                document.getElementById('scan-name').textContent = data.productName.toUpperCase();
                document.getElementById('scan-price').textContent = data.productPrice;
                document.getElementById('scan-img').src = data.productImage;
                document.getElementById('scan-view-btn').href = `/produits/${data.productId}`;

                scanner.classList.add('active');
                scanner.classList.remove('ready');
                
                // Simulate processing
                setTimeout(() => {
                    scanner.classList.add('ready');
                }, 1800);
            }
        });

        closeScan.addEventListener('click', () => {
            scanner.classList.remove('active');
            scanner.classList.remove('ready');
        });
        const grid = document.getElementById('product-grid');
        const form = document.getElementById('shop-filter-form');
        
        // Inputs
        const qInput = document.getElementById('live-search-input');
        const catInput = document.getElementById('filter-categorie');
        const catSelect = document.getElementById('filter-category-select');
        const sortInput = document.getElementById('filter-sort');
        const dirInput = document.getElementById('filter-dir');

        let debounceTimer;

        const fetchProducts = () => {
            const formData = new FormData(form);
            const params = new URLSearchParams(formData);

            grid.style.opacity = '0.5';

            fetch(`${window.location.pathname}?${params.toString()}`, {
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
            .then(res => res.text())
            .then(html => {
                grid.innerHTML = html;
                grid.style.opacity = '1';
                
                const newUrl = `${window.location.pathname}?${params.toString()}`;
                window.history.pushState({path: newUrl}, '', newUrl);
            })
            .catch(err => {
                console.error(err);
                grid.style.opacity = '1';
            });
        };

        // Live Search
        qInput.addEventListener('input', () => {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(fetchProducts, 400);
        });

        // Category Select (Sidebar)
        catSelect.addEventListener('change', () => {
             catInput.value = catSelect.value;
             // Also update tabs active state
             document.querySelectorAll('.shop-tabs .tab').forEach(t => t.classList.remove('active'));
             const activeTab = document.querySelector(`.shop-tabs .tab[href*="categorie=${catSelect.value}"]`);
             if(activeTab) activeTab.classList.add('active');
             
             fetchProducts();
        });

        // Category Tabs (Top)
        document.querySelectorAll('.shop-tabs .a, .shop-tabs .tab').forEach(tab => {
            tab.addEventListener('click', (e) => {
                e.preventDefault();
                // Parse cat ID from href or rely on index
                // Since user wants AJAX, let's extract ID from the loop or attribute
                // NOTE: The previous code generated hrefs. We should intercept them.
                
                // Let's rely on URL params in href if possible, or better, add data attributes to the tabs in HTML first.
                // Assuming standard behaviour:
                const url = new URL(tab.href, window.location.origin);
                const catId = url.searchParams.get('categorie') || '';
                
                catInput.value = catId;
                catSelect.value = catId;
                
                document.querySelectorAll('.shop-tabs .tab').forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                fetchProducts();
            });
        });

        // Sorting
        const sortBtn = document.querySelector('.sort-btn');
        const sortMenu = document.querySelector('.sort-menu');
        
        if (sortBtn) {
            sortBtn.addEventListener('click', (e) => {
                e.preventDefault();
                e.stopPropagation();
                sortMenu.classList.toggle('show');
            });
        }
        
        document.addEventListener('click', () => {
            if(sortMenu) sortMenu.classList.remove('show');
        });

        document.querySelectorAll('.sort-menu a').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                sortInput.value = link.dataset.sort;
                dirInput.value = link.dataset.dir || 'ASC';
                
                document.querySelectorAll('.sort-menu a').forEach(l => l.classList.remove('active'));
                link.classList.add('active');
                
                sortBtn.innerHTML = link.textContent + ' <i class="fas fa-chevron-down"></i>';
                fetchProducts();
            });
        });

        // Reset
        document.getElementById('filter-reset').addEventListener('click', () => {
            qInput.value = '';
            catInput.value = '';
            catSelect.value = '';
            sortInput.value = 'p.id'; 
            dirInput.value = 'ASC';
            fetchProducts();
        });
        
        document.getElementById('filter-apply').addEventListener('click', fetchProducts);
    });
</script>

<!-- CHATBOT INTEGRATION FOR STORE PAGE -->
<button id="chatbot-toggle-store" class="chatbot-btn" style="display: flex !important; position: fixed !important; top: 130px !important; bottom: auto !important; right: 20px !important; z-index: 2147483647 !important; width: 70px !important; height: 70px !important; opacity: 1 !important; visibility: visible !important;">
