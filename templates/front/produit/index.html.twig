{% extends 'base.html.twig' %}

{% block title %}Boutique – E-Sportify{% endblock %}

{% block body %}
<section class="shop-hero">
    <div class="shop-hero-inner">
        <div class="shop-kicker">Boutique</div>
        <h1 class="shop-title">Boutique Premium</h1>
        <p class="shop-lead">Équipez-vous avec le meilleur matériel officiel E‑Sportify.</p>
    </div>
    <div class="shop-hero-glow"></div>
</section>

<section class="shop-shell" data-controller="filter">
    {% for message in app.flashes('success') %}
        <div class="flash-success" role="status" aria-live="polite" style="margin: 12px 0;">
            <i class="fas fa-check-circle" style="color: var(--success-color); font-size: 18px; margin-right:10px;"></i>
            <span style="color: var(--success-color); font-weight:600;">{{ message }}</span>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="flash-error" role="status" aria-live="polite" style="margin:12px 0; background: rgba(255,0,110,0.06); border:1px solid var(--primary-pink); padding:10px 12px; border-radius:8px;">
            <i class="fas fa-exclamation-circle" style="color: var(--primary-pink); font-size: 18px; margin-right:10px;"></i>
            <span style="color: var(--primary-pink); font-weight:600;">{{ message }}</span>
        </div>
    {% endfor %}

    <div class="shop-toolbar">
        <div class="admin-tournament-tabs shop-tabs">
            <a href="{{ path('app_front_produit_index') }}" class="tab {{ current_category is empty ? 'active' : '' }}">
                <i class="fas fa-th-large"></i> Tous
            </a>
            {% for cat in categories %}
                <a href="{{ path('app_front_produit_index', { 'categorie': cat.id, 'q': current_search, 'sort': current_sort, 'dir': current_dir }) }}"
                   class="tab {{ current_category == cat.id ? 'active' : '' }}">
                    {{ cat.nom|upper }}
                </a>
            {% endfor %}
        </div>

        <div class="sort-dropdown shop-sort">
            <button class="sort-btn">Trier par <i class="fas fa-chevron-down"></i></button>
            <div class="sort-menu">
                <a href="#" data-sort="price" data-dir="asc" class="{{ current_sort|default('') == 'p.prix' and current_dir|default('') == 'ASC' ? 'active' : '' }}">Prix Croissant</a>
                <a href="#" data-sort="price" data-dir="desc" class="{{ current_sort|default('') == 'p.prix' and current_dir|default('') == 'DESC' ? 'active' : '' }}">Prix Décroissant</a>
                <a href="#" data-sort="name" data-dir="asc" class="{{ current_sort|default('') == 'p.nom' ? 'active' : '' }}">Nom (A‑Z)</a>
            </div>
        </div>

        <a href="{{ path('app_front_recommendations_stats') }}" class="ai-stats-btn" title="Voir les données collectées pour l'IA">
            <i class="fas fa-chart-line"></i>
            <span>Données IA</span>
        </a>
    </div>

    <div class="shop-layout">
        <aside class="shop-filters">
            <div class="admin-tournament-panel">
                <div class="admin-tournament-panel-title">
                    <i class="fa-solid fa-filter"></i>
                    Recherche avancée
                </div>
                <form id="shop-filter-form" class="admin-tournament-form" onsubmit="return false;">
                    <div class="field">
                        <label><i class="fa-solid fa-magnifying-glass"></i> Rechercher</label>
                        <input id="live-search-input" name="q" type="search" placeholder="Nom du produit" value="{{ current_search|default('') }}" autocomplete="off">
                    </div>
                    <!-- Hidden fields for sorting/category passed from tabs -->
                    <input type="hidden" name="categorie" id="filter-categorie" value="{{ current_category }}">
                    <input type="hidden" name="sort" id="filter-sort" value="{{ current_sort }}">
                    <input type="hidden" name="dir" id="filter-dir" value="{{ current_dir }}">
                    <input type="hidden" name="ajax" value="1">

                    <div class="field">
                        <label><i class="fa-solid fa-tags"></i> Catégorie (Select)</label>
                        <select id="filter-category-select">
                            <option value="">Toutes</option>
                            {% for cat in categories %}
                                <option value="{{ cat.id }}" {{ current_category == cat.id ? 'selected' : '' }}>{{ cat.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="admin-tournament-actions shop-filter-actions">
                        <button type="button" id="filter-apply" class="admin-tournament-btn">Rechercher</button>
                        <button type="button" id="filter-reset" class="admin-tournament-btn ghost">Réinitialiser</button>
                    </div>
                </form>
            </div>
        </aside>

        <div class="shop-grid" id="product-grid">
            {% include 'front/produit/_grid.html.twig' with {'produits': produits} %}
        </div>
    </div>

    {# AI RECOMMENDATIONS #}
    {% if app.user and recommendations is defined and recommendations|length > 0 %}
    <section class="recommendations-section">
        <div class="recommendations-header">
            <div class="recommendations-title">
                <i class="fas fa-magic"></i>
                <h2>Recommandations IA pour vous</h2>
            </div>
            <p class="recommendations-subtitle">
                <i class="fas fa-brain"></i> Sélectionnés par notre algorithme d'intelligence artificielle
            </p>
        </div>
        <div class="recommendations-grid">
            {% for rec in recommendations %}
                {% set produit = rec.produit %}
                <a href="{{ path('app_front_produit_show', {id: produit.id}) }}" class="rec-card">
                    <div class="rec-badge">
                        <i class="fas fa-sparkles"></i> IA
                    </div>
                    {% if produit.image %}
                        <img src="{{ asset('uploads/' ~ produit.image) }}" alt="{{ produit.nom }}" class="rec-img">
                    {% else %}
                        <div class="rec-img-placeholder">
                            <i class="fas fa-box"></i>
                        </div>
                    {% endif %}
                    <div class="rec-content">
                        <h3>{{ produit.nom }}</h3>
                        <div class="rec-price">{{ produit.prix|number_format(2, ',', ' ') }} DT</div>
                        <div class="rec-score">
                            <i class="fas fa-star"></i> Score: {{ (rec.score * 10)|round }}%
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>
    {% endif %}
</section>

