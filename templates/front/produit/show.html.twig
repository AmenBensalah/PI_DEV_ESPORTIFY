        .p-price { font-size: 14px; font-weight: 800; color: white; }
        .bundle-ia-plus, .bundle-ia-equal { font-size: 24px; color: rgba(255,255,255,0.2); }
        .bundle-ia-plus.mini { font-size: 14px; }
