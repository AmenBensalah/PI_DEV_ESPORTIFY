{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }} – Boutique{% endblock %}

{% block body %}
<section class="shop-hero">
    <div class="shop-hero-inner">
        <div class="shop-kicker">Produit</div>
        <h1 class="shop-title">{{ produit.nom }}</h1>
        <p class="shop-lead">Découvrez les détails et ajoutez ce produit à votre arsenal.</p>
    </div>
    <div class="shop-hero-glow"></div>
</section>

<section class="shop-shell">
    <div class="product-detail-grid">
        <div class="product-media-card">
            <img src="{{ produit.image starts with 'http' ? produit.image : asset(produit.image) }}" alt="{{ produit.nom }}" onerror="this.src='https://placehold.co/600x400?text=Produit'">
        </div>

        <div class="product-info-card">
            <div class="product-badges">
                <span class="badge badge-info"><i class="fa-solid fa-tag"></i>{{ produit.categorie ? produit.categorie.nom : 'Divers' }}</span>
                {% if produit.stock == 0 %}
                    <span class="badge badge-danger">Rupture</span>
                {% elseif produit.stock < 5 %}
                    <span class="badge badge-warning">Derniers</span>
                {% endif %}
            </div>

            <h2 class="product-title">{{ produit.nom }}</h2>
            <div class="product-price">{{ produit.prix|number_format(2, '.', ' ') }} €</div>

            <div class="product-status {{ produit.stock == 0 ? 'out' : 'in' }}">
                <i class="fa-solid fa-circle"></i>
                {{ produit.stock == 0 ? 'Rupture de stock' : 'En stock' }}
            </div>

            <p class="product-description">{{ produit.description|default('—') }}</p>

            <ul class="product-features">
                <li><i class="fa-solid fa-box"></i> Stock disponible : {{ produit.stock }}</li>
                <li><i class="fa-solid fa-circle-check"></i> Statut : {{ produit.statut }}</li>
                <li><i class="fa-solid fa-shield-halved"></i> Produit officiel E‑Sportify</li>
            </ul>

            <div class="product-actions">
                <form action="{{ path('front_order_add_product', { id: produit.id }) }}" method="post" style="margin: 0;">
                    <input type="hidden" name="quantite" value="1">
                    <button type="submit" class="order-btn primary" {{ produit.stock == 0 ? 'disabled' : '' }}>
                        <i class="fa-solid fa-cart-shopping"></i> Ajouter au panier
                    </button>
                </form>
                <a href="{{ path('app_front_produit_index') }}" class="order-btn ghost">Retour à la boutique</a>
            </div>
        </div>
    </div>

    {# PRODUITS RELIÉS (Item-to-Item AI) #}
    {% if related_products is defined and related_products|length > 0 %}
    <div class="recommendations-section related-section">
        <div class="recommendations-header">
            <div class="recommendations-title">
                <i class="fas fa-link"></i>
                <h2>Produits souvent achetés avec</h2>
            </div>
            <p class="recommendations-subtitle">
                <i class="fas fa-microchip"></i> Analyse IA des relations produits
            </p>
        </div>
        <div class="recommendations-grid">
            {% for p in related_products %}
                {% if p.id != produit.id %}
                <a href="{{ path('app_front_produit_show', {id: p.id}) }}" class="rec-card related-card">
                    <div class="rec-badge related-badge">
                        <i class="fas fa-project-diagram"></i> Relié
                    </div>
                    {% if p.image %}
                        <img src="{{ p.image starts with 'http' ? p.image : asset(p.image) }}" alt="{{ p.nom }}" class="rec-img">
                    {% else %}
                        <div class="rec-img-placeholder">
                            <i class="fas fa-box"></i>
                        </div>
                    {% endif %}
                    <div class="rec-content">
                        <h3>{{ p.nom }}</h3>
                        <div class="rec-price">{{ p.prix|number_format(2, '.', ' ') }} €</div>
                    </div>
                </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    {% endif %}

    {# AI RECOMMENDATIONS (User-based) #}
    {% if app.user and recommendations is defined and recommendations|length > 0 %}
    <div class="recommendations-section">
        <div class="recommendations-header">
            <div class="recommendations-title">
                <i class="fas fa-magic"></i>
                <h2>Spécialement pour vous</h2>
            </div>
            <p class="recommendations-subtitle">
                <i class="fas fa-brain"></i> Basé sur votre historique
            </p>
        </div>
        <div class="recommendations-grid">
            {% for rec in recommendations %}
                {% set p = rec.produit %}
                {% if p.id != produit.id %}
                <a href="{{ path('app_front_produit_show', {id: p.id}) }}" class="rec-card">
                    <div class="rec-badge">
                        <i class="fas fa-sparkles"></i> IA Perso
                    </div>
                    {% if p.image %}
                        <img src="{{ p.image starts with 'http' ? p.image : asset(p.image) }}" alt="{{ p.nom }}" class="rec-img">
                    {% else %}
                        <div class="rec-img-placeholder">
                            <i class="fas fa-box"></i>
                        </div>
                    {% endif %}
                    <div class="rec-content">
                        <h3>{{ p.nom }}</h3>
                        <div class="rec-price">{{ p.prix|number_format(2, '.', ' ') }} €</div>
                        <div class="rec-score">
                            <i class="fas fa-star"></i> Match: {{ (rec.score * 10)|round }}%
                        </div>
                    </div>
                </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    {% endif %}
</section>

<!-- CHATBOT INTEGRATION FOR PRODUCT PAGE -->
<button id="chatbot-toggle-detail" class="chatbot-btn" style="display: flex !important; position: fixed !important; top: 130px !important; bottom: auto !important; right: 20px !important; z-index: 2147483647 !important; width: 70px !important; height: 70px !important; opacity: 1 !important; visibility: visible !important;">
    <i class="fas fa-robot"></i>
    <span class="pulse-ring"></span>
</button>

<div id="chatbot-window-detail" class="chatbot-window">
    <div class="chatbot-header">
        <div style="display: flex; align-items: center; gap: 10px;">
            <div class="robot-avatar"><i class="fas fa-robot"></i></div>
            <div>
                <div style="font-weight: 800; font-size: 14px; color: #fff;">NEXUS_AI</div>
                <div style="font-size: 10px; color: var(--success-color); display: flex; align-items: center; gap: 4px;">
                    <i class="fas fa-circle" style="font-size: 6px;"></i> EN LIGNE
                </div>
            </div>
        </div>
        <button id="chatbot-close-detail" style="background:none;border:none;color:#fff;cursor:pointer;"><i class="fas fa-times"></i></button>
    </div>
    <div id="chatbot-messages-detail" class="chatbot-messages">
        <div class="bot-msg">Bonjour ! Je suis Nexus_AI. Je connais tout sur le **{{ produit.nom }}**. Comment puis-je vous aider ?</div>
    </div>
    <div class="chatbot-input-area">
        <input type="text" id="chatbot-input-detail" placeholder="Posez une question sur ce produit...">
        <button id="chatbot-send-detail"><i class="fas fa-paper-plane"></i></button>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", ()=>{
        const btn = document.getElementById("chatbot-toggle-detail");
        const box = document.getElementById("chatbot-window-detail");
        const close = document.getElementById("chatbot-close-detail");
        const input = document.getElementById('chatbot-input-detail');
        const send = document.getElementById('chatbot-send-detail');
        const messages = document.getElementById('chatbot-messages-detail');

        if(btn && box) {
            btn.addEventListener("click", () => {
                box.classList.toggle("active");
                if(box.classList.contains("active") && input) input.focus();
            });
        }

        if(close && box) {
            close.addEventListener("click", () => box.classList.remove("active"));
        }

        let history = [];

        const addMessage = (content, role) => {
            const div = document.createElement('div');
            div.className = role === 'bot' ? 'bot-msg' : 'user-msg';
            div.textContent = content;
            messages.appendChild(div);
            messages.scrollTop = messages.scrollHeight;
            history.push({ role: role === 'bot' ? 'bot' : 'user', content: content });
            if (history.length > 10) history.shift();
        };

        const processChat = async () => {
            const message = input.value.trim();
            if(!message) return;
            
            addMessage(message, 'user');
            input.value = '';
            
            const loading = document.createElement('div');
            loading.className = 'bot-msg';
            loading.textContent = '...';
            messages.appendChild(loading);

            try {
                const context = "L'utilisateur regarde le produit : {{ produit.nom }}. Prix : {{ produit.prix }}€. Categorie : {{ produit.categorie ? produit.categorie.nom : 'Général' }}. Description : {{ produit.description|e('js') }}";

                const response = await fetch('/api/chatbot', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        message, 
                        history: history,
                        page: 'Produit: {{ produit.nom }}', 
                        url: window.location.href,
                        context: context
                    })
                });

                const data = await response.json();
                loading.remove();
                addMessage(data.response, 'bot');
            } catch (e) {
                loading.textContent = "Désolé, ma connexion est instable.";
            }
        };

        if(send) send.addEventListener('click', processChat);
        if(input) input.addEventListener('keypress', (e) => { if(e.key === 'Enter') processChat(); });
    });
</script>

<style>
