        </div>

        <div class="bundle-ia-container">
            <div class="bundle-ia-flow">
                {# Current Product #}
                <div class="bundle-ia-item main">
                    <img src="{{ produit.image starts with 'http' ? produit.image : asset(produit.image) }}" alt="{{ produit.nom }}">
                    <div class="item-info">
                        <span class="p-name">{{ produit.nom }}</span>
                        <span class="p-price">{{ produit.prix }} €</span>
                    </div>
                </div>

                <div class="bundle-ia-plus"><i class="fas fa-plus"></i></div>

                {# Related products list #}
                <div class="bundle-ia-related">
                    {% set bundle_total = produit.prix %}
                    {% for p in related_products %}
                        {% set bundle_total = bundle_total + p.prix %}
                        <div class="bundle-ia-item">
                            <img src="{{ p.image starts with 'http' ? p.image : asset(p.image) }}" alt="{{ p.nom }}">
                            <div class="item-info">
                                <span class="p-name">{{ p.nom }}</span>
                                <span class="p-price">{{ p.prix }} €</span>
                            </div>
                        </div>
                        {% if not loop.last %}<div class="bundle-ia-plus mini"><i class="fas fa-plus"></i></div>{% endif %}
                    {% endfor %}
                </div>

                <div class="bundle-ia-equal"><i class="fas fa-equals"></i></div>

                {# Final Bundle Price and Action #}
                <div class="bundle-ia-action">
                    <div class="bundle-price-card">
                        <div class="pricing">
                            <span class="old-price">{{ bundle_total|number_format(2) }} €</span>
                            <span class="new-price">{{ (bundle_total * 0.9)|number_format(2) }} €</span>
                        </div>
                        <span class="bundle-eco">Économisez 10% !</span>
                        
                        <form action="{{ path('front_bundle_add_to_cart') }}" method="POST">
                            <input type="hidden" name="products[]" value="{{ produit.id }}">
                            {% for p in related_products %}
                                <input type="hidden" name="products[]" value="{{ p.id }}">
                            {% endfor %}
                            <button type="submit" class="btn-bundle-ia">
                                <i class="fas fa-box-open"></i> Ajouter le Pack
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

