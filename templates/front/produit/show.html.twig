{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }} – Boutique{% endblock %}

{% block stylesheets %}
<style>
    .container { width: 90%; max-width: 900px; margin: 3rem auto; }
    .card-detail { background: rgba(255,255,255,0.05); border-radius: 20px; padding: 2rem; border: 1px solid rgba(255,255,255,0.1); }
    .card-detail img { width: 100%; max-height: 320px; object-fit: contain; border-radius: 16px; margin-bottom: 1.5rem; }
    .card-detail h2 { font-size: 1.8rem; margin-bottom: 1rem; }
    .info { display: grid; grid-template-columns: 1fr 2fr; gap: 1rem; margin-bottom: 1.5rem; }
    .info .label { font-weight: 600; color: rgba(255,255,255,0.6); }
    .btn-back { display: inline-block; padding: 12px 24px; border-radius: 10px; background: var(--primary-blue, #4361ee); color: #fff; text-decoration: none; font-weight: 600; margin-top: 1rem; }
    .btn-back:hover { filter: brightness(1.1); }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="card-detail">
        <img src="{{ produit.image starts with 'http' ? produit.image : asset(produit.image) }}" alt="{{ produit.nom }}" onerror="this.src='https://placehold.co/600x400?text=Produit'">
        <h2>{{ produit.nom }}</h2>
        <div class="info">
            <div class="label">Prix</div>
            <div class="value">{{ produit.prix|number_format(2) }} €</div>
            <div class="label">Stock</div>
            <div class="value">{{ produit.stock }}</div>
            <div class="label">Description</div>
            <div class="value">{{ produit.description|default('—') }}</div>
            <div class="label">Statut</div>
            <div class="value">{{ produit.statut }}</div>
        </div>
        <a href="{{ path('app_front_produit_index') }}" class="btn-back">← Retour à la boutique</a>
    </div>
</div>
{% endblock %}
