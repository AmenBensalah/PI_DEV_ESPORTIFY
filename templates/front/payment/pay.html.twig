{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
<section class="payment-hero">
    <div class="payment-hero-inner">
        <div class="payment-kicker">Payment</div>
        <h1 class="payment-title">Finaliser le paiement</h1>
        <p class="payment-lead">Vérifie les informations avant validation.</p>
        <div class="payment-hero-actions">
            <a href="{{ path('front_order_cart') }}" class="pay-btn ghost">Retour panier</a>
        </div>
    </div>
    <div class="payment-hero-glow"></div>
</section>

<section class="payment-shell">
    <div class="order-flow">
        <div class="order-steps">
            <div class="order-step completed">
                <span class="step-index">1</span>
                <span class="step-label">Panier</span>
            </div>
            <div class="order-step completed">
                <span class="step-index">2</span>
                <span class="step-label">Livraison</span>
            </div>
            <div class="order-step active">
                <span class="step-index">3</span>
                <span class="step-label">Paiement</span>
            </div>
            <div class="order-step">
                <span class="step-index">4</span>
                <span class="step-label">Confirmation</span>
            </div>
        </div>
        <div class="order-progress" style="--progress: 75%">
            <span></span>
        </div>
    </div>

    {% set subtotal = 0 %}
    {% for ligne in commande.lignesCommande %}
        {% set subtotal = subtotal + (ligne.prix * ligne.quantite) %}
    {% endfor %}
    {% set shipping = 0 %}
    {% set total = subtotal + shipping %}

    <div class="cart-grid">
        <div class="payment-card">
            <h2>Informations client</h2>
            <div class="payment-grid">
                <div><span>Nom</span><strong>{{ commande.nom }}</strong></div>
                <div><span>Prénom</span><strong>{{ commande.prenom }}</strong></div>
                <div><span>Téléphone</span><strong>{{ commande.numtel }}</strong></div>
                <div><span>Quantité</span><strong>{{ commande.quantite }}</strong></div>
            </div>

            <h2>Adresse</h2>
            <div class="payment-grid">
                <div><span>Pays</span><strong>{{ commande.pays }}</strong></div>
                <div><span>Gouvernorat</span><strong>{{ commande.gouvernerat }}</strong></div>
                <div><span>Code postal</span><strong>{{ commande.codePostal }}</strong></div>
                <div><span>Adresse</span><strong>{{ commande.adresse }}</strong></div>
                <div><span>Adresse exacte</span><strong>{{ commande.adresseDetail }}</strong></div>
            </div>

            <h2>Méthode de paiement</h2>
            <form id="payment-form" action="{{ path('front_payment_process', {id: commande.id}) }}" method="post">
                <div class="payment-methods">
                    <div class="payment-method">
                        <input type="radio" id="pay-card" name="payment_method" value="card" checked>
                        <label for="pay-card">
                            <i class="fa-solid fa-credit-card"></i>
                            <span>Carte Bancaire</span>
                        </label>
                    </div>
                    <div class="payment-method">
                        <input type="radio" id="pay-paypal" name="payment_method" value="paypal">
                        <label for="pay-paypal">
                            <i class="fa-brands fa-paypal"></i>
                            <span>PayPal</span>
                        </label>
                    </div>
                    <div class="payment-method">
                        <input type="radio" id="pay-cash" name="payment_method" value="cash">
                        <label for="pay-cash">
                            <i class="fa-solid fa-wallet"></i>
                            <span>Paiement à la livraison</span>
                        </label>
                    </div>
                </div>
            </form>
        </div>

        <aside class="payment-card cart-summary">
            <h2>Résumé de la commande</h2>
            <div class="summary-row">
                <span>Sous-total</span>
                <strong>{{ subtotal|number_format(2, '.', ' ') }} EUR</strong>
            </div>
            <div class="summary-row">
                <span>Livraison</span>
                <strong>{{ shipping > 0 ? (shipping|number_format(2, '.', ' ') ~ ' EUR') : 'Gratuite' }}</strong>
            </div>
            <div class="summary-row summary-total">
                <span>Total</span>
                <strong>{{ total|number_format(2, '.', ' ') }} EUR</strong>
            </div>
            <div class="summary-cta">
                <button type="submit" form="payment-form" class="pay-btn primary">Valider la commande</button>
                <a href="{{ path('front_order_cart') }}" class="pay-btn ghost">Retour au panier</a>
            </div>
        </aside>
    </div>
</section>
{% endblock %}
