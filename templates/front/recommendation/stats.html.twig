{% extends 'base.html.twig' %}

{% block title %}Données Recommandation IA – E-Sportify{% endblock %}

{% block body %}
<section class="shop-hero">
    <div class="shop-hero-inner">
        <div class="shop-kicker">Intelligence Artificielle</div>
        <h1 class="shop-title">
            <i class="fas fa-brain"></i> Données de Recommandation
        </h1>
        <p class="shop-lead">Visualisez les données collectées pour l'algorithme ML</p>
    </div>
    <div class="shop-hero-glow"></div>
</section>

<section class="shop-shell">
    <div class="stats-overview">
        <div class="stat-card">
            <div class="stat-icon blue">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ totalInteractions }}</div>
                <div class="stat-label">Interactions totales</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon pink">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ totalUsers }}</div>
                <div class="stat-label">Utilisateurs/Commandes</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon cyan">
                <i class="fas fa-box"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ totalProducts }}</div>
                <div class="stat-label">Produits achetés</div>
            </div>
        </div>
    </div>

    <div class="data-sections">
        {# SECTION 1: Top Produits #}
        <div class="data-section">
            <div class="section-header">
                <h2><i class="fas fa-fire"></i> Top Produits Populaires</h2>
                <span class="badge">ML Data Source</span>
            </div>
            <div class="data-table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Produit</th>
                            <th>Achats Totaux</th>
                            <th>Acheteurs Uniques</th>
                            <th>Score Popularité</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for i, stat in productStats|slice(0, 10) %}
                        <tr>
                            <td><span class="rank">#{{ i + 1 }}</span></td>
                            <td><strong>{{ stat.name }}</strong></td>
                            <td>{{ stat.total_quantity }}</td>
                            <td>{{ stat.unique_buyers|length }}</td>
                            <td>
                                <div class="progress-bar-container">
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: {{ stat.popularity_score }}%"></div>
                                        <span class="progress-text">{{ stat.popularity_score }}%</span>
                                    </div>
                                    <div class="stars-mini" style="margin-top: 5px;">
                                        {% for i in 1..5 %}
                                            {% if i <= stat.star_rating %}
                                                <i class="fas fa-star" style="color: #ffd60a; font-size: 10px;"></i>
                                            {% else %}
                                                <i class="far fa-star" style="color: rgba(255,255,255,0.1); font-size: 10px;"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" style="text-align: center; color: rgba(255,255,255,0.5);">
                                Aucune donnée disponible
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# SECTION 2: Interactions Détaillées #}
        <div class="data-section">
            <div class="section-header">
                <h2><i class="fas fa-exchange-alt"></i> Interactions Utilisateur-Produit</h2>
                <span class="badge cyan">{{ interactions|length }} enregistrements</span>
            </div>
            <div class="data-table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Utilisateur/Commande</th>
                            <th>Produit</th>
                            <th>Quantité</th>
                            <th>Nb Achats</th>
                            <th>Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for interaction in interactions|slice(0, 20) %}
                        <tr>
                            <td><span class="user-badge">{{ interaction.user }}</span></td>
                            <td>{{ interaction.product_name }}</td>
                            <td><span class="qty-badge">{{ interaction.quantity }}</span></td>
                            <td>{{ interaction.order_count }}</td>
                            <td>
                                <div class="score-badge">
                                    {% for i in 1..5 %}
                                        {% if i <= interaction.star_rating %}
                                            <i class="fas fa-star" style="color: #ffd60a;"></i>
                                        {% else %}
                                            <i class="far fa-star" style="color: rgba(255,255,255,0.2);"></i>
                                        {% endif %}
                                    {% endfor %}
                                    <span style="font-size: 10px; margin-left: 5px;">({{ interaction.star_rating }}/5)</span>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# SECTION 3: Stats par Utilisateur #}
        <div class="data-section">
            <div class="section-header">
                <h2><i class="fas fa-user-chart"></i> Profils d'Achat</h2>
            </div>
            <div class="user-profiles">
                {% for userId, stat in userStats|slice(0, 8) %}
                <div class="profile-card">
                    <div class="profile-header">
                        <i class="fas fa-user-circle"></i>
                        <span>{{ userId }}</span>
                    </div>
                    <div class="profile-stats">
                        <div class="profile-stat">
                            <i class="fas fa-box"></i>
                            <span>{{ stat.total_products }} produits</span>
                        </div>
                        <div class="profile-stat">
                            <i class="fas fa-shopping-cart"></i>
                            <span>{{ stat.total_quantity }} unités</span>
                        </div>
                        <div class="profile-stat">
                            <i class="fas fa-receipt"></i>
                            <span>{{ stat.orders|length }} commandes</span>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        {# INFO ML #}
        <div class="ml-info-box">
            <div class="ml-info-header">
                <i class="fas fa-robot"></i>
                <h3>Comment ces données sont utilisées ?</h3>
            </div>
            <div class="ml-info-content">
                <div class="ml-step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <strong>Collecte</strong>
                        <p>Les interactions utilisateur-produit sont extraites des commandes</p>
                    </div>
                </div>
                <div class="ml-step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <strong>Analyse</strong>
                        <p>L'algorithme KNN trouve les utilisateurs avec des goûts similaires</p>
                    </div>
                </div>
                <div class="ml-step">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <strong>Prédiction</strong>
                        <p>Recommandation des produits aimés par des utilisateurs similaires</p>
                    </div>
                </div>
                <div class="ml-step">
                    <div class="step-number">4</div>
                    <div class="step-content">
                        <strong>Scoring</strong>
                        <p>Calcul d'un score de pertinence pour chaque recommandation</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a href="{{ path('app_front_produit_index') }}" class="btn-action ghost">
                <i class="fas fa-arrow-left"></i> Retour à la boutique
            </a>
            
            {# BOUTONS DE TEST IA #}
            <button onclick="testGenerator()" class="btn-action primary">
                <i class="fas fa-magic"></i> Générer Data 2500 lignes
            </button>
            <button onclick="testItemIA()" class="btn-action cyan">
                <i class="fas fa-flask"></i> Tester Relation Item
            </button>
        </div>

        <div id="test-results" class="test-results-area" style="display: none;">
            <h3><i class="fas fa-terminal"></i> Console de Test IA</h3>
            <pre id="test-output"></pre>
        </div>
    </div>
</section>

<script>
function testGenerator() {
    const btn = event.target.closest('button');
    const out = document.getElementById('test-output');
    const area = document.getElementById('test-results');
    
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Génération...';
    
    fetch('{{ path('app_recommendation_test_gen') }}')
        .then(res => res.json())
        .then(data => {
            area.style.display = 'block';
            if(data.error) {
                out.innerHTML = "Erreur: " + data.error;
                out.className = "error";
            } else {
                out.innerHTML = data.output;
                out.className = "success";
            }
        })
        .finally(() => {
            btn.disabled = false;
            btn.innerHTML = '<i class="fas fa-magic"></i> Générer Data 2500 lignes';
        });
}

function testItemIA() {
    const btn = event.target.closest('button');
    const out = document.getElementById('test-output');
    const area = document.getElementById('test-results');
    
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Analyse...';
    
    fetch('{{ path('app_recommendation_test_item', {id: 1}) }}')
        .then(res => res.json())
        .then(data => {
            area.style.display = 'block';
            if(data.error) {
                out.innerHTML = "Erreur: " + data.error;
                out.className = "error";
            } else {
                out.innerHTML = "Input: " + data.input + "\nRecommendations: " + JSON.stringify(data.recommendations, null, 2);
                out.className = "success";
            }
        })
        .finally(() => {
            btn.disabled = false;
            btn.innerHTML = '<i class="fas fa-flask"></i> Tester Relation Item';
        });
}
</script>

<style>
