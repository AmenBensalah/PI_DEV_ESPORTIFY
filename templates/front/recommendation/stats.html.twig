    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
    }
    .btn-action {
        padding: 14px 28px;
        border-radius: 8px;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
    }
    .btn-action.primary {
        background: linear-gradient(135deg, #f72585, #ff006e);
        color: white;
        border: none;
    }
    .btn-action.cyan {
        background: linear-gradient(135deg, #4cc9f0, #4361ee);
        color: white;
        border: none;
    }
    .btn-action:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

