    .stat-icon.cyan { background: linear-gradient(135deg, #4cc9f0, #06ffa5); }
    .stat-value {
        font-size: 32px;
        font-weight: 900;
        color: white;
    }
    .stat-label {
        color: rgba(255,255,255,0.6);
