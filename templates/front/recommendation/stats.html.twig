    .test-results-area h3 {
        color: #4cc9f0;
        font-size: 16px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    #test-output {
        font-family: 'Consolas', 'Monaco', monospace;
        font-size: 13px;
        line-height: 1.6;
        padding: 15px;
        background: rgba(0,0,0,0.3);
        border-radius: 8px;
        max-height: 300px;
        overflow-y: auto;
        margin: 0;
        white-space: pre-wrap;
    }
    #test-output.success { color: #06ffa5; }
    #test-output.error { color: #f72585; }
