    }

    /* ML Info Box */
    .ml-info-box {
        background: linear-gradient(135deg, rgba(67,97,238,0.1), rgba(76,201,240,0.1));
        border: 2px solid rgba(76,201,240,0.3);
        border-radius: 15px;
        padding: 30px;
        margin-top: 20px;
    }
    .ml-info-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 25px;
    }
    .ml-info-header i {
        font-size: 28px;
        color: #4cc9f0;
    }
    .ml-info-header h3 {
        color: white;
        margin: 0;
        font-size: 20px;
    }
    .ml-info-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }
    .ml-step {
        display: flex;
        gap: 15px;
    }
    .step-number {
        width: 35px;
        height: 35px;
        background: linear-gradient(135deg, #4361ee, #4cc9f0);
        border-radius: 50%;
