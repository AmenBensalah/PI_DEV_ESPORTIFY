{% extends 'base.html.twig' %}

{% block title %}Demande de participation - {{ tournoi.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Demande de participation: {{ tournoi.name }}</h1>

    <div class="card mt-3">
        <div class="card-body">
            <form method="POST">
                <div class="mb-3">
                    <label class="form-label">Niveau du joueur</label>
                    <select name="player_level" class="form-control" required>
                        <option value="">-- Choisir --</option>
                        <option value="debutant">Debutant</option>
                        <option value="amateur">Amateur</option>
                        <option value="pro">Pro</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Message descriptif</label>
                    <textarea name="message" class="form-control" rows="4" placeholder="Decrivez votre experience, equipe, pseudo, etc." required></textarea>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="rulesAccepted" name="rules_accepted" required>
                    <label class="form-check-label" for="rulesAccepted">
                        J'accepte les regles du tournoi
                    </label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Envoyer la demande</button>
                    <a href="{{ path('tournoi_show', {id: tournoi.idTournoi}) }}" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
