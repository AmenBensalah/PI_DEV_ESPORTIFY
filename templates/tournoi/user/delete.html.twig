{% extends 'base.html.twig' %}

{% block title %}Delete Tournament{% endblock %}

{% block body %}
<section class="tournoi-hero">
    <div class="tournoi-hero-inner">
        <div class="tournoi-kicker">Danger</div>
        <h1 class="tournoi-title">Supprimer le tournoi</h1>
        <p class="tournoi-lead">Cette action est irreversible.</p>
    </div>
    <div class="tournoi-hero-glow"></div>
</section>

<section class="tournoi-shell">
    <div class="tournoi-panel">
        <div class="tournoi-alert danger">
            <h4>Confirmer la suppression</h4>
            <p>Vous allez supprimer : <strong>{{ tournoi.name }}</strong></p>
        </div>

        <form method="POST" action="{{ path('admin_tournoi_delete', {id: tournoi.idTournoi}) }}" class="tournoi-actions-row">
            <button type="submit" class="neo-btn">Oui, supprimer</button>
            <a href="{{ path('tournoi_show', {id: tournoi.idTournoi}) }}" class="neo-btn ghost">Annuler</a>
        </form>
    </div>
</section>
{% endblock %}
