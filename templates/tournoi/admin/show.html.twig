{% extends 'base.html.twig' %}

{% block title %}{{ tournoi.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1 class="mb-4">{{ tournoi.name }}</h1>

            <div class="card mb-4">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Creator</h5>
                            <p><strong>{{ tournoi.creator.username }}</strong> ({{ tournoi.creator.email }})</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Game Type</h5>
                            <p><span class="badge bg-info">{{ tournoi.typeGame }}</span></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Tournament Type</h5>
                            <p><span class="badge bg-secondary">{{ tournoi.typeTournoi|upper }}</span></p>
                        </div>
                        <div class="col-md-6">
                            <h5>Game</h5>
                            <p>{{ tournoi.game }}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Status</h5>
                            <p>
                                {% if tournoi.status == 'planned' %}
                                    <span class="badge bg-warning">Planned</span>
                                {% elseif tournoi.status == 'ongoing' %}
                                    <span class="badge bg-success">Ongoing</span>
                                {% else %}
                                    <span class="badge bg-danger">Finished</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5>Prize Pool</h5>
                            <p class="text-success"><strong>${{ tournoi.prizeWon }}</strong></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Start Date</h5>
                            <p>{{ tournoi.startDate|date('Y-m-d H:i') }}</p>
                        </div>
                        <div class="col-md-6">
                            <h5>End Date</h5>
                            <p>{{ tournoi.endDate|date('Y-m-d H:i') }}</p>
                        </div>
                    </div>

                    {% if tournoi.resultat %}
                        <div class="alert alert-success">
                            <h5>Results</h5>
                            <p><strong>Rank:</strong> {{ tournoi.resultat.rank }}</p>
                            <p><strong>Score:</strong> {{ tournoi.resultat.score }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="d-flex gap-2">
                <a href="{{ path('admin_tournoi_edit', {id: tournoi.idTournoi}) }}" class="btn btn-warning">Edit</a>
                <form method="POST" action="{{ path('admin_tournoi_delete', {id: tournoi.idTournoi}) }}" style="display:inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
                <a href="{{ path('admin_tournoi_index') }}" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
