{% extends 'base.html.twig' %}

{% block title %}{{ category }} Tournaments{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">{{ category }} Tournaments</h1>

    <a href="{{ path('admin_tournoi_index') }}" class="btn btn-secondary mb-4">‚Üê Back</a>

    <!-- Filter by Tournament Type -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="{{ path('admin_tournoi_by_category', {typeGame: category}) }}" class="btn btn-outline-primary active">All</a>
                <a href="{{ path('admin_tournoi_by_sub_category', {typeGame: category, typeTournoi: 'solo'}) }}" class="btn btn-outline-primary">Solo</a>
                <a href="{{ path('admin_tournoi_by_sub_category', {typeGame: category, typeTournoi: 'squad'}) }}" class="btn btn-outline-primary">Squad</a>
            </div>
        </div>
    </div>

    {% if tournois %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Creator</th>
                        <th>Tournament Type</th>
                        <th>Game</th>
                        <th>Status</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Prize</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tournoi in tournois %}
                        <tr>
                            <td>{{ tournoi.idTournoi }}</td>
                            <td><strong>{{ tournoi.name }}</strong></td>
                            <td>{{ tournoi.creator.username }}</td>
                            <td>
                                <span class="badge bg-secondary">{{ tournoi.typeTournoi|upper }}</span>
                            </td>
                            <td>{{ tournoi.game }}</td>
                            <td>
                                {% if tournoi.status == 'planned' %}
                                    <span class="badge bg-warning">Planned</span>
                                {% elseif tournoi.status == 'ongoing' %}
                                    <span class="badge bg-success">Ongoing</span>
                                {% else %}
                                    <span class="badge bg-danger">Finished</span>
                                {% endif %}
                            </td>
                            <td>{{ tournoi.startDate|date('Y-m-d H:i') }}</td>
                            <td>{{ tournoi.endDate|date('Y-m-d H:i') }}</td>
                            <td>${{ tournoi.prizeWon }}</td>
                            <td>
                                <a href="{{ path('admin_tournoi_show', {id: tournoi.idTournoi}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('admin_tournoi_edit', {id: tournoi.idTournoi}) }}" class="btn btn-sm btn-warning">Edit</a>
                                <form method="POST" action="{{ path('admin_tournoi_delete', {id: tournoi.idTournoi}) }}" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            <strong>No {{ category }} tournaments found.</strong>
        </div>
    {% endif %}
</div>
{% endblock %}
