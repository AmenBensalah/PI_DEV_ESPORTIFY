{% extends 'base.html.twig' %}

{% block title %}Admin - Tournaments Management{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Tournaments Management</h1>

    <div class="mb-4">
        <a href="{{ path('admin_tournoi_create') }}" class="btn btn-success">+ Create Tournament</a>
    </div>

    <!-- Filter by Category -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="{{ path('admin_tournoi_index') }}" class="btn btn-outline-primary active">All</a>
                <a href="{{ path('admin_tournoi_by_category', {typeGame: 'FPS'}) }}" class="btn btn-outline-primary">FPS</a>
                <a href="{{ path('admin_tournoi_by_category', {typeGame: 'Sports'}) }}" class="btn btn-outline-primary">Sports</a>
                <a href="{{ path('admin_tournoi_by_category', {typeGame: 'Battle_royale'}) }}" class="btn btn-outline-primary">Battle Royale</a>
                <a href="{{ path('admin_tournoi_by_category', {typeGame: 'Mind'}) }}" class="btn btn-outline-primary">Mind</a>
            </div>
        </div>
    </div>

    {% if app.flashes('success') %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endif %}

    {% if tournois %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Creator</th>
                        <th>Game Type</th>
                        <th>Tournament Type</th>
                        <th>Game</th>
                        <th>Status</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Prize</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tournoi in tournois %}
                        <tr>
                            <td>{{ tournoi.idTournoi }}</td>
                            <td><strong>{{ tournoi.name }}</strong></td>
                            <td>{{ tournoi.creator.username }}</td>
                            <td>
                                <span class="badge bg-info">{{ tournoi.typeGame }}</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">{{ tournoi.typeTournoi|upper }}</span>
                            </td>
                            <td>{{ tournoi.game }}</td>
                            <td>
                                {% if tournoi.status == 'planned' %}
                                    <span class="badge bg-warning">Planned</span>
                                {% elseif tournoi.status == 'ongoing' %}
                                    <span class="badge bg-success">Ongoing</span>
                                {% else %}
                                    <span class="badge bg-danger">Finished</span>
                                {% endif %}
                            </td>
                            <td>{{ tournoi.startDate|date('Y-m-d H:i') }}</td>
                            <td>{{ tournoi.endDate|date('Y-m-d H:i') }}</td>
                            <td>${{ tournoi.prizeWon }}</td>
                            <td>
                                <a href="{{ path('admin_tournoi_show', {id: tournoi.idTournoi}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('admin_tournoi_edit', {id: tournoi.idTournoi}) }}" class="btn btn-sm btn-warning">Edit</a>
                                <form method="POST" action="{{ path('admin_tournoi_delete', {id: tournoi.idTournoi}) }}" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            <strong>No tournaments found.</strong>
        </div>
    {% endif %}
</div>
{% endblock %}
