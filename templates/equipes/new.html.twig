{% extends 'base.html.twig' %}

{% block body_class %}page-equipes{% endblock %}

{% block title %}Créer une Équipe — E-Sportify{% endblock %}

{% block body %}
<div class="equipes-content">
    <div class="admin-form-wrapper">
        <div class="admin-form-card">
            <div class="admin-form-header">
                <div class="admin-form-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div>
                    <h1 class="admin-form-title">Ajouter une équipe</h1>
                    <p class="admin-form-subtitle">Créez votre roster et préparez vos recrutements.</p>
                </div>
            </div>

            {% for message in app.flashes('error') %}
                <div class="flash-error" role="status" aria-live="polite" style="margin:12px 0; background: rgba(255,0,110,0.06); border:1px solid var(--primary-pink); padding:10px 12px; border-radius:8px;">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="flash-success" role="status" aria-live="polite" style="margin:12px 0;">
                    {{ message }}
                </div>
            {% endfor %}

            <form id="createTeamForm" method="post" enctype="multipart/form-data">

                <div class="admin-form-grid">
                    <div>
                        <div class="admin-form-group">
                            <label class="admin-form-label"><i class="fas fa-users"></i> Nom de l'équipe <span class="required">*</span></label>
                            <input type="text" class="admin-form-input" id="teamName" name="nomEquipe" placeholder="Ex: Phoenix Warriors">
                        </div>

                        <div class="admin-form-group">
                            <label class="admin-form-label"><i class="fas fa-tag"></i> Tag de l'équipe <span class="required">*</span></label>
                            <input type="text" class="admin-form-input" id="teamTag" name="tag" placeholder="Ex: PHX"
                                   oninput="this.value = this.value.toUpperCase()" style="text-transform: uppercase;">
                        </div>

                        <div class="admin-form-group">
                            <label class="admin-form-label"><i class="fas fa-calendar-alt"></i> Date de création</label>
                            <input type="date" class="admin-form-input" id="teamDate" name="dateCreation" readonly>
                        </div>

                        <div class="admin-form-group">
                            <label class="admin-form-label"><i class="fas fa-user-friends"></i> Nombre max de membres <span class="required">*</span></label>
                            <input type="number" class="admin-form-input" id="teamMaxMembers" name="maxMembers" placeholder="Ex: 5" value="5">
                            <small class="form-help">Minimum 2, Maximum 50 membres</small>
                        </div>
                    </div>

                    <div>
                        <div class="admin-form-group">
                            <label class="admin-form-label"><i class="fas fa-medal"></i> Classement <span class="required">*</span></label>
                            <select class="admin-form-select" id="teamClassement" name="classement">
                                <option value="">Sélectionner un classement...</option>
                                <option value="Bronze">Bronze</option>
                                <option value="Argent">Argent</option>
                                <option value="Or">Or</option>
                                <option value="Platine">Platine</option>
                                <option value="Diamant">Diamant</option>
                                <option value="Master">Master</option>
                                <option value="Challenger">Challenger</option>
                            </select>
                        </div>

                        <div class="admin-form-group">
                            <label class="admin-form-label"><i class="fas fa-globe"></i> Région</label>
                            <select class="admin-form-select" id="teamRegion" name="region">
                                <option value="">Sélectionner une région...</option>
                                <option value="Asia">Asia</option>
                                <option value="Europe">Europe</option>
                                <option value="Middle East">Middle East</option>
                                <option value="North America">North America</option>
                                <option value="South America">South America</option>
                                <option value="Oceania">Oceania</option>
                                <option value="Africa">Africa</option>
                            </select>
                        </div>

                        <div class="admin-form-group">
                            <label class="admin-form-label"><i class="fas fa-lock"></i> Visibilité</label>
                            <div class="team-visibility">
                                <label class="team-toggle">
                                    <input type="checkbox" id="teamPrivate" name="isPrivate" onchange="updateVisibilityLabel()">
                                    <span class="team-toggle-slider"></span>
                                </label>
                                <div>
                                    <div class="team-visibility-label" id="visibilityLabel">Équipe publique</div>
                                    <div class="team-visibility-text" id="visibilityDescription">Tout le monde peut voir et demander à rejoindre votre équipe</div>
                                </div>
                            </div>
                        </div>

                        <div class="admin-form-group">
                            <label class="admin-form-label"><i class="fas fa-image"></i> Logo de l'équipe</label>
                            <div class="admin-upload-box" id="logoUploadBox">
                                <div class="admin-upload-preview" id="logoPreview"></div>
                                <div class="admin-upload-placeholder">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                    <span>Cliquez ou glissez une image ici</span>
                                    <small>PNG, JPG, GIF — max 5MB</small>
                                </div>
                                <input type="file" class="admin-upload-input" id="logoInput" name="logo" accept="image/*" onchange="previewLogo(this)">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="admin-form-group">
                    <label class="admin-form-label"><i class="fas fa-align-left"></i> Description</label>
                    <textarea class="admin-form-textarea" id="teamDescription" name="description" placeholder="Décrivez votre équipe..."></textarea>
                </div>

                <div class="admin-form-actions">
                    <a href="{{ path('app_equipes_index') }}" class="admin-form-cancel"><i class="fas fa-arrow-left"></i> Annuler</a>
                    <button type="submit" class="admin-form-submit"><i class="fas fa-check-circle"></i> Créer mon équipe</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function updateVisibilityLabel() {
        const checkbox = document.getElementById('teamPrivate');
        const label = document.getElementById('visibilityLabel');
        const desc = document.getElementById('visibilityDescription');
        if (!checkbox || !label || !desc) return;

        if (checkbox.checked) {
            label.textContent = "Équipe privée";
            desc.textContent = "Seulement sur invitation ou lien direct";
        } else {
            label.textContent = "Équipe publique";
            desc.textContent = "Tout le monde peut voir et demander à rejoindre votre équipe";
        }
    }

    function previewLogo(input) {
        const preview = document.getElementById('logoPreview');
        const box = document.getElementById('logoUploadBox');
        if (!preview || !input.files || !input.files[0]) return;

        const reader = new FileReader();
        reader.onload = function(event) {
            preview.innerHTML = `<img src="${event.target.result}" alt="Aperçu logo">`;
            preview.style.display = 'block';
            if (box) box.classList.add('has-preview');
        };
        reader.readAsDataURL(input.files[0]);
    }

    const teamDateInput = document.getElementById('teamDate');
    if (teamDateInput) {
        teamDateInput.valueAsDate = new Date();
    }
</script>
{% endblock %}
